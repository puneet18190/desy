<%
  div_id = empty ? '' : "id=\"video_component_#{identifier}_cutter\""
  to = empty ? 0 : component[:video].min_duration
%>

<div class="contentCutter _video_component_cutter" data-from="0" data-to="<%= to %>" style="display:none" <%= div_id.html_safe %>>
  <div class="cutter">
    <a class="left"></a>
    <a class="play _media_player_play_in_video_editor_preview upper"><%= t('captions.play') %></a>
    <a class="pause _media_player_pause_in_video_editor_preview upper"><%= t('captions.pause') %></a>
    <a class="done _media_player_done_video_component_in_video_editor_preview upper"><%= t('captions.done') %></a>
    <div class="videoSlider _media_player_slider"></div>
    <a class="right"></a>
    <div class="sliderDisabler _media_player_slider_disabler" style="display: none;"></div>
    <div class="videoDoubleSlider _double_slider"></div>
  </div>
  <p><%= t('captions.total_clip_length') %> <span class="_video_editor_cutter_total_time"><%= seconds_to_time(to) %></span></p>
  <p><%= t('captions.selected') %> <span class="_video_editor_cutter_selected_time"><%= seconds_to_time(to) %></span></p>
</div>

<% if !empty %>
  <script type="text/javascript">
    initializeVideoInVideoEditorPreview(<%= identifier %>);
  </script>
<% end %>
