<div class="header">
  <div class="contenitore">
    <h1 class="fltlft upper"><%= t("captions.video_editor_label") %></h1>
    <div id="video_editor_title" class="testo fltlft">
      <% if parameters[:initial_video].nil? %>
        <span class="_untitled"><%= t('captions.new_element_untitled') %></span>
      <% else %>
        <span class="_untitled" style="display:none"><%= t('captions.new_element_untitled') %></span>
        <span class="_titled"><%= parameters[:initial_video].title %></span>
      <% end %>
    </div>
    <div class="fltrt"><a class="esciButton _exit_video_editor"></a></div>
  </div>
</div>
