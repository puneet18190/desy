<%
  colors = []
  CONFIG['colors'].each do |k, v|
    colors[v['pos'] - 1] = k
    
  end
%>

<div id="text_component_preview" class="contentInsertText background_color_white" data-background-color="white" data-text-color="black">
  <textarea class="color_black" cols="30" rows="2" maxlength="60"><%= t('captions.insert_text') %></textarea>
</div>

<div class="menuTexts">
  <div class="elementoTime">
    <div class="tempo _duration_selector">
      <p><%= t('captions.time') %></p>
      <input class="numberTime"/>
      <p class="lower"><%= t('captions.sec') %></p>
    </div>
  </div>
  <div class="elementoGrigio">
    <div class="scegliBgColor _text_component_in_video_editor_background_color_selector">
      <p><%= t('captions.background_color') %></p>
      <% colors.each do |color| %>
        <div class="background_color_<%= color %> _color <%= (color == 'white') ? 'current'.html_safe : '' %>" data-color="<%= color %>"></div>
      <% end %>
    </div>
  </div>
  <div class="elementoGrigio">
    <div class="scegliTxtColor _text_component_in_video_editor_text_color_selector">
      <p><%= t('captions.text_color') %></p>
      <% colors.each do |color| %>
        <div class="background_color_<%= color %> _color <%= (color == 'black') ? 'current'.html_safe : '' %>" data-color="<%= color %>"></div>
      <% end %>
    </div>
  </div>
  <div class="bottoniVerdi fltrt"><a class="upper"><%= t('captions.insert') %></a></div>
</div>
