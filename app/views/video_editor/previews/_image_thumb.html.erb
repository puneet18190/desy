<%
  horizontal = is_horizontal? image.width, image.height, 'video_component_preview'
  height = resize_height image.width, image.height, 'video_component_preview'
  width = resize_width image.width, image.height, 'video_component_preview'
  offset = horizontal ? ((width - 640) / 2) : ((height - 360) / 2)
%>

<% if horizontal %>
  <%= image_tag image.path, :style => "right:-#{offset}px; height:360px; width:#{width}px" %>
<% else %>
  <%= image_tag image.path, :style => "bottom:-#{offset}px; height:#{height}px; width:640px" %>
<% end %>
