<%
  horizontal = image.is_horizontal? 'video_component_preview'
  height = image.resize_height 'video_component_preview'
  width = image.resize_width 'video_component_preview'
  offset = horizontal ? ((width - 640) / 2) : ((height - 360) / 2)
%>

<% if horizontal %>
  <%= image_tag image.url, :style => "right:-#{offset}px; height:360px; width:#{width}px" %>
<% else %>
  <%= image_tag image.url, :style => "bottom:-#{offset}px; height:#{height}px; width:640px" %>
<% end %>
