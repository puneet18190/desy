<%
  ogg = ''
  mp3 = ''
  duration = 0
  if audio_track
    ogg = audio_track.ogg_path
    mp3 = audio_track.mp3_path
    duration = audio_track.min_duration
  end
%>

<div style="display:none" class="_audio_track_preview" data-duration="<%= duration %>">
  <audio>
    <source src="<%= ogg %>" type="audio/ogg">
    <source src="<%= mp3 %>" type="audio/mp3">
    <%= t('captions.your_browser_does_not_support_audio') %>
  </audio>
</div>
