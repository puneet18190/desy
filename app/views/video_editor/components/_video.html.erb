<div class="contatore"><%= position %></div>
<div class="boxMediaElement">
  <div class="boxContentMediaElement">
    <a><%= image_tag component[:video].cover %></a>
    <%= render :partial => 'video_editor/component_menu', :locals => {:component => component, :position => position} %>
  </div>
  <%= hidden_field_tag "component_#{position}", component[:component] %>
  <%= hidden_field_tag "video_#{position}", component[:video].id %>
  <%= hidden_field_tag "from_#{position}", component[:from] %>
  <%= hidden_field_tag "until_#{position}", component[:until] %>
</div>
