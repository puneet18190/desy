<div class="lista _video_editor_component" id="video_component_<%= position %>">
  <div class="contatore"><%= position %></div>
  <div class="boxMediaElement">
    <div class="boxContentMediaElement">
      <%= image_tag component[:image].thumb %>
      <%= render :partial => 'video_editor/component_menu', :locals => {:component => component, :position => position} %>
			<%= render :partial => 'video_editor/choose_new_component' %>
      <div class="photoIcon _video_editor_component_icon"></div>
    </div>
    <%= hidden_field_tag "type_#{position}", component[:type] %>
    <%= hidden_field_tag "image_#{position}", component[:image].id %>
    <%= hidden_field_tag "duration_#{position}", component[:duration] %>
    <%= hidden_field_tag "position_#{position}", position %>
  </div>
  <div class="separatore"><%= image_tag("arrow_element_timeline.png") %></div>
</div>
