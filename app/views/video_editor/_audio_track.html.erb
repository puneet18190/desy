<%
  title = ''
  string_duration = ''
  duration = 0
  style_full = 'display:none'
  style_empty = 'display:block'
  if parameters[:audio_track]
    title = parameters[:audio_track].title
    duration = parameters[:audio_track].min_duration
    string_duration = seconds_to_time(duration)
    style_full = 'display:block'
    style_empty = 'display:none'
  end
%>

<div id="full_audio_track_placeholder_in_video_editor" data-duration="<%= duration %>" class="fltlft" style="<%= style_full %>">
  <div class="audioButton current _show_audio_gallery_in_video_editor"  title="<%= t('general_titles.add_element_title') %>"></div>
  <div class="titleTrack _title"><%= title %><br/><%= string_duration %></div>
  <div class="fltlft">
    <a class="exitButton _remove" title="<%= t('general_titles.remove_element_title') %>">&nbsp;</a>
  </div>
</div>

<div id="empty_audio_track_placeholder_in_video_editor" class="fltlft" style="<%= style_empty %>">
  <a class="creaNuovoButton _show_audio_gallery_in_video_editor"></a>
  <p style="padding-top:10px"><%= t('captions.add_audio_track') %><br>
  <span style="color:#3a393a"><%= t('captions.audio_track_in_video_editor') %></span></p>
</div>
