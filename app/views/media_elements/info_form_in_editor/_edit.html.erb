<div id="form_info_update_media_element_in_editor" class="_<%= media_element.sti_type %> formInfoMediaElementEditor" style="display:none" data-title="<%= media_element.title %>" data-description="<%= media_element.description %>" data-tags="<%= media_element.tags %>">
  <div class="contentFormInfoMediaElementEditor">
     <div class="titleFormInfo">
      <div class="<%= media_element.sti_type.downcase %>Icon pull-left">&nbsp;</div>
      <h1 class="pull-left"><%= t 'captions.updating_media_element'%></h1>
      <br style="clear:float">
      <h2 class="pull-left"><%= t 'captions.change_media_element_info'%></h2>
    </div>
    <div id="error_messages"></div>
    <div class="cols" style="float:left">
      <%= text_field_tag 'update_title', media_element.title %>
      <%= hidden_field_tag 'update_title_placeholder', '' %>
      <br>
      <%= text_area_tag 'update_description', media_element.description %>
      <%= hidden_field_tag 'update_description_placeholder', '' %>
    </div>
    <div class="cols" style="float:right">
      <%= text_area_tag 'update_tags', media_element.tags %>
      <%= hidden_field_tag 'update_tags_placeholder', '' %>
    </div>
    <br class="clearfloat">
    <div class="cols" style="float:right">
      <a class="_cancel buttonForm lower"><%= t('captions.cancel') %></a>
      <a class="_commit buttonForm lower"><%= t('captions.update') %></a>
    </div>
  </div>
</div>
