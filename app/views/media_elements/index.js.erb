<% if @delete_item.blank? %>
  $('#my_media_elements').hide('fade', {}, 500, function() {
    $('#my_media_elements').replaceWith("<%= j(render(:partial => "media_elements/my_media_elements")) %>");
  });
<% else %>
  var to_delete = $('#<%= @delete_item %>');
  to_delete.hide('scale', {percent: 0}, 500, function() {
    $('#my_media_elements').replaceWith("<%= j(render(:partial => "media_elements/my_media_elements")) %>");
  });
<% end %>

$('#info_container').data('currenturl', '<%= remove_param_from_url(request.url, 'delete_item') %>');

<% if @display == Formats::EXPANDED %>
  $('#display_expanded_media_elements').addClass('current');
  $('#display_compact_media_elements').removeClass('current');
<% end %>

<% if @display == Formats::COMPACT %>
  $('#display_compact_media_elements').addClass('current');
  $('#display_expanded_media_elements').removeClass('current');
<% end %>
