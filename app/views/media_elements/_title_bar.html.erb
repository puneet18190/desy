<div class="title-bar" id="media_elements_title_bar">
  <h1 style="width:40%" class="lower"><%= t('captions.media_elements') %></h1>
  <p id="format_media_elements">
    <%= t('media_elements.display_mode.title') %>: <%= link_to t('media_elements.display_mode.large'), '/media_elements?display=expanded', :class => (@display == MediaElement::DISPLAY_MODES[:expanded] ? 'current' : ''), :id => 'display_expanded_media_elements', :remote => true %> - <%= link_to t('media_elements.display_mode.small'), '/media_elements?display=compact', :class => (@display == MediaElement::DISPLAY_MODES[:compact] ? 'current' : ''), :id => 'display_compact_media_elements', :remote => true %>
  </p>
  <div style="padding-left:20px">
    <h2 style="padding-right:10px" class="lower"><%= t('media_elements.display') %></h2>
    <div class="selectDisplay">
      <select name="display" id="for_page_media_elements">
        <% @for_page_options.each do |f| %>
          <option value="<%= f %>" <%= (@for_page == f) ? "selected=\"selected\"".html_safe : '' %>><%= f %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div>
    <h2 style="padding-right:10px"><%= t('captions.show') %></h2>
    <select name="ricerca" id="filter_media_elements">
      <% Filters::MEDIA_ELEMENTS_SET.each do |f| %>
        <% caption = Filters::CAPTIONS[f] %>
        <option value="<%= f %>" <%= (@filter == f) ? "selected=\"selected\"".html_safe : '' %>><%= caption %></option>
      <% end %>
    </select>
  </div>
</div>
