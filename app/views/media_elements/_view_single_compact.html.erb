<div class="contentInterno <%= lesson.status == t('status.lessons.copied') ? 'current' : '' %>">
  <h3><%= lesson.title %></h3>
  <p><%= lesson.subject.description %></p>
  <p><%= lesson.status %></p>
  <%= render :partial => "shared/action_buttons", :locals => {:item => media_element} %>
</div>
<div class="lessons-expanded _lesson_expanded">
  <%= render :partial => "media_elements/thumbnails/small", :locals => {:media_element => media_element} %>
  <div class="info-text">
    <h1>Created on</h1>
    <%= TimeConvert.to_string(lesson.created_at) %>
    <p>stella <%= lesson.likes.count %><br>people like this lesson</p>
  </div>
  <div class="description-text">
    <h1>Description</h1>
    <p><%= lesson.description %></p>
  </div>
</div>
