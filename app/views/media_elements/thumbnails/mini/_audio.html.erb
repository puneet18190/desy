<div id="mini_thumb_media_element_<%= item.id %>" class="mini_thumb audio">
  <%= image_tag item.thumb_url %>
  <audio data-m4a="<%= item.m4a_url %>" data-ogg="<%= item.ogg_url %>">
    <source src="<%= item.m4a_url %>" type="audio/m4a">
    <source src="<%= item.ogg_url %>" type="audio/ogg">
  </audio>
</div>
