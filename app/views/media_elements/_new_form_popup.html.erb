          <br>
          <%= f.text_area :description, placeholder: t('forms.media_element.labels.description') %>
        </div>
        <div class="cols fltrt">
          <h1><%= t('forms.media_element.title') %></h1>
          <p style="padding-bottom:15px"><%= t('forms.media_element.notes') %></p>
          <%= f.text_area :tags, placeholder: t('forms.media_element.labels.tags') %>
          <br>
          <%= f.submit t('forms.media_element.submit') %> or <a class="_close" data-dialog-id="load-media-element">cancel</a>
        </div>
      <% end %>
    </div>
  </div>
