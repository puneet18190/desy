<div id="found_lessons">
  <% if lessons.empty? %>
    <%= render :partial => 'search/lessons/empty', :locals => {:word => word} %>
  <% else %>
    <% lessons.each do |l| %>
      <%= render :partial => 'lessons/view_single_compact', :locals => {:lesson => l, :destination => ButtonDestinations::FOUND_LESSON} %>
    <% end %>
  <% end %>
</div>
