var container = $('#lesson_editor_document_gallery_container');
var current_slide = $('li._lesson_editor_current_slide');
container.html("<%= j(render :partial => 'galleries/document', :locals => {:documents => @documents, :documents_slides => @documents_slides}) %>");
container.show();
$('li._lesson_editor_current_slide .slide-content').children().hide();
centerThis('#lesson_editor_document_gallery_container');
current_slide.find('layer').remove();
container.data('loaded', true);
container.data('page', 1);
container.data('tot-pages', <%= @tot_pages %>);
$('._close_document_gallery').addClass('_close_document_gallery_in_lesson_editor');
<% if @documents.count > 6 %>
  initializeDocumentGalleryInLessonEditor();
<% else %>
  $('.document_gallery .scroll-pane').css('overflow', 'hidden');
<% end %>
