<script>
  window.onload = function() {
    <% if @errors %>
      top.uploadDoneLessonEditor('#load-gallery-document', <%= @errors.to_json.html_safe %>);
    <% else %>
      var html_content = "<%= j(render :partial => 'galleries/contents/document', :locals => {:documents => @documents, :empty => false, :display_docs => ['block', 'none']}) %>";
      top.uploadDoneLessonEditor('#load-gallery-document', undefined, html_content, <%= @tot_pages %>, <%= @documents.count %>, <%= @document_id %>);
    <% end %>
  }
</script>
