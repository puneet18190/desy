<div class="videoInGalleryPopUp" id="dialog-video-gallery-<%= video.id %>" data-video-id="<%= video.id %>">
  <%= render :partial => 'shared/players/video', :locals => {:video => video, :initialize_now => false} %>
  <div class="caption">
    
    <p><%= video.title %></p>
  </div>
  <a class="addButtonContent current _select_video_from_gallery video-<%= video.id %>" data-video-id="<%= video.id %>" data-mp4="<%= video.mp4_url %>" data-webm="<%= video.webm_url %>" data-duration="<%= video.min_duration %>" style="float:right"  title="<%= t('general_titles.add_element_title') %>"></a>
</div>
