<script>
  window.onload = function() {
    <% if @errors %>
      top.uploadDoneLessonEditor('#load-gallery-image', <%= @errors.to_json.html_safe %>);
    <% else %>
      var html_content = "<%= render :partial => 'galleries/image', :locals => {:images => @images} %>";
      top.uploadDoneLessonEditor('#load-gallery-image', undefined, html_content, <%= @tot_pages %>);
    <% end %>
  }
</script>
