<script>
  window.onload = function() {
    <% if @errors %>
      top.uploadDoneLessonEditor($('#load-gallery-image'), <%= @errors ? @errors.to_json.html_safe : 'undefined' %>);
    <% else %>
      var html_content = "<%= j(render :partial => 'galleries/image', :locals => {:images => @images}) %>";
      top.uploadDoneLessonEditor($('#load-gallery-image'), undefined, function() {
        reloadGalleryInLessonEditor($('#load-gallery-image'), 'image', html_content, <%= @tot_pages %>, <%= @images.count %>);
      });
    <% end %>
  }
</script>
