<script>
  window.onload = function() {
    <% if @errors %>
      top.uploadDoneLessonEditor('#load-gallery-audio', <%= @errors.to_json.html_safe %>);
    <% else %>
      var html_content = "<%= j(render :partial => 'galleries/audio', :locals => {:audios => @audios}) %>";
      top.uploadDoneLessonEditor('#load-gallery-audio', undefined, html_content, <%= @tot_pages %>);
    <% end %>
  }
</script>
