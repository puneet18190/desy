var slide_id = $('#info_container').data('slide-id');

var current_slide = $('#slide_in_lesson_editor_' + slide_id);
current_slide.children().hide(); 
current_slide.prepend("<%= j(render :partial => 'galleries/audio', :locals => {:audios => @audios}) %>");
current_slide.siblings(".buttons").hide();
$("#slide-numbers").hide();

$('._close_audio_gallery').addClass('_close_audio_gallery_in_lesson_editor').removeClass('_close_audio_gallery');
$('._select_audio_from_gallery').addClass('_add_audio_to_slide').removeClass('_select_audio_from_gallery');

initializeAudioGallery();
