 <div class="dots_pagination_container" id="general_pagination" style="display:block">
  <span class="dots_pagination">
    <span role="pages">
      <% if page <= 1 && page >= pages_amount %>
        <a data-page="<%= page-1 %>" role="disabled"></a><a data-page="<%= page %>" role="current" title="<%= t('titles.pagination.this_page', :page => page) %>"></a><a data-page="<%= page+1 %>" role="disabled"></a>
      <% elsif page <= 1 %>
        <a data-page="<%= page-1 %>" role="disabled"></a><a data-page="<%= page %>" role="current" title="<%= t('titles.pagination.this_page', :page => page) %>"></a><a data-page="<%= page+1 %>" title="<%= t('titles.pagination.next_page', :page => page + 1) %>"></a>
      <% elsif page >= pages_amount %>
        <a data-page="<%= page-1 %>" title="<%= t('titles.pagination.prev_page', :page => page - 1) %>"></a><a data-page="<%= page %>" role="current" title="<%= t('titles.pagination.this_page', :page => page) %>"></a><a data-page="<%= page+1 %>" role="disabled"></a>
      <% else %>
        <a data-page="<%= page-1 %>" title="<%= t('titles.pagination.prev_page', :page => page - 1) %>"></a><a data-page="<%= page %>" role="current" title="<%= t('titles.pagination.this_page', :page => page) %>"></a><a data-page="<%= page+1 %>" title="<%= t('titles.pagination.next_page', :page => page + 1) %>"></a>
      <% end %>
    </span>
  </span>
  
</div>


<script type="text/javascript">
  
  $(document).ready(function() {
    var prevPage = function(prevPage) {
      var url = <%= manipulate_request_url(remove_query_param: 'delete_item', page: page - 1).to_json.html_safe %>;
      $.get(url);
      return true;
    }
    var nextPage = function(nextPage) {
      var url = <%= manipulate_request_url(remove_query_param: 'delete_item', page: page + 1).to_json.html_safe %>;
      $.get(url);
      return true;
    }
    new DotsPagination($('[role=pages]'), <%= j pages_amount.to_s %>, prevPage, nextPage);
  });
  
</script>
