<div id="image-gallery" class="image_gallery #{kind_of}-kind">
  <div class="header">
    <h3 class="pull-left">
      <%= image_tag("choose-image-small.png")%> <%= t "captions.select_#{kind_of}" %>
    </h3>
  </div>
  <div class="scrollVerde">
    <ul class="gallery">
      <div class="scroll-pane">
        <% @media_elements.each do |mel| %>
          <li id="#gallery_thumb_<%=mel.id%>" class="_gallery_thumb">
            <%= link_to (image_tag "testa.jpg", :width => '111'), "#{mel.id}" %>
            <%= render :partial => "shared/image_gallery_popup", :locals => {:media_element => mel, :kind_of => kind_of} %>
          </li>
        <% end %>
      </div>
    <ul>
  </div>    
  <div class="footer">
    <div class="pull-right"><a href="#" class="_close_image_gallery exitButtonWhite"></a></div>
  </div>
</div>
