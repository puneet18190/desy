<div class="header-main">
  <% logo_path = current_user.trial? ? 'logo_trial.gif' : 'logo.gif' %>
  <a href="<%= dashboard_path %>" class="header-link">
    <span class="vertical-aligner"></span>
    <%= image_tag(logo_path) %>
  </a>
  <% if current_user.trial? -%>
    <div class="freeTrial"><%= t('users.trial.expiration', :days => current_user.trial_to_expiration.to_s).html_safe %></div>
  <% end -%>
  <div class="logout">
    <div class="fltlft">
      <span class="nome"><%= current_user.name %></span>
      <span class="cognome"><%= current_user.surname %></span>
     <br class="clearfloat">
      <% if current_user.trial? %>
        <%= link_to t('users.trial.header_link'), my_trial_path %> | <!-- TODO traduzz -->
      <% end %>
      <%= link_to t('registration.logout'), users_session_path, method: :delete %>
      <% if current_user.admin? %>
        | <%= link_to t('admin.general.link'), '/admin' %>
      <% end %>
      </div>
      <div id="profile_link" class="fltrt">
        <%= image_tag('logo_profile.png') %>
        <span class="profileLink fltrt"><%= link_to t('captions.profile'), my_profile_path %></span>
      </div>
    </div>
    <br style="clear: both" />
  </div>
</div>
