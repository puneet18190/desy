<div class="logout">
  <span class="lower"><%= t('captions.welcome') %></span>
  <span class="nome"><%= current_user.name %></span>
  <span class="cognome"><%= current_user.surname %></span>
  <br class="clearfloat">
  <%= link_to t('registration.logout'), users_session_path, method: :delete %>
