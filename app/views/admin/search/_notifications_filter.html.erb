<div class="control-group heading">
  <label><h5><%= t('admin.search.heading.general')%></h5></label>
</div>
<div class="control-group">
  <label for="subject"><%= t('admin.search.subject')%></label>
  <div class="controls">
    <select id="search_subject_id" name="search[subject_id]">
      <option value=''><%= t('admin.search.select_subject')%></option>
      <% Subject.all.each do |subject| %>
      <% if params[:search].present? && (params[:search][:subject_id].to_i == subject.id.to_i) %>
        <option value="<%= subject.id %>" selected="selected">
      <%else%>
        <option value="<%= subject.id %>">
      <%end%>
          <%= subject.description %>
        </option>
      <%end%>
    </select>
  </div>
</div>
<div class="control-group">
  <label for="school_level_id"><%= t('admin.search.school_level') %></label>
  <div class="controls">
    <select id="school_level" name="search[school_level_id]">
      <option value=''><%= t('admin.search.select_school_level') %></option>
      <% SchoolLevel.all.each do |level|%>
        <option value="<%= level.id %>"><%= level.description %></option>
      <% end %>
    </select>
  </div>
</div>
<div class="control-group">
  <label for="school_level_id">Registration date</label>
  <div class="controls">
    <select id="school_level" name="search[school_level_id]">
      <option value=''>Select an option</option>
      <option value='today'>today</option>
      <option value='1.week.ago'>last week</option>
      <option value='1.month.ago'>last month</option>
      <option value='1.week.ago'>last year</option>
    </select>
  </div>
</div>