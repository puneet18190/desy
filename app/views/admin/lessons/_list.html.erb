<% if lessons.count > 0 %>
  <table id="lessons-list" class="table table-striped table-hover">
  <thead>
    <tr>
      <th>
        <a class="icon-chevron-up" href="id ASC"></a><br>
        id<br>
        <a class="icon-chevron-down" href="id DESC"></a>
      </th>
      <th>
        title <div class="badge"><a class="icon-chevron-up" href="title ASC"></a></div> <div class="badge"><a class="icon-chevron-down" href="title DESC"></a></div>
      </th>
      <th><%= link_to "subject", "subjects.name", :class=>'ASC' %></th>
      <th><%= link_to "user", "users.name", :class=>'ASC' %></th>
      <th><%= link_to "location", "locations.province_name", :class=>'ASC' %></th>
      <th><%= link_to "school", "locations.school_name", :class=>'ASC' %></th>
      <th>
        <a class="icon-chevron-up" href="created_at ASC"></a> <a class="icon-chevron-down" href="created_at DESC"></a><br>
        created_at
      </th>
      <th>
        <a class="icon-chevron-up" href="updated_at ASC"></a> <a class="pull-right icon-chevron-down" href="updated_at DESC"></a><br>
        updated_at
      </th>
      <th><%= link_to "likes", "count(likes)", :class=>'ASC' %></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% lessons.each do |lesson| %>

        <tr class="collapse">
          <td><%= lesson.id %></td>
          <td><%= lesson.title%></td>
          <td><%= lesson.subject.description %></td>
          <td><%= lesson.user.full_name %></td>
          <td><%= lesson.user.province %> - <%= lesson.user.town %></td>
          <td><%= lesson.user.school %></td>
          <td><%= lesson.created_at.strftime('%d-%m-%Y')%></td>
          <td><%= lesson.updated_at.strftime('%d-%m-%Y')%></td>
          <td><%= lesson.likes.count%></td>
          <td><%= link_to '<i class="icon-eye-open"></i>'.html_safe, "/lessons/#{lesson.id}/view",:target => :blank, :class=>"action"%><a href="#" target="_blank" class="action"></a></td>
          <td><%= link_to '<i class="icon-remove"></i>'.html_safe, "#", :class=>"action"%></td>
        </tr>
        <tr class="collapsed">
          <td colspan="10">
            <div class="row-fluid">
              <div class="span3">
                <div class="img-polaroid lesson-thumbnail">
                  <%= render :partial => "lessons/thumbnail", :locals => {:lesson => lesson} %>
                </div>
              </div>
              <div class="span3">
                <h5><%= t('admin.general.tags')%></h5>
                <% lesson.tags.split(',').each do |tag| %>
                  <% if tag.length > 0%>
                    <%= tag %>, 
                  <% end %>
                <% end %>
              </div>
              <div class="span6">
                <h5><%= t('admin.general.description')%></h5>
                <%= lesson.description %>
              </div>
            </div>
          <td>
        </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <%= t('admin.lessons.index.not_found') %>
<% end %>