<% if lessons.count > 0 %>
  <table id="lessons-list" class="table table-striped table-hover">
  <thead>
    <tr>
      <th>
        id<br> 
        <a class="label" href="id ASC">▲</a>
        <a class="label" href="id DESC">▼</a>
      </th>
      <th>
        title<br>
        <a class="label" href="title ASC">▲</a>
        <a class="label" href="title DESC">▼</a>
      </th>
      <th>
        subject<br>
        <a class="label" href="subject_id ASC">▲</a>
        <a class="label" href="subject_id DESC">▼</a>
      </th>
      <th>user<br>
        <a class="label" href="user_id ASC">▲</a>
        <a class="label" href="user_id DESC">▼</a>
      </th>
      <th>
        location<br>
        <a class="label" href="location_id ASC">▲</a>
        <a class="label" href="location_id DESC">▼</a>
      </th>
      <th>
        school<br>
        <a class="label" href="location_id ASC">▲</a>
        <a class="label" href="location_id DESC">▼</a>
      </th>
      <th>
        created_at<br>
        <a class="label" href="created_at ASC">▲</a>
        <a class="label" href="created_at DESC">▼</a>
      </th>
      <th>
        updated_at<br>
        <a class="label" href="updated_at ASC">▲</a>
        <a class="label" href="updated_at DESC">▼</a>
      </th>
      <th>
        likes<br>
        <a class="label" href="likes_count_all ASC">▲</a>
        <a class="label" href="likes_count_all DESC">▼</a>
      </th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% lessons.each do |lesson| %>

        <tr class="collapse">
          <td><%= lesson.id %></td>
          <td><%= lesson.title%></td>
          <td><%= lesson.subject.description %></td>
          <td><%= lesson.user.full_name %></td>
          <td><%= lesson.user.school %></td>
          <td><%= lesson.user.province %> - <%= lesson.user.town %></td>
          <td><%= lesson.created_at.strftime('%d-%m-%Y')%></td>
          <td><%= lesson.updated_at.strftime('%d-%m-%Y')%></td>
          <td><%= lesson.likes.count%></td>
          <td><%= link_to '<i class="icon-eye-open"></i>'.html_safe, "/lessons/#{lesson.id}/view",:target => :blank, :class=>"action"%><a href="#" target="_blank" class="action"></a></td>
          <td><%= link_to '<i class="icon-remove"></i>'.html_safe, "#", :class=>"action"%></td>
        </tr>
        <tr class="collapsed">
          <td colspan="10">
            <div class="row-fluid">
              <div class="span3">
                <div class="img-polaroid lesson-thumbnail">
                  <%= render :partial => "lessons/thumbnail", :locals => {:lesson => lesson} %>
                </div>
              </div>
              <div class="span3">
                <h5><%= t('admin.general.tags')%></h5>
                <% lesson.tags.split(',').each do |tag| %>
                  <% if tag.length > 0%>
                    <%= tag %>, 
                  <% end %>
                <% end %>
              </div>
              <div class="span6">
                <h5><%= t('admin.general.description')%></h5>
                <%= lesson.description %>
              </div>
            </div>
          <td>
        </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <%= t('admin.lessons.index.not_found') %>
<% end %>