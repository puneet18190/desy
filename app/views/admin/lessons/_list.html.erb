<% if lessons.count > 0 %>
  <table id="lessons-list" class="table table-striped table-hover table-bordered table-rounded">
    <thead>
      <tr>
        <th>
          <%= render :partial => 'admin/ordering', :locals => {:name => t('admin.lessons.fields.id'), :param => 'id'} %>
        </th>
        <th>
          <%= render :partial => 'admin/ordering', :locals => {:name => t('admin.lessons.fields.title'), :param => 'title'} %>
        </th>
        <th>
          <%= render :partial => 'admin/ordering', :locals => {:name => t('admin.lessons.fields.subject'), :param => 'subject_id'} %>
        </th>
        <th>
          <%= render :partial => 'admin/ordering', :locals => {:name => t('admin.lessons.fields.user'), :param => 'user_id'} %>
        </th>
        <th>
          <%= render :partial => 'admin/ordering', :locals => {:name => t('admin.lessons.fields.created_at'), :param => 'created_at'} %>
        </th>
        <th>
          <%= render :partial => 'admin/ordering', :locals => {:name => t('admin.lessons.fields.updated_at'), :param => 'updated_at'} %>
        </th>
        <th>
          <%= render :partial => 'admin/ordering', :locals => {:name => t('admin.lessons.fields.likes'), :param => 'likes'} %>
        </th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <a name="list-anchor"></a>
      <% lessons.each do |lesson| %>
          <tr class="collapse" id="<%= lesson.id %>">
            <td><%= lesson.id %></td>
            <td><%= lesson.title %></td>
            <td><%= lesson.subject.description %></td>
            <td><%= link_to lesson.user.full_name, admin_user_path(lesson.user_id), :target => :blank, :class => '_user_link_in_admin' %></td>
            <td><%= lesson.created_at.strftime('%d-%m-%Y') %></td>
            <td><%= lesson.updated_at.strftime('%d-%m-%Y') %></td>
            <td><%= lesson.likes.count%></td>
            <td><%= link_to '<i class="icon-eye-open"></i>'.html_safe, "/lessons/#{lesson.id}/view?token=#{lesson.token}", :target => :blank, :class => 'action' %><a href="#" target="_blank" class="action"></a></td>
            <td><%= link_to '<i class="icon-remove"></i>'.html_safe, admin_lesson_path(lesson), :method => :delete, :remote => true, :confirm => t('admin.lessons.delete_confirm'), :class=>"action"%></td>
          </tr>
          <tr class="collapsed">
            <td colspan="11">
              <div class="row-fluid">
                <div class="span3">
                  <div class="img-polaroid lesson-thumbnail">
                    <%= render :partial => "lessons/thumbnail", :locals => {:lesson => lesson} %>
                  </div>
                </div>
                <div class="span3">
                  <h5><%= t('admin.lessons.fields.tags') %></h5>
                  <% lesson.tags.split(',').each do |tag| %>
                    <% if tag.length > 0%>
                      <%= tag %>, 
                    <% end %>
                  <% end %>
                </div>
                <div class="span6">
                  <h5><%= t('admin.lessons.fields.description') %></h5>
                  <%= lesson.description %>
                </div>
              </div>
            </td>
          </tr>
      <% end %>
    </tbody>
  </table>
  <% if params[:search].present? && params[:search][:id].present? %>
    <script type="text/javascript" charset="utf-8">
      openAndLoadNextTr($('tr#<%=params[:search][:id] %>'));
    </script>
  <% end %>
<% else %>
  <div class="widget">
    <%= t('admin.lessons.empty') %>
  </div>
<% end %>
