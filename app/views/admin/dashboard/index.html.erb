<h3><%= t('admin.dashboard.title') %></h3>
<div class="row-fluid">
  <div class="span6">
    <div class="row-fluid">
      <div class="span12 widget">
        <table class="table">
          <thead>
            <th><h4><%= t('admin.dashboard.general.title') %></h4></th>
            <th></th>
          </thead>
          <tbody>
            <tr>
              <td><%= t('admin.dashboard.general.shared_lessons') %></td>
              <td width="50"><span class="counter-label lessons"><%= format('%02d', @all_shared_lessons) %></span></td>
            </tr>
            <tr>
              <td><%= t('admin.dashboard.general.shared_media_elements') %></td>
              <td width="50"><span class="counter-label elements"><%= format('%02d', @all_shared_elements) %></span></td>
            </tr>
            <tr>
              <td><%= t('admin.dashboard.general.total_users') %></td>
              <td width="50"><span class="counter-label"><%= format('%02d', @all_users) %></span></td>
            </tr>
            <tr>
              <table class="table">
                <thead>
                  <th><h4><%= t('admin.dashboard.likes.lessons') %></h4></th>
                  <th></th>
                </thead>
                <tbody>
                  <% @all_liked_lessons.each do |liked| %>
                    <tr>
                      <td><%= liked.title %></td>
                      <td width="50"><span class="counter-label lessons"><%= format('%02d', liked.likes_count) %></span></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </tr>
            <tr>
              <table class="table">
                <thead>
                  <th><h4><%= t('admin.dashboard.likes.users') %></h4></th>
                  <th></th>
                </thead>
                <tbody>
                  <% @all_users_like.each do |u| %>
                    <tr>
                      <td><%= u.name %> <%= u.surname %></td>
                      <td width="50"><span class="counter-label"><%= format('%02d', u.likes_count) %></span></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="row-fluid">
        <div class="span6 widget">
          <h4><%= t('admin.dashboard.users.online') %></h4>
          <!-- TODO (where login_time > logout_time)-->
          <ul class="list">
            <% @users.each do |user| %>
              <li><%= link_to "#{user.name} #{user.surname}", admin_user_path(user) %></li>
            <% end %>
          </ul>
        </div>
        <div class="span6 widget">
          <h4><%= t('admin.dashboard.users.new') %></h4>
          <ul class="list">
            <% @users.each do |user| %>
              <li><%= link_to "#{user.name} #{user.surname}", admin_user_path(user) %><span class=" pull-right"><%= user.created_at.strftime('%d/%m/%y') %></span></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="span6">
    <div class="row-fluid">
      <div class="span12 widget">
        <table class="table">
      <thead>
        <th colspan="2"><h4><%= t('admin.dashboard.subjects') %></h4></th>
      </thead>
      <tbody>
        <tr>
          <td>
            <% (0..@all_subjects_chart.count - 1).each do |index| %>
              <blockquote class="legend" style="border-color: <%=Subject.chart_colors[index]%>">
                <div class="pull-left"><%= @all_subjects_desc[index] %></div>
                <div class="pull-right"><%= @all_subjects_chart[index] %></div>
              </blockquote>
            <% end %>
          </td>
          <td><span class="pie" data-text="<%= @all_subjects_desc %>" data-diameter="250" class="fltrt"><%= @all_subjects_chart.to_s[1..-2].gsub('"','') %></span></td>
        </tr>
      </tbody>
    </table>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span6 widget">
        <h4><%= t('admin.dashboard.reports.lessons') %></h4>
        <% @elements_reports.each do |report| %>
          <a href="/admin/elements?utf8=✓&search%5Bsearch_type%5D=elements&search%5Bordering%5D=id+DESC&search%5Bid%5D=<%=report.reportable.id%>&search%5Btitle%5D=&search%5Bsti_type%5D=&search%5Buser%5D=&search%5Bdate_range_field%5D=&search%5Bprovince_id%5D=#list-anchor">
            <blockquote class="elements">
              <div class="pull-right date-label elements">
                <%= report.created_at.strftime('%d %b')%>
              </div>
              <%= report.user.name+' '+report.user.surname %><br />
              <b>on:</b> <%=report.reportable.title %><br/ >
              <b>report:</b> <i><%= report.comment %></i>
            </blockquote>
          </a>
        <% end %>
      </div>
      <div class="span6 widget">
        <h4><%= t('admin.dashboard.reports.media_elements') %></h4>
        <% @lessons_reports.each do |report| %>
          <a href="/admin/lessons?utf8=✓&search%5Bsearch_type%5D=lessons&search%5Bordering%5D=id+DESC&search%5Bid%5D=<%=report.reportable.id%>&search%5Btitle%5D=&search%5Bsubject_id%5D=&search%5Buser%5D=&search%5Bdate_range_field%5D=&search%5Bprovince_id%5D=#list-anchor">
            <blockquote class="lessons">
              <div class="pull-right date-label lessons">
                <%= report.created_at.strftime('%d %b')%>
              </div>
              <%= report.user.name+' '+report.user.surname %><br />
              <b>on:</b> <%=report.reportable.title %><br/ >
              <b>report:</b> <i><%= report.comment %></i>
            </blockquote>
          </a>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
  $.fn.peity.defaults.pie = {
    colours: <%= Subject.chart_colors.to_json.html_safe %>,
    diameter: 250
  }
  $('span.pie').peity('pie');
</script>
