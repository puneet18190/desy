<%= render :partial => 'menu', :locals => {:current => 'subjects'} %>

<h4>MANAGE SUBJECTS</h4>

<ul class="nav nav-tabs nav-stacked subjects">
  <% @subjects.each do |subject| %>
  <li id="subject-<%= subject.id %>" data-param="<%= subject.id %>">
    <a>
      <%= subject.description %>
      <% if subject.is_deletable? %>
        <i class="pull-right icon-remove"></i>
      <% end %>
    </a>
  </li>
  <% end %>
</ul>

<%= form_tag '/admin/settings/subjects/new', :class=>"form-inline" do %>
  <%= text_field_tag :description, '',:class=>"input-xlarge", :placeholder => "subject description" %>
  <%= submit_tag "Add new subject", :class=>"btn"%>
<% end %>