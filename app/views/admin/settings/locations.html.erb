<%= render :partial => 'menu', :locals => {:current => 'locations'} %>

<h4>Search locations</h4> <!-- TODO traduzz -->
<div class="search-foam">
  <div class="row-fluid">
    <%= form_tag 'locations', :method => :get, :id => 'admin-search-locations' do %>
      Search by id: <%= text_field_tag 'selected', '' %> <!-- TODO traduzz -->
      <%= submit_tag 'daje!' %> <!-- TODO -->
    <% end %>
  </div>
  <div class="row-fluid">
    <%= form_tag 'locations', :method => :get, :id => 'admin-search-locations' do %>
      Search a  <!-- TODO traduzz -->
      <select name="search_by_code_type">
        <% SETTINGS['location_types'].each do |location| %>
          <option value="<%= location %>"><%= location %></option>
        <% end %>
      </select>
      by code: <%= text_field_tag 'search_by_code', '' %> <!-- TODO traduzz -->
      <%= submit_tag 'daje!' %> <!-- TODO -->
    <% end %>
  </div>
</div>

<h3>Locations!</h3> <!-- TODO traduzz -->
<table class="outer_locations table table-striped table-bordered table-rounded">
  <tbody>
    <tr>
      <% (0...(SETTINGS['location_types'].length)).to_a.each do |i| %>
        <th>
          <%= Location.label_at(i) %>
        </th>
      <% end %>
    </tr>
    <tr>
      <% (0...(SETTINGS['location_types'].length)).to_a.each do |i| %>
        <td>
          <% if !@locations[i].nil? %>
            <table class="inner_locations">
              <tbody>
                <% @locations[i][:content].each do |l| %>
                  <%= render :partial => 'location', :locals => {:location => l, :selected => (l.id == @locations[i][:selected])} %>
                <% end %>
              </tbody>
            </table>
          <% end %>
        </td>
      <% end %>
    </tr>
    <tr>
      <% SETTINGS['location_types'].each_with_index do |location, index| %>
        <% if !@locations[index].nil? %>
          <td id="create_admin_location_<%= location.downcase %>">
            <table class="create_admin_location_form" style="display:none">
              <tbody>
                <tr>
                  <td>
                    name: <input class="create_admin_location_name" type="text" value=""> <!-- TODO traduzz -->
                  </td>
                  <td>
                    code: <input class="create_admin_location_code" type="text" value=""> <!-- TODO traduzz -->
                  </td>
                  <td>
                    <a class="create_admin_location_form_done" data-location-type="<%= location.downcase %>" data-location-type-for-form="<%= location %>" data-location-parent="<%= (index != 0) ? @locations[index - 1][:selected] : '' %>">create</a> <!-- TODO traduzz -->
                  </td>
                </tr>
              </tbody>
            </table>
            <a class="create_admin_location" data-location-type="<%= location.downcase %>">Add <%= Location.label_at(index).downcase %></a> <!-- TODO traduzz -->
          </td>
        <% end %>
      <% end %>
    </tr>
  </tbody>
</table>
