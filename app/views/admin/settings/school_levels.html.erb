<%= render :partial => 'menu', :locals => {:current => 'school_levels'} %>

<ul class="nav nav-tabs nav-stacked school_levels">
  <% @school_levels.each do |level| %>
  <li id="level-<%=level.id%>" data-param="<%=level.id%>">
    <a>
      <%= level.description %>
      <% if level.is_deletable? %>
        <i class="pull-right icon-remove"></i>
      <% end %>
    </a>
  </li>
  <% end %>
</ul>

<%= form_tag '/admin/settings/school_levels/new', :class=>"form-inline" do %>
  <%= text_field_tag :description, '',:class=>"input-xlarge", :placeholder => "school level description" %>
  <%= submit_tag "Add new school level", :class=>"btn"%>
<% end %>