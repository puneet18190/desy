<%
  title_max = t('forms.placeholders.title', :num => t('language_parameters.media_element.length_title').to_s)
  description_max = t('forms.placeholders.description', :num => t('language_parameters.media_element.length_description').to_s)
  tags_max = t('forms.placeholders.tags', :items => SETTINGS['min_tags_for_item'].to_s, :num => SETTINGS['max_tag_length'].to_s)
%>

<div class="row-fluid">
  <div class="span3">
    <h3><%= t('admin.elements.new.upload_caption')%></h3>
    <%= form_tag '/admin/elements/quick_upload', :method => :post, :id => 'new-elements', :multipart => true do %>
      <label for="title"><%= title_max %></label>
      <%= text_field_tag 'title', '' %><br />
      <label for="description"><%= description_max %></label>
      <%= text_area_tag 'description', '' %><br />
      <label for="tags"><%= tags_max %></label>
      <%= text_area_tag 'tags', '', :maxlength => SETTINGS['max_tag_length'], :class => 'lower' %><br />
      <label for="file"><%= t('admin.elements.new.file_to_upload')%></label> <%= file_field_tag "media", multiple: true %><br />
      <%= submit_tag t('forms.upload_media_element.done').downcase, :class=>"btn _new_element_form_submit", :style=>"display:none" %>
    <% end %>
    <blockquote>
      <%= t('admin.elements.new.upload_hint') %>
    </blockquote>
  </div>
  <div class="span9 new_elements_well">
    <div class="row-fluid">
    <h3><%= t('admin.elements.new.new_elements') %></h3>
    <div id="new_elements_preview" class="well">
      <% @files.each do |file| %>
        <%= render :partial => 'element_update', :locals => {:file => file, :colspan => 4} %>
      <% end %>
      <div style="clear:both">
    </div>
  </div>
</div>
