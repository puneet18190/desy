<% if elements.count > 0 %>
  <table id="elements-list" class="table table-striped table-hover table-bordered table-rounded">
    <thead>
      <tr>
        <th>
          <div class="pull-left list-heading">id</div>
          <div class="pull-right">
            <a href="id ASC"><i class="icon-chevron-up"></i></a><br>
            <a href="id DESC"><i class="icon-chevron-down"></i></a>
          </div>
        </th>
        <th>
          <div class="pull-left list-heading">title</div>
          <div class="pull-right">
            <a href="title ASC"><i class="icon-chevron-up"></i></a><br>
            <a href="title DESC"><i class="icon-chevron-down"></i></a>
          </div>
        </th>
        <th>
          <div class="pull-left list-heading">media type</div>
          <div class="pull-right">
            <a href="sti_type ASC"><i class="icon-chevron-up"></i></a><br>
            <a href="sti_type DESC"><i class="icon-chevron-down"></i></a>
          </div>
        </th>
        <th>
          <div class="pull-left list-heading">user</div>
          <div class="pull-right">
            <a href="user_id ASC"><i class="icon-chevron-up"></i></a><br>
            <a href="user_id DESC"><i class="icon-chevron-down"></i></a>
          </div>
        </th>
        <th>
          <div class="pull-left list-heading">location</div>
          <div class="pull-right">
            <a href="location_id ASC"><i class="icon-chevron-up"></i></a><br>
            <a href="location_id DESC"><i class="icon-chevron-down"></i></a>
          </div>
        </th>
        <th>
          <div class="pull-left list-heading">school</div>
          <div class="pull-right">
            <a href="location_id ASC"><i class="icon-chevron-up"></i></a><br>
            <a href="location_id DESC"><i class="icon-chevron-down"></i></a>
          </div>
        </th>
        <th>
          <div class="pull-left list-heading">created_at</div>
          <div class="pull-right">
            <a href="created_at ASC"><i class="icon-chevron-up"></i></a><br>
            <a href="created_at DESC"><i class="icon-chevron-down"></i></a>
          </div>
        </th>
        <th>
          <div class="pull-left list-heading">updated_at</div>
          <div class="pull-right">
            <a href="updated_at ASC"><i class="icon-chevron-up"></i></a><br>
            <a href="updated_at DESC"><i class="icon-chevron-down"></i></a>
          </div>
        </th>
        <th>
          <div class="pull-left list-heading">public</div>
          <div class="pull-right">
            <a href="is_public ASC"><i class="icon-chevron-up"></i></a><br>
            <a href="is_public DESC"><i class="icon-chevron-down"></i></a>
          </div>
        </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% elements.each do |element| %>
      <tr class="collapse">
        <td><%= element.id %></td>
        <td><%= element.title%></td>
        <td><%= element.sti_type%></td>
        <td><%= element.user.surname %> <%= element.user.name %></td>
        <td><%= element.user.school %></td>
        <td><%= element.user.province %> - <%= element.user.town %></td>
        <td><%= element.created_at.strftime('%d-%m-%Y')%></td>
        <td><%= element.updated_at.strftime('%d-%m-%Y')%></td>
        <td>
          <% if !element.is_public %>
          <a href="#" class="_publish_list_element action" title="publish" data-param="<%= element.id %>"><i class="icon-globe"></i></a>
          <% end %>
        </td>
        <td>
          <% link_to '<i class="icon-remove"></i>'.html_safe, '#',:confirm => t('admin.general.ask_for_delete'), :class=>"_delete_list_element action","data-param"=>element.id %>
        </td>
      </tr>
      <div style="clear:both;"></div>
      <tr class="collapsed">
        <td colspan="10">
          <div class="row-fluid">
          <div class="span3">
            <div id="element_<%=element.id%>_preview" class="element-thumbnail" data-param="<%=element.id%>"></div>
          </div>
          <div class="span3">
            <h5>Tags</h5>
            <% element.tags.split(',').each do |tag| %>
              <% if tag.length > 0%>
                <%= tag %>, 
              <% end %>
            <% end %>
          </div>
          <div class="span6">
            <h5>Description</h5>
            <%= element.description %>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <div class="widget">
    <%= t('admin.elements.index.not_found') %>
  </div>
<% end %>