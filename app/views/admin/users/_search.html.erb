<h4><%= t('admin.search.label')%></h4>
<%= form_tag :class=>"form-vertical" do%>
  <div class="row-fluid">
    <div class="span1">
      <div class="control-group">
        <label for="id"><%= t('admin.search.id')%></label>
        <div class="controls">
          <%= text_field_tag 'id', :class=>'input-mini', :placeholder => t('admin.search.id') %>
        </div>
      </div>
    </div>
    <div class="span2">
      <div class="control-group">
        <label for="user"><%= t('admin.search.user')%></label>
        <div class="controls">
          <input type="text" class="input-medium" name="user" placeholder="User">
        </div>
      </div>
    </div>
    <div class="span3">
      <div class="control-group">
        <label for="subject"><%= t('admin.search.subject')%></label>
        <div class="controls">
          <select name=subject>
            <% Subject.all.each do |subject| %>
              <option><%= subject.description %></option>
            <%end%>
          </select>
        </div>
      </div>
    </div>
    <div class="span2">
      <div class="controls-group">
        <label><%= t('admin.search.date_range')%></label>
        <div class="controls">
          <select class="input-medium">
            <option><%= t('admin.search.created_at')%></option>
            <option><%= t('admin.search.updated_at')%></option>
          </select>
        </div>
      </div>
    </div>
    <div class="span2">
      <div class="control-group">
        <label><%= t('admin.search.date_from')%></label>
        <div class="controls">
          <input class='input input-medium' type="text" value="<%=Time.now.strftime('%d-%m-%Y')%>" id="dp1" data-date="<%=Time.now.strftime('%d-%m-%Y')%>" data-date-format="dd-mm-yyyy">
        </div>
      </div>
    </div>
    <div class="span2">
      <div class="control-group">
        <label><%= t('admin.search.date_to')%></label>
        <div class="controls">
          <input  class='input input-medium' type="text" value="<%=Time.now.strftime('%d-%m-%Y')%>" id="dp2" data-date="<%=Time.now.strftime('%d-%m-%Y')%>" data-date-format="dd-mm-yyyy">
        </div>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="control-group">
        <label for="province_list">Province</label>
        <div class="controls">
          <select id="province_list">
            <%= render :partial => 'admin/users/locations_list', :locals => {:parent => nil} %>
          </select>
        </div>
      </div>
      <div class="control-group">
        <label for="town_list">Town</label>
        <div class="controls">
          <select id="town_list">
            
          </select>
        </div>
      </div>
      <div class="control-group">
        <label for="school_list">School</label>
        <div class="controls">
          <select id="school_list">
            
          </select>
        </div>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="form-actions">
        <button type="submit" class="btn"><%= t('admin.search.submit')%></button>
        <%= link_to t('admin.users.index.send_message_to_all'), "/admin/users/contact?users=#{@total_users.pluck('id')}", :class => "btn btn-primary pull-right"%>
      </div>
    </div>
  </div>
  <% end %>
