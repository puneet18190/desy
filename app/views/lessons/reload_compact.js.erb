<% if @ok %>
  var target = $('#<%= @destination %>_<%= @lesson_id %>');
  var old_html_params = target.data('htmlparams');
  <% js_content = j(render(:partial => "lessons/view_single_compact", :locals => {:lesson => @lesson, :destination => @destination, :container => @container, :html_params => ''})) %>
  target.replaceWith("<%= js_content %>");
  target.data('htmlparams', old_html_params);
<% else %>
  showErrorPopUp('<%= @error %>');
<% end %>
