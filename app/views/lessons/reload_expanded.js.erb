<% if @ok %>
  <% js_content = j(render(:partial => "lessons/view_single_expanded", :locals => {:lesson => @lesson, :destination => @destination})) %>
  var target = $('#<%= @destination %>_<%= @lesson_id %>');
  target.replaceWith("<%= js_content %>");
<% else %>
  showErrorPopUp('<%= @error %>');
<% end %>
