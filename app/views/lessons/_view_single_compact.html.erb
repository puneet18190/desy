<% current_class = (lesson.status == :copied) ? 'current' : '' %>

<div id="<%= destination %>_<%= lesson.id %>" class="boxViewSingleLesson <%= current_class %>">
  
  <div class="contentInterno _lesson_compact">
    <h3><%= lesson.title %></h3>
    <p><%= lesson.subject.description %></p>
    <p><%= STATUSES.lessons.send(lesson.status) %></p>
    <%= render :partial => "lessons/action_buttons", :locals => {:lesson => lesson, :destination => destination} %>
  </div>
  
  <div class="lessons-expanded _lesson_expanded">
    <%= render :partial => "shared/lesson_thumbnails/small/cover", :locals => {:slide => lesson.cover} %>
    <div class="info-text">
      <h1>Created on</h1>
      <%= TimeConvert.to_string(lesson.created_at) %>
      <p>
        <span class="fltlft"><%= image_tag "star.png", :align => "left" %></span>
        <span class="fltlft" style="padding-top:2px"><%= lesson.likes.count %></span>
        <br class="clearfloat">
        people like this lesson
      </p>
      <% if lesson.is_reportable %>
        <%= render :partial => "reports/lesson", :locals => {:lesson => lesson} %>
      <% end %>
    </div>
    <div class="description-text">
      <% if [:public, :linked].include?(lesson.status) %>
        <div class="intestazione">
          <h1><%= t('captions.author') %>:</h1>
          <p><%= lesson.user.full_name %></p>
          <h1><%= t('captions.institute') %>:</h1>
          <p><%= lesson.user.school %></p>
          <h1><%= t('captions.level') %>:</h1>
          <p class="fltlft"><%= lesson.school_level.description %></p>
        </div>
        <br class="clearfloat">
      <% end %>
      <h1><%= t('captions.description') %></h1>
      <p><%= lesson.description %></p>
    </div>
  </div>
  
</div>
