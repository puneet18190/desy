<%
  image = lesson.cover.image_at(1)
  author = lesson.user
  subject = lesson.subject
  image_height = resize_height(image.media_element.width, image.media_element.height, "cover") if !image.nil?
  image_width = resize_width(image.media_element.width, image.media_element.height, "cover") if !image.nil?
  image_alignment = image.alignment / 4.12 if !image.nil?
%>

<div class="img_expanded _lesson_thumb _lesson_<%=lesson.id%>" data-lesson-id="<%= lesson.id %>">
  <% if !image %>
    <div style="width:247px; height:143px; background-color:white"></div>
  <% else %>
    <div class="cover">
      <% if is_horizontal?(image.media_element.width, image.media_element.height, "cover") %>
        <%= image_tag image.media_element.url, :style => "left:#{image_alignment}px; height: 143px; width: #{image_width /4.12}px" %>
      <% else %>
        <%= image_tag image.media_element.url, :style => "top:#{image_alignment}px; width: 247px; height: #{image_height /4.12}px" %>
      <% end %>
    </div>
  <% end %>
  <div class="bg_text">
    <div class="lessonTitle"><%= lesson.title %></div>
  </div>
  <div class="lessonSubject">
    <%= lesson.subject.description %>
    <span>
      <%= t('lessons.author') %>: <strong><%= lesson.user.full_name %></strong>
    </span>
  </div>
</div>
