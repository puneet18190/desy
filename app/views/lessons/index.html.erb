<div class="gray-bar">
  <%= render :partial => "lessons/graybar_left" %>
  <%= render :partial => "shared/search" %>
</div>
<br class="clearfloat">
<div class="griglia-contenuti">
  <div class="lessons-content">
    <div class="title-bar">
      <h1 class="lower"><%= t('captions.lessons') %></h1>
      <p><%= t('captions.matter') %></p>
      <p><%= t('captions.status') %></p>
      <div style="float:right"><h2 style="padding-right:10px"><%= t('captions.show') %></h2>
        <select name="ricerca" id="filter_lessons">
          <% counter = true %>
          <% Filters::LESSONS_SET.each do |f| %>
            <% caption = Filters::CAPTIONS[f] %>
            <option value="<%= f %>" <%= counter ? "selected=\"selected".html_safe : '' %>><%= caption %></option>
            <% counter = false %>
          <% end %>
        </select>
      </div>
    </div>
    <br class="clearfloat">
    <%= render :partial => "lessons/my_lessons" %>
    <div id="info_container" style="display:none" data-currenturl="<%= request.url %>"></div>
    <br class="clearfloat">
    <% if @lessons.any? %>
      <%= render :partial => 'shared/pagination', :locals => {:page => @page, :pages_amount => @pages_amount, :pagination_url => remove_param_from_url(request.url, 'delete_item')} %>
    <% end %>
  </div>
</div>
