<% if @ok %>
  <% expanded = false %>
  <% if @where == 'dashboard' %>
    <% expanded = true %>
    var target = $('#lesson_expanded_<%= @lesson_id %> .<%= @button_class %>');
  <% else %>
    var target = $('#lesson_compact_<%= @lesson_id %> .<%= @button_class %>');
  <% end %>
  terget.html("<%= escape_javascript(render(:partial => "lessons/view_single", :locals => {:lesson => @lesson, :expanded => expanded})) %>");
<% else %>
  showErrorPopUp(<%= @error %>, 'Error!!');
<% end %>
