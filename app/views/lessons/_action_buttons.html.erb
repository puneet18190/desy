<div class="menuController" id="lesson_menu_buttons_<%= lesson.id %>">
  <% cont = 0 %>
  <% lesson.buttons.each do |b| %>
    <%= render :partial => "shared/buttons/#{b}", :locals => {:item => lesson, :destination => destination} %>
    <% cont += 1 %>
  <% end %>
    <% while cont < 6 %>
    <%= image_tag 'hidden.png' %>
    <% cont += 1 %>
  <% end %>
</div>
