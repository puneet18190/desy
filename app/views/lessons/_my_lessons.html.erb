<div id="my_lessons">
  <% if @lessons.empty? %>
    <% if @filter == Filters::ALL_LESSONS %>
      <%= render :partial => "lessons/empty" %>
    <% else %>
      <%= render :partial => "lessons/empty_filter" %>
    <% end %>
  <% else %>
    <% @lessons.each do |l| %>
      <%= render :partial => "lessons/view_single_compact", :locals => {:lesson => l, :destination => ButtonDestinations::COMPACT_LESSON} %>
    <% end %>
    <%= render :partial => 'shared/pagination', :locals => {:page => @page, :last_page => @last_page, :first_page => (@page == 1), :pagination_url => remove_param_from_url(request.url, 'delete_item')} %>
  <% end %>
</div>
