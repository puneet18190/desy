<li id="notification_<%= notification.id %>" class="_single_notification" data-param="<%= notification.id %>">
  <div class="notification_gatto expanded <%= notification.seen ? 'current'.html_safe : '' %>"><div style="overflow:hidden; width:210px; height:45px;"><%= strip_tags notification.message.html_safe %></div></div>
  <div class="cancelTooltip _destroy_notification" data-param="<%= notification.id %>" title="<%= t('titles.notifications.remove') %>"></div>
  <div class="_expanded_notification" style="display:none">
    <%= notification.message.html_safe %>
  </div>
</li>
