<span class="tooltip" id="tooltip_content" data-offset="<%= @offset_notifications %>" data-lastpage="<%= @notifications_last_page %>">
  <%= image_tag("freccia_tooltip.png", :class => "callout") %>
  <div class="list">
    <ul class="navlist">
      <div class="scroll-pane">
        <% @notifications.each do |n| %>
          <%= render :partial => "notifications/notification", :locals => {:notification => n} %>
        <% end %>
      </div>
    </ul>
  </div>
</span>
