<%
  url_type ||= nil
  image = slide.image_at(1)
  image_height = resize_height(image.media_element.width, image.media_element.height, 'image3') if !image.nil?
  image_width = resize_width(image.media_element.width, image.media_element.height, 'image3') if !image.nil?
%>


<div class="slide-content image3 normal-size">
  
  <div class="item image-container">
    <div class="image read-only">
      <% if image %>
        <%
          url = image.media_element.url(url_type)
          effective_url = loaded ? "src=\"#{url}\"".html_safe : ''
        %>
        <% if is_horizontal?(image.media_element.width, image.media_element.height, 'image3') %>
          <img style="left:<%= image.alignment %>px; width:<%= image_width %>px" data-url="<%= url %>" alt="<%= image.media_element.title %>" <%= effective_url %>>
        <% else %>
          <img style="top:<%= image.alignment %>px; height:<%= image_height %>px" data-url="<%= url %>" alt="<%= image.media_element.title %>" <%= effective_url %>>
        <% end %>
        <% if !image.caption.blank? %>
          <input class="caption" type="text" value="<%= image.caption %>" disabled="disabled">
        <% end %>
      <% end %>
    </div>
  </div>
  
</div>
