<%
  url_type ||= nil
  image1, image2 = slide.media_elements_at
  image_height1 = resize_height(image1.media_element.width, image1.media_element.height, 'image2') if !image1.nil?
  image_width1 = resize_width(image1.media_element.width, image1.media_element.height, 'image2') if !image1.nil?
  image_height2 = resize_height(image2.media_element.width, image2.media_element.height, 'image2') if !image2.nil?
  image_width2 = resize_width(image2.media_element.width, image2.media_element.height, 'image2') if !image2.nil?
%>


<div class="slide-content image2 normal-size">
  
  <div class="item image-container">
    <div class="image read-only">
      <% if image1 %>
        <%
          url1 = image1.media_element.url(url_type)
          effective_url1 = loaded ? "src=\"#{url1}\"".html_safe : ''
        %>
        <% if is_horizontal?(image1.media_element.width, image1.media_element.height, 'image2') %>
          <img style="left:<%= image1.alignment %>px; width:<%= image_width1 %>px" data-url="<%= url1 %>" alt="<%= image1.media_element.title %>" <%= effective_url1 %>>
        <% else %>
          <img style="top:<%= image1.alignment %>px; height:<%= image_height1 %>px" data-url="<%= url1 %>" alt="<%= image1.media_element.title %>" <%= effective_url1 %>>
        <% end %>
        <% if !image1.caption.blank? %>
          <input class="caption" type="text" value="<%= image1.caption %>" disabled="disabled">
        <% end %>
      <% end %>
    </div>
  </div>
  
  <div class="item image-container" style="margin-right:0">
    <div class="image read-only">
      <% if image2 %>
        <%
          url2 = image2.media_element.url(url_type)
          effective_url2 = loaded ? "src=\"#{url2}\"".html_safe : ''
        %>
        <% if is_horizontal?(image2.media_element.width, image2.media_element.height, 'image2') %>
          <img style="left:<%= image2.alignment %>px; width:<%= image_width2 %>px" data-url="<%= url2 %>" alt="<%= image2.media_element.title %>" <%= effective_url2 %>>
        <% else %>
          <img style="top:<%= image2.alignment %>px; height:<%= image_height2 %>px" data-url="<%= url2 %>" alt="<%= image2.media_element.title %>" <%= effective_url2 %>>
        <% end %>
        <% if !image2.caption.blank? %>
          <input class="caption" type="text" value="<%= image2.caption %>" disabled="disabled">
        <% end %>
      <% end %>
    </div>
  </div>
  
</div>
