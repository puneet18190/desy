<%
  url_type ||= nil

  video = slide.video_at(1)
%>


<div class="slide-content video1 normal-size">
  
  <div class="item title-container">
    <input class="title read-only" type="text" value="<%= slide.title %>" disabled="disabled">
  </div>
  
  <div class="item video-container">
    <div class="video read-only">
      <% if video %>
        <% if video.converted? %>
          <%= render :partial => 'shared/players/video', :locals => {:video => video, :initialize_now => true, url_type: url_type} %>
        <% else %>
          <%= image_tag video.placeholder_url(:lesson_viewer_small, url_type), :title => t('titles.not_available.video', :title => video.title) %>
        <% end %>
      <% end %>
    </div>
  </div>
  
  <div class="item text-container read-only">
    <%= slide.text.html_safe if slide.text %>
  </div>
  
  <% if slide.documents_slides.count > 0 %>
    <%= render :partial => 'lesson_viewer/documents', :locals => {:documents_slides => slide.documents_slides} %>
  <% end %>
  
</div>
