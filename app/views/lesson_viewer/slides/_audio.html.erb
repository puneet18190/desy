<%
  url_type          ||= nil
  audio               = slide.media_elements_at
  show_documents      = true unless defined? show_documents
  media_viewer_type   = MediaElement::ViewerTypes::CUSTOM unless defined? media_viewer_type
  render_file         = false unless defined? render_file
  rendering =
    if render_file
      { :file => Rails.root.join "shared/players/#{media_viewer_type}/audio" }
    else
      { :partial => "shared/players/#{media_viewer_type}/audio" }
    end
%>

<div class="slide-content audio normal-size">
  
  <div class="item title-container">
    <input class="title read-only" type="text" value="<%= slide.title %>" disabled="disabled">
  </div>
  
  <div class="item audio-container">
    <div class="audio read-only">
      <% if audio %>
        <% if audio.converted? %>
          <%= render rendering, :locals => {:audio => audio, :initialize_now => loaded, url_type: url_type, exporting_slide: !loaded} %>
        <% else %>
          <%= image_tag audio.placeholder_url(:lesson_viewer, url_type), :title => t('titles.not_available.audio', :title => audio.title) %>
        <% end %>
      <% end %>
    </div>
  </div>
  
  <div class="item text-container read-only">
    <%= slide.text.html_safe if slide.text %>
  </div>
  
  <% if show_documents && slide.documents_slides.length > 0 %>
    <%= render :partial => 'lesson_viewer/documents', :locals => {:documents_slides => slide.documents_slides, :url_type => url_type} %>
  <% end %>
  
</div>
