<%
  image1 = slide.media_element_url_at(1)
  image2 = slide.media_element_url_at(2)
  image3 = slide.media_element_url_at(3)
  image4 = slide.media_element_url_at(4)
%>

<div class="bigViewLesson slideImage" style="display:block">
  <div class="boxFissoImage" style="margin-bottom:20px">  
    <div class="small">
		  <% if !image1[:empty] %>
        <%= image_tag image1[:url], :style => "left:#{image1[:alignment]}px" %>
