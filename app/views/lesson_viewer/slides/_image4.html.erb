      <% end %>
    </div>
	</div>
	<div class="boxFissoImage" style="float:right">
    <div class="small">
		  <% if !image2[:empty] %>
        <%= image_tag image2[:url], :style => "left:#{image2[:alignment]}px" %>
				<div class="caption"><%= image2[:caption] %></div>
      <% end %>
    </div>
  </div>
	<div class="boxFissoImage">
    <div class="small">
		  <% if !image3[:empty] %>
        <%= image_tag image3[:url], :style => "left:#{image3[:alignment]}px" %>
				<div class="caption"><%= image3[:caption] %></div>
      <% end %>
    </div>
  </div>
  <div class="boxFissoImage" style="float:right">
    <div class="small">
		  <% if !image4[:empty] %>
        <%= image_tag image4[:url], :style => "left:#{image4[:alignment]}px" %>
				<div class="caption"><%= image4[:caption] %></div>
      <% end %>
    </div>
  </div>
</div>
