<%
  url_type ||= nil
  image1 = slide.image_at(1)
  image2 = slide.image_at(2)
  image3 = slide.image_at(3)
  image4 = slide.image_at(4)
  image_height1 = resize_height(image1.media_element.width, image1.media_element.height, 'image4') if !image1.nil?
  image_width1 = resize_width(image1.media_element.width, image1.media_element.height, 'image4') if !image1.nil?
  image_height2 = resize_height(image2.media_element.width, image2.media_element.height, 'image4') if !image2.nil?
  image_width2 = resize_width(image2.media_element.width, image2.media_element.height, 'image4') if !image2.nil?
  image_height3 = resize_height(image3.media_element.width, image3.media_element.height, 'image4') if !image3.nil?
  image_width3 = resize_width(image3.media_element.width, image3.media_element.height, 'image4') if !image3.nil?
  image_height4 = resize_height(image4.media_element.width, image4.media_element.height, 'image4') if !image4.nil?
  image_width4 = resize_width(image4.media_element.width, image4.media_element.height, 'image4') if !image4.nil?
%>


<div class="slide-content image4 normal-size">
  
  <div class="item image-container">
    <div class="image read-only">
      <% if image1 %>
        <%
          url1 = image1.media_element.url(url_type)
          effective_url1 = loaded ? url1 : ''
        %>
        <% if is_horizontal?(image1.media_element.width, image1.media_element.height, 'image4') %>
          <%= image_tag effective_url1, :style => "left:#{image1.alignment}px; width:#{image_width1}px", :data => {:url => url1} %>
        <% else %>
          <%= image_tag effective_url1, :style => "top:#{image1.alignment}px; height:#{image_height1}px", :data => {:url => url1} %>
        <% end %>
        <% if !image1.caption.blank? %>
          <input class="caption" type="text" value="<%= image1.caption %>" disabled="disabled">
        <% end %>
      <% end %>
    </div>
  </div>
  
  <div class="item image-container" style="margin-right:0">
    <div class="image read-only">
      <% if image2 %>
        <%
          url2 = image2.media_element.url(url_type)
          effective_url2 = loaded ? url2 : ''
        %>
        <% if is_horizontal?(image2.media_element.width, image2.media_element.height, 'image4') %>
          <%= image_tag effective_url2, :style => "left:#{image2.alignment}px; width:#{image_width2}px", :data => {:url => url2} %>
        <% else %>
          <%= image_tag effective_url2, :style => "top:#{image2.alignment}px; height:#{image_height2}px", :data => {:url => url2} %>
        <% end %>
        <% if !image2.caption.blank? %>
          <input class="caption" type="text" value="<%= image2.caption %>" disabled="disabled">
        <% end %>
      <% end %>
    </div>
  </div>
  
  <div class="item image-container" style="margin-bottom:0">
    <div class="image read-only">
      <% if image3 %>
        <%
          url3 = image3.media_element.url(url_type)
          effective_url3 = loaded ? url3 : ''
        %>
        <% if is_horizontal?(image3.media_element.width, image3.media_element.height, 'image4') %>
          <%= image_tag effective_url3, :style => "left:#{image3.alignment}px; width:#{image_width3}px", :data => {:url => url3} %>
        <% else %>
          <%= image_tag effective_url3, :style => "top:#{image3.alignment}px; height:#{image_height3}px", :data => {:url => url3} %>
        <% end %>
        <% if !image3.caption.blank? %>
          <input class="caption" type="text" value="<%= image3.caption %>" disabled="disabled">
        <% end %>
      <% end %>
    </div>
  </div>
  
  <div class="item image-container" style="margin-right:0; margin-bottom:0">
    <div class="image read-only">
      <% if image4 %>
        <%
          url4 = image4.media_element.url(url_type)
          effective_url4 = loaded ? url4 : ''
        %>
        <% if is_horizontal?(image4.media_element.width, image4.media_element.height, 'image4') %>
          <%= image_tag effective_url4, :style => "left:#{image4.alignment}px; width:#{image_width4}px", :data => {:url => url4} %>
        <% else %>
          <%= image_tag effective_url4, :style => "top:#{image4.alignment}px; height:#{image_height4}px", :data => {:url => url4} %>
        <% end %>
        <% if !image4.caption.blank? %>
          <input class="caption" type="text" value="<%= image4.caption %>" disabled="disabled">
        <% end %>
      <% end %>
    </div>
  </div>
  
</div>
