<%
  cover_img = lesson.cover.media_elements_slides.first
  data_fb = {
    :url => lesson_viewer_url(lesson.id),
    :description => lesson.description,
    :image => cover_img.nil? ? nil : full_url(cover_img.media_element.thumb_url)
  }
  data_tw = {
    :url => lesson_viewer_url(lesson.id)
  }
%>

<div id="social_networks" style="display:none">
  <%= link_to 'fb', 'javascript:;', :class => 'facebook', :data => data_fb %>
  <br/>
  <%= link_to 'tw', 'javascript:;', :class => 'twitter', :data => data_tw %>
  <br/>
  
  <script src="https://apis.google.com/js/plusone.js"></script>
  <g:plus action="share"></g:plus>
  
  <%= link_to 'g+', 'javascript:;', :class => 'google-plus' %>
</div>

<a id="open_social_networks"></a>
