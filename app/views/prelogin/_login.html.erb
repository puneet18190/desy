<div class="login">
  <p><%= t('captions.problems_with_password') %></p>
  <div class="button">
    <a class="_show_login_form_container"><%= t('captions.login') %></a>
  </div>
  <div id="login_form_container" class="tooltip">
    <%= image_tag("freccia_tooltip_up.png", :class => "callout") %>
    <%= form_tag users_sessions_path, id: 'new_users_session_form' do %>
      <%=  hidden_field_tag :redirect_to, params[:redirect_to] %>
      <table summary="" cellpadding="0" cellspacing="0">
        <tr>
          <td class="lower"><%= t('captions.email') %></td>
        </tr>
        <tr>
          <td><%= text_field_tag :email, '', :class => 'text' %></td>
        </tr>
        <tr>
          <td class="lower"><%= t('captions.password') %></td>
        </tr>
        <tr>
          <td><%= password_field_tag :password, '', :class => 'text' %></td>
        </tr>
      </table>
      <%= submit_tag t('captions.enter') %>
    <% end %>
  </div>
</div>
