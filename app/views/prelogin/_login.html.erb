<div class="login">
  <p><%= t('captions.problems_with_password') %></p>
  <div class="button">
    <a class="_show_login_form"><%= t('captions.login') %></a>
  </div>
  <div id="login_form" class="tooltip">
    <%= image_tag("freccia_tooltip_up.png", :class => "callout") %>
    <%= form_tag login_path do %>
      <table summary="" cellpadding="0" cellspacing="0">
        <tbody>
        <tr>
          <td><input type="text" name="username" value="username" class="text" onfocus="this.value=''"></td>
        </tr>
        <tr>
          <td><input type="text" name="password" value="password" class="text" onfocus="this.value=''">  </td>
        </tr>
        </tbody>
      </table>
      <a href=""><%= t('captions.enter') %></a>
    <% end %>
  </div>
</div>
