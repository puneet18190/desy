<% if @purchase %>
  $('#registration_purchase_id').removeClass('error');
  $('#registration_ok').show();
  <% if @forced_location %>
    $('#location_container_in_personal_info').html('<%= j (render :partial => "users/personal_locations", :locals => {:forced_location => @forced_location, :locations => @locations, :edit => false}) %>');
    $('._location_select_box').each(function() {
      $('#' + $(this).attr('id')).selectbox();
    });
    <% if @forced_location.sti_type == SETTINGS['location_types'].last %>
      $('#outer_locations_disclaimer').hide();
    <% end %>
  <% end %>
<% else %>
  $('#registration_purchase_id').addClass('error');
  $('#registration_ok').hide();
<% end %>
