<span class="<%= id_scope %>_tooltipForm _report_form_content" id="<%= id_scope %>_report_form_<%= item.id %>">
  <%= image_tag("freccia_tooltip_form.png", :class => "calloutForm") %>
 <h1><%= t('captions.you_believe_content_unappropriate') %></h1>
 <p><%= t('captions.write_reason_report') %></p>
  <%= form_tag "/reports/#{id_scope}", :remote => true do %>
    <input type="hidden" value="<%= item.id %>" name="<%= id_scope %>_id">
    <table summary="" cellpadding="0" cellspacing="0">
      <tbody>
        <tr>
          <td>
            <input type="text" class="text" name="content">
          </td>
        </tr>
        <tr>
          <td align="right">
            <input class="_send" type="submit" value="Send" name="commit">
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>
</span>
