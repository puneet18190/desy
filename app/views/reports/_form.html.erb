<span class="tooltipForm" id="<%= id_scope %>_report_form_<%= item.id %>">
  <%= image_tag("freccia_tooltip_form.png", :class => "calloutForm") %>
 <h1>You believe this content is incorrect?</h1>
 <p>Write the reason for your report, we will review it.
Thank you for your cooperation!</p>
  <%= form_tag "/reports/#{id_scope}" do %>
    <%= hidden_field_tag "#{id_scope}_id", item.id %>
    <table summary="" cellpadding="0" cellspacing="0">
      <tbody>
        <tr>
          <td><%= text_field_tag 'content', '', :class => 'text' %></td>
        </tr>
        <tr>
          <td align="right"><%= submit_tag 'Send' %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</span>
