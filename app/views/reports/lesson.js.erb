$('#lesson_report_form_<%= @lesson_id %>').hide();
var obj = $('#report_lesson_click_<%= @lesson_id %> a._reportable_icon');
obj.removeClass('_report_selected');
obj.removeClass('<%= Buttons::REPORT %>_light');
obj.addClass('<%= Buttons::REPORT %>');

<% if @resp %>
  showOkPopUp('<%= j t('popups.report_ok') %>');
<% else %>
  showErrorPopUp('<%= j @error %>');
<% end %>
