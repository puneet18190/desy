<a id="report_media_element_click_<%= media_element.id %>" class="<%= Buttons::REPORT %> _report_media_element_click" data-param="<%= media_element.id %>"   title="<%= t('general_titles.reports_title') %>"></a>

<span class="media_element_tooltipForm _report_form_content" id="media_element_report_form_<%= media_element.id %>">
  <%= image_tag("freccia_tooltip_form.png", :class => "calloutForm") %>
 <h3><%= t('captions.you_believe_content_unappropriate') %></h3>
 <p><%= t('captions.write_reason_report') %></p>
  <%= form_tag "/reports/media_element", :remote => true do %>
    <input type="hidden" value="<%= media_element.id %>" name="media_element_id">
    <table summary="" cellpadding="0" cellspacing="0">
      <tbody>
        <tr>
          <td>
            <!--<input type="text" class="text" name="content">-->
            <textarea class="campoTesto" name="content"></textarea>
          </td>
        </tr>
        <tr>
          <td align="right">
            <input class="_send" type="submit" value="Send" name="commit">
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>
</span>
