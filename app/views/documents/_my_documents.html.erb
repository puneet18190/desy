<div id="my_documents">
  <% if documents.empty? %>
    <% if word.nil? %>
      <%= render :partial => 'documents/empty' %>
    <% else %>
      <%= render :partial => 'documents/empty_word', :locals => {:word => word} %>
    <% end %>
  <% else %>
    <% documents.each do |document| %>
      <%= render :partial => 'documents/view_single_compact', :locals => {:document => document, :word => word, :used_in_your_lessons => (document.instances.to_i != 0)} %>
    <% end %>
  <% end %>
</div>
