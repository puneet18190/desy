<div class="header">
  <div class="contenitore">
    <h1 class="fltlft upper"><%= t('audio_editor.label') %></h1>
    <div id="audio_editor_title" class="testo fltlft">
      <% if parameters[:initial_audio].nil? %>
        <span class="_untitled"><%= t('media_elements.editor.new_untitled') %></span>
      <% else %>
        <span class="_untitled" style="display:none"><%= t('media_elements.editor.new_untitled') %></span>
        <span class="_titled"><%= parameters[:initial_audio].title %></span>
      <% end %>
    </div>
    <div class="fltrt"><a class="esciButton _exit_audio_editor" title="<%= t('general_titles.exit_title') %>"></a></div>
    <script type="text/javascript" charset="utf-8">
      if('<%= @back %>'.length > 0) {
        var bb = $('.esciButton');
        bb.attr('href', '<%= @back %>');
        bb.show();
      }
    </script>
  </div>
</div>
