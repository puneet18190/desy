<!DOCTYPE html>
<html class="application-layout <%= controller_html_class %> <%= action_html_class %>">
  
  <head><%= render :partial => 'layouts/application/head' %></head>
  
  <body>
    <%= render :partial => 'shared/browser_support_script' %>
    <%= render :partial => 'shared/popups' %>
    <%= render :partial => 'shared/loading' %>
    <%= render :partial => 'lessons/notification_popup' %>
    <div class="container">
      <%= render :partial => 'layouts/flash', :locals => {:flash => flash} %>
      <%= render :partial => 'shared/header' %>
      <%= render :partial => 'shared/menu' %>
      <br class="clearfloat">
      <%= render :partial => 'notifications/main', :locals => {:notifications => @notifications, :news => @new_notifications, :offset => @offset_notifications, :tot => @tot_notifications} %>
      <div class="content">
        <%= yield %>
        <br class="clearfloat">
      </div>
      <%= render :partial => 'shared/footer' %>
   
  </body>
  
</html>
