<!DOCTYPE html>
<html class="lesson-export-layout <%= controller_html_class %> <%= action_html_class %>">
  
  <head>
    <title><%= html_title @slides %></title>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <link href="assets/favicon32x32.png" rel="shortcut icon" type="image/png" />

    <!--[if lt IE 9]>
      <link href="assets/browser_not_supported/application.css" media="all" rel="stylesheet" type="text/css" />
      <script type="text/javascript" src="assets/browser_not_supported/application.js"></script>
    <![endif]-->

    <!--[if gte IE 9]>
      <link href="assets/lesson_export/application.css" media="all" rel="stylesheet" type="text/css" />
      <script type="text/javascript" src="assets/lesson_export/application.js"></script>
    <![endif]-->

    <!--[if !IE]> -->
      <link href="assets/lesson_export/application.css" media="all" rel="stylesheet" type="text/css" />
      <script type="text/javascript" src="assets/lesson_export/application.js"></script>
    <!-- <![endif]-->
  </head>
  
  <body>
    <% if @cover_img %>
      <img style="display:none" itemprop="image" src="media_elements/images/<%= @cover_img.media_element.id %>/<%= File.basename @cover_img.media_element.media.thumb.path %>"/>
    <% end %>
    <%= render :partial => 'shared/browser_support_script' %>
    <%= render :partial => 'shared/popups' %>
    <%# Loading %>
    <div id="loading">
      <div class="containerLoading"><img src="assets/loading2.gif" alt="Loading2"></div>
    </div>
    <a id="left_scroll" class="navLeft" title="<%= t('titles.slides.back') %>"></a>
    <div class="container">
      <%= yield %>
    </div>
    <a id="right_scroll" class="navRight" title="<%= t('titles.slides.forward') %>"></a>
  </body>
  
</html>
