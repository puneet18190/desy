<div id="virtual_classroom_playlist" class="playList">
  <% if lessons.any? %>
    <span class="fltrt lower _empty_playlist_button emptyPlayListButton"><%= t('virtual_classroom.playlist.make_it_empty') %></span>
  <% end %>
  <% if lessons.empty? %>
    <%= render :partial => "virtual_classroom/empty_playlist" %>
  <% else %>
  <span class="fltlft" style="padding-top:8px"></span>
  <div class="titlePlaylist fltlft "  style="padding-left:0"><%= t('virtual_classroom.playlist.label') %><%= " (#{lessons.length} / #{SETTINGS['lessons_in_playlist']})".html_safe %></div>
    <div id="lessons_list_in_playlist" class="scroll-pane">
      <% lessons.each do |l| %>
        <%= render :partial => "virtual_classroom/view_single_playlist", :locals => {:virtual => l} %>
      <% end %>
    </div>
    <div class="playInVirtualClassroom _playlist_play">
      <a class="lower"><%= t('virtual_classroom.playlist.play') %></a>
    </div>
  <% end %>
</div>
