<% lesson = virtual.lesson %>

<div id="virtual_classroom_lesson_<%= lesson.id %>" class="boxViewSingleLesson _virtual_classroom_lesson" data-lesson-id="<%= lesson.id %>" data-in-playlist="<%= virtual.in_playlist? %>">
  <div class="contentInterno">
    <%= render :partial => "lessons/thumbnail", :locals => {:lesson => lesson} %>
    <br class="clearfloat">
    <div class="menuLessonVirtualClassroom">
      <a class="_send_lesson_link preview" data-lesson-id="<%= lesson.id %>"></a> 
      <a class="_send_lesson_link preview2" data-lesson-id="<%= lesson.id %>"></a>
      <% if lesson.user_id == current_user.id %>
        <a class="_send_lesson_link sendTo" data-lesson-id="<%= lesson.id %>"></a>
      <% end %>
      <a class="_remove_lesson_from_inside_virtual_classroom remove" data-clickparam="<%= lesson.id %>"></a>
    </div>


    
  </div>
  
</div>
