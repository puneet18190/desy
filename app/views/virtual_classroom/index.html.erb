<div class="griglia-contenuti">
  <div style="float:left; width:70%; border:1px solid red">
  <% @lessons.each do |l| %>
    <%= render :partial => "virtual_classroom/view_single", :locals => {:lesson => l.lesson} %>
  <% end %>
	</div>
	<div style="float:right; width:20%; margin-right:1%;">
	  <div class="playList">
		  <h1>Playlist</h1>
			<% cont = 1 %>
			<% @lessons.each do |l| %>
			 <ul class="lista">
       <%= render :partial => "virtual_classroom/view_single_playlist", :locals => {:lesson => l.lesson, :cont => cont} %>
			</ul>
			<% cont += 1 %>
     <% end %>
	  </div>	
	</div>
</div>
