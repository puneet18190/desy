<div class="griglia-contenuti">
  <div class="playListContainer">
	  <%= render :partial => "virtual_classroom/playlist", :locals => {:lessons => @playlist} %>
	</div>
  <div class="listContainer">
  <% if @lessons.empty? %>
	  <%= render :partial => "virtual_classroom/empty" %>
	<% else %>
	  <% @lessons.each do |l| %>
	  <%= render :partial => "virtual_classroom/view_single", :locals => {:lesson => l.lesson} %>
	  <% end %>
	<% end %>
	</div>
	
</div>
