<div class="header">
  <%= link_to image_tag('logo.gif'), '/dashboard' %>
  <%= render :partial => 'shared/logout' %>
</div>
<div class="bluBar">
  <h1 style="width:30%" class="lower"><%= t('captions.virtual_classroom') %></h1>
  <%= render :partial => 'virtual_classroom/header_buttons', :locals => {:empty => @lessons.empty?, :emptier => @emptier} %>
</div>

<br class="clearfloat">
<%= render :partial => 'notifications/main', :locals => {:notifications => @notifications, :news => @new_notifications, :offset => @offset_notifications, :tot => @tot_notifications} %>
<br class="clearfloat">

<div class="content">
  
  <div class="griglia-contenuti">
    <div class="playListContainer">
      <%= render :partial => 'virtual_classroom/playlist', :locals => {:lessons => @playlist} %>
    </div>
    <div class="listContainer">
      <%= render :partial => 'virtual_classroom/my_virtual_classroom' %>
      <br class="clearfloat">
      <% if @lessons.any? %>
        <%= render :partial => 'virtual_classroom/pagination', :locals => {:page => @page, :pages_amount => @pages_amount, :force_index_url => nil} %>
      <% else %>
        <div class="dots_pagination_container paginatoreCentrato" id="virtual_classroom_pagination"></div>
      <% end %>
    </div>
    <div id="info_container" style="display:none" data-currenturl="<%= request.url %>"></div>
  </div>
  <br class="clearfloat">
  
</div>
