<div class="griglia-contenuti">
  <div class="profile-content">
    <div class="title-bar">
      <h1><%= t('captions.profile') %></h1>
      <%= render :partial => 'users/profile_menu', :locals => {:classes => ['', 'current', '', '', '']} %>
    </div>
    <br class="clearfloat">
    <div class="contentForm">
      <header>
        <h2><%= t('users.subjects.title') %></h2>
        <p><%= t('users.subjects.description') %></p>
      </header>
      <%= form_for @user, :url => user_path do |f| %>
        <%
          locals_for_personal_subjects = {
            :f => f,
            :user => @user,
            :errors => (@errors.nil? ? [] : @errors[:subjects]),
            :subjects => @subjects
          }
        %>
        <%= render :partial => 'personal_subjects', :locals => locals_for_personal_subjects %>
        <div class="form_submit">
          <input type="submit" value="<%= t('users.subjects.save') %>"/>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% if @subjects_updated %>
  <script>
    $(document).ready(function() {
      showOkPopUp(<%= t('users.subjects.ok_popup').to_json %>);
    });
  </script>
<% end %>
