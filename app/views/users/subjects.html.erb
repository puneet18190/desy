<div class="griglia-contenuti">
  <div class="profile-content">
    <div class="title-bar">
      <h1>profile</h1>
      <ul class="navlist">
        <li><%= link_to t('captions.personal_info'), my_profile_path %></li>
        <li><%= link_to t('captions.subjects'), my_subjects_path, :class => 'current' %></li>
        <li><%= link_to t('captions.statistics'), my_statistics_path %></li>
      </ul>
    </div>
    <br class="clearfloat">
    <div class="contentForm">
      <header>
        <h2>Subjects</h2>
        <p>Choose the matters you want to stay connected</p>
      </header>
      <form>
        <div class="insert-content">
          <!-- CHEMICAL -->
          <div class="checkboxElement">
              <input type="checkbox" id="checkbox-2-1" class="regular-checkbox big-checkbox" /><label for="checkbox-2-1"></label>
              Chemical
          </div>
          <!-- LANGUAGE -->
          <div class="checkboxElement">
              <input type="checkbox" id="checkbox-2-2" class="regular-checkbox big-checkbox" /><label for="checkbox-2-2"></label>
              Language
          </div>
          <!-- MATHEMATICA -->
          <div class="checkboxElement">
              <input type="checkbox" id="checkbox-2-3" class="regular-checkbox big-checkbox" /><label for="checkbox-2-3"></label>
              Mathematics
          </div>
          <!-- HISTORY -->
          <div class="checkboxElement">
              <input type="checkbox" id="checkbox-2-4" class="regular-checkbox big-checkbox" />
              <label for="checkbox-2-4"></label>
              History
          </div>
          <!-- BIOLOGY -->
          <div class="checkboxElement">
              <input type="checkbox" id="checkbox-2-5" class="regular-checkbox big-checkbox" /><label for="checkbox-2-5"></label>
              Biology
          </div>
          <!-- GEOGRAPHY -->
          <div class="checkboxElement">
              <input type="checkbox" id="checkbox-2-6" class="regular-checkbox big-checkbox" /><label for="checkbox-2-6"></label>
              Geography
          </div>
          <!-- ASTRONOMY -->
          <div class="checkboxElement">
              <input type="checkbox" id="checkbox-2-7" class="regular-checkbox big-checkbox" /><label for="checkbox-2-7"></label>
              Astronomy
          </div>
          <!-- DESIGN -->
          <div class="checkboxElement">
              <input type="checkbox" id="checkbox-2-8" class="regular-checkbox big-checkbox" /><label for="checkbox-2-8"></label>
              Design
          </div>
        </div>
        <div class="form_submit">
          <input type="submit" value="save" />
        </div>
      </form>
    </div>
  </div>
</div>