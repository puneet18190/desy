<%
  first_depth = 0
  first_depth = @locations.first.depth if @locations.any?
%>

<% ((first_depth + 1)...(SETTINGS['location_types'].length)).to_a.each do |depth| %>
  $('select#<%= SETTINGS["location_types"][depth].downcase %>_id').html('');
<% end %>
<% if @locations.any? %>
  $('select#<%= @locations.first.sti_type.downcase %>_id').html('<%= j render(:partial => "users/locations_list", :locals => {:locations => @locations, :selected => nil}) %>');
<% end %>

$('._location_select_box').each(function() {
  $('#' + $(this).attr('id')).selectbox();
});
