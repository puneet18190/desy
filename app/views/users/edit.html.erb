<div class="griglia-contenuti">
  <div class="profile-content">
    <div class="title-bar">
      <h1>profile</h1>
      <ul class="navlist">
        <li><%= link_to t('captions.personal_info'), my_profile_path, :class => 'current' %></li>
        <li><%= link_to t('captions.subjects'), my_subjects_path %></li>
        <li><%= link_to t('captions.statistics'), my_statistics_path %></li>
      </ul>
    </div>
    <br class="clearfloat">
    <div class="contentForm">
      <header>
        <h2>Personal Info</h2>
        <p>In this area you can update or modify all the parameters of your account</p>
      </header>
      <form>
        <div class="insert-content">
          <div class="inputElement">
            <p>Name</p><input type="text" name="nome" value="" class="text" id="">
          </div>
          <div class="inputElement">
            <p>Surname</p><input type="text" name="cognome" value="" class="text" id="">
          </div>
          <div class="inputElement">
            <p>Email</p><input type="text" name="email" value="" class="text" id="">
          </div>
          <br class="clearfloat" />
          <div class="inputElement">
            <p>Password</p><input type="password" name="nome" value="" class="text" id="">
          </div>
          <div class="inputElement" style="margin-right:0">
            <p>Repeat password</p><input type="password" name="cognome" value="" class="text" id="">
          </div>
        </div>
        <div class="insert-content">
          <div class="inputElement">
            <p>School</p><input type="text" name="school" value="" class="text school" id="">
          </div>
          <br class="clearfloat" />
          <div class="inputElement">
            <p>School level</p>
            <select name="school_level_id" id="profile_region">
              <option value="">First</option>
              <option value="">Second</option>
            </select>
          </div>
          <div class="inputElement">
            <p>Region</p>
            <select name="school_level_id" id="profile_school_level">
              <option value="">Bejing</option>
              <option value="">Other</option>
            </select>
          </div>
        </div>
        <div class="form_submit">
          <input type="submit" value="save" />
        </div>
      </form>
      <br class="clearfloat">
    </div>
  </div>
</div>