<div class="griglia-contenuti">
  <div class="profile-content">
    <div class="title-bar">
      <h1><%= t('captions.profile') %></h1>
      <ul class="navlist">
        <li><%= link_to t('users.info.menu_link'), my_profile_path, :class => 'current' %></li>
        <li><%= link_to t('users.subjects.menu_link'), my_subjects_path %></li>
        <li><%= link_to t('users.mailing_lists.menu_link'), my_mailing_lists_path %></li>
        <li><%= link_to t('users.statistics.menu_link'), my_statistics_path %></li>
      </ul>
    </div>
    <br class="clearfloat">
    <div class="contentForm">
      <header>
        <h2>Personal Info</h2>
        <p>In this area you can update or modify all the parameters of your account</p>
      </header>
      <%= form_for @user, :url => user_path do |f| %>
        <%= render :partial => 'personal_info', :locals => {:f => f} %>
        <div class="form_submit">
          <%= f.submit "save" %>
        </div>
      <% end %>
      <br class="clearfloat">
    </div>
  </div>
</div>
