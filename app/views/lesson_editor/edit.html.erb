<ul id="slides" class="new">
  <li class="info slides">
    <div class="box">
      <span class="infoButtonWhite"></span>
      <br />
      <h2><%= t('captions.update_lesson') %></h2>
      <h3><%= t('captions.use_the_form_below_for_lesson_information') %></h3>
      <div class="_error_messages"><%= media_elements_error_messages(params[:errors]) if params[:errors] %></div>
      <%= form_for(@lesson, :remote => true) do |f| %>
        <%= f.text_field :title, :class=>"pull-left" %>
        <%= select_tag "subject", options_from_collection_for_select(@subjects, "id", "description"), :include_blank => false, :class=>"pull-right", :id => "lesson_subject" %>
        <%= f.text_area :description, :class=>"pull-left" %>
        <textarea id="lesson_tags" name="lesson[tags]" class="pull-right"><%= @lesson.tags %></textarea>
        <br/>
        <%= f.submit t('captions.update').downcase, :class => "lesson-create pull-right" %>
        <%= link_to t('captions.cancel').downcase, lesson_editor_path(@lesson),  :class => "buttonForm pull-right" %>
      <% end %>
    </div>
    <div class="info-slide-footer">
      <div class="school-level pull-left">
        <%= t 'captions.school_level' %>: <%=  @current_user.school_level.description %>
      </div>
      <div class="author pull-right">
        <%= t('captions.author') %>: <span class="name"><%=  @current_user.full_name %></span>
      </div>
    </div>
  </li>
</ul>

<script type="text/javascript">
  $('#lesson_subject option').each(function() {
    if($(this).val() == <%= @lesson.subject_id %>) {
      $(this).attr('selected', 'selected');
    }
  });
</script>
