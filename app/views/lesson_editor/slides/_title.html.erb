<%
  slide_title = slide.title.blank? ? t('lesson_editor.placeholders.title') : slide.title.gsub('<br />', "\n").html_safe
%>

<div class="slide-content title normal-size">
  <%= form_tag save_slide_path(slide.lesson_id, slide.id), :method => :post, :remote => true, :id => "form-#{slide.id}", :autocomplete => 'off' do %>
    
    <div class="item title-container">
      <%= text_area_tag :title, slide_title, :class => 'title editable _lesson_editor_placeholder', :data => {:placeholder => slide.title.blank?}, :id => "title_slide_content_#{slide.id}" %>
    </div>
    
  <% end %>
</div>
