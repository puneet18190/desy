<%= form_tag save_slide_path(slide.lesson_id, slide.id), :method => :post, :remote => true, :id => "form-#{slide.id}" do %>
  <h2 class="only-title">
    <%= text_area_tag :title, (slide.title.blank? ? t('lesson_editor.placeholders.title') : slide.title), :class => '_lesson_editor_placeholder', :data => {:placeholder => slide.title.blank?}, :maxlength => t('language_parameters.slide.length_title'), :id => "title_slide_content_#{slide.id}" %>
  </h2>
<% end %>
