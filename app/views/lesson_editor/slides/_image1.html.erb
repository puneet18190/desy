<%= form_tag save_slide_path(slide.lesson_id, slide.id), :method => :get, :remote => true, :id => "form-#{slide.id}" do %>
  <h2 class="text">
    <%= text_field_tag :title, slide.title ? slide.title : "#{t 'captions.enter_title'}" %>
  </h2>
  <div class="image1-content">
    <%= text_area_tag :text, slide.text ? slide.text.html_safe : "#{t 'descriptions.slide_text'}", :id=> "ta-#{slide.id}", :class=>"tinymce"%>
  </div>
  <%- sme1 = slide.image_at(1) %>
  <%- if !sme1[:empty] %>
    <%= render :partial => "/lesson_editor/slides/parts/filled_image", :locals => {:slide => slide, :position => 1} %>
  <%- else %>
  <!--TODO replace align value from db (after default at 0)-->
  <%= hidden_field_tag :media_element_align_1, "0", :class =>"media_element_align_1" %>
    <%= hidden_field_tag :media_element_1, "", :class=> "media-tag-cover-1" %>
    <div class="cover-choose-image _cover_choose_image_1 cover-choose-image-left">
      <a class="show-gallery image1-p1 _show_image_gallery_in_lesson_editor"><%= image_tag "choose-image.png" %></a>
      <br/>
      <%= t('captions.choose_image') %>
    </div>
  <%- end %>
<% end %>
