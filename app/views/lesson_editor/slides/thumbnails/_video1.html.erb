<% video = slide.video_at(1) %>
<div class="bigViewLesson slideVideo ">
  <h2><%= slide.title %></h2>
  <div class="videoMedium">
    <% if video.nil? %>
      <div class="videoIcon"></div>
      
    <% else %>
      <%= image_tag video.thumb_url, :width => "420" if video %>
      <div class="bulletPointVideo">
         <img alt="Bullet_video" src="/assets/bullet_video.svg" style="width:40%">
      </div>
      
    <% end %>
  </div>
  <div class="textRightVideoContent">
    <%= slide.text.html_safe if slide.text %>
  </div>
</div>
