<div id="media_element_1_in_slide_<%= slide.id %>" class="video editable">
  
  <% if video %>
    <%= hidden_field_tag 'media_element_1', video.id, :class => 'video-id' %>
  <% else %>
    <%= hidden_field_tag 'media_element_1', '', :class => 'video-id' %>
  <% end %>
  
  <div class="mask <%= video.nil? ? 'hidden' : 'visible' %>">
    <div class="alignable" data-rolloverable="true">
      <%= render(:partial => "shared/players/custom/video", :locals => {:video => video, :initialize_now => true}) %>
    </div>
    <span class="add hidden" data-position="1" title="<%= t('titles.lesson_editor.change_video') %>"></span>
  </div>
  
  <div class="empty-mask <%= video.nil? ? 'visible' : 'hidden' %>">
    <a class="add" data-position="1"></a>
    <br/>
    <p class="lower"><%= t('lesson_editor.choose_video') %></p>
  </div>
  
</div>
