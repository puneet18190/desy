<div id="media_element_<%= position %>_in_slide_<%= slide.id %>" class="video editable">
  
  <% if video %>
    <%= hidden_field_tag "media_element_#{position}", video.id, :class => "media-tag-cover-#{position} _input_video_id" %>
  <% else %>
    <%= hidden_field_tag "media_element_#{position}", '', :class => "media-tag-cover-#{position} _input_video_id" %>
  <% end %>
  
  <div class="mask <%= video.nil? ? 'hidden' : 'visible' %>">
    <div class="alignable" data-rolloverable="true">
      <%= render(:partial => 'shared/players/video', :locals => {:video => video, :initialize_now => true}) %>
    </div>
    <span class="add hidden" data-position="<%= position %>" title="<%= t('titles.lesson_editor.change_video') %>"></span>
  </div>
  
  <div class="empty-mask <%= video.nil? ? 'visible' : 'hidden' %>">
    <a class="add" data-position="<%= position %>"></a>
    <br/>
    <p class="lower"><%= t('lesson_editor.choose_video') %></p>
  </div>
  
</div>
