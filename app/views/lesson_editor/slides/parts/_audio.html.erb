<%
  empty_mask_class = "cover-choose-image _empty_audio_in_slide"
%>

<div id="media_element_<%= position %>_in_slide_<%= slide.id %>" class="_audio_container_in_lesson_editor">
  <% if audio %>  
      <%= hidden_field_tag "media_element_#{position}", audio.id, :class=> "media-tag-cover-#{position} _input_audio_id"  %>
  <% else %>
    <%= hidden_field_tag "media_element_#{position}", "", :class=> "media-tag-cover-#{position} _input_audio_id" %>
  <% end %>
  <div class="<%= slide.kind %>-p<%= position %> _full_audio_in_slide" style="display:<%= audio.nil? ? 'none'.html_safe : 'block'.html_safe %>">
    <a data-slide-id="<%= slide.id %>" data-position="<%= position %>">
      <%= render(:partial => 'shared/players/audio', :locals => {:audio => audio}) %>
    </a>
    <span class="add-audio _show_audio_gallery_in_lesson_editor _lesson_editor_rollover_content" data-position="<%= position %>" style="display:none"></span>
  </div>
  <div class="<%= empty_mask_class.html_safe %>" style="display:<%= audio.nil? ? 'block'.html_safe : 'none'.html_safe %>">
    <a class="audio1-p1 _show_audio_gallery_in_lesson_editor" data-position="<%= position %>"><%= image_tag "choose-audio.png" %></a>
    <%= t('captions.choose_audio') %>
  </div>
  
  
  
    
</div>
  
    
    
    