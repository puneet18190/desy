<div id="media_element_<%= position %>_in_slide_<%= slide.id %>" class="_audio_container_in_lesson_editor audioPlayerInLessonsEditor">
  
  <% if audio %>
    <%= hidden_field_tag "media_element_#{position}", audio.id, :class => "_input_audio_id" %>
  <% else %>
    <%= hidden_field_tag "media_element_#{position}", "", :class => "_input_audio_id" %>
  <% end %>
  
  <div class="<%= slide.kind %>-p<%= position %> _full_audio_in_slide" style="display:<%= audio.nil? ? 'none'.html_safe : 'block'.html_safe %>">
    <div data-slide-id="<%= slide.id %>" data-position="<%= position %>">
      <%= render(:partial => 'shared/players/audio', :locals => {:audio => audio, :initialize_now => true}) %>
    </div>
    <span class="add-audio _show_audio_gallery_in_lesson_editor" data-position="<%= position %>" title="<%= t('titles.lesson_editor.change_audio') %>"></span>
  </div>
  
  <div class="cover-choose-image _empty_audio_in_slide" style="display:<%= audio.nil? ? 'block'.html_safe : 'none'.html_safe %>">
    <a class="_show_audio_gallery_in_lesson_editor" data-position="<%= position %>"><%= image_tag "choose-audio.png" %></a>
    <p class="lower"><%= t('lesson_editor.choose_audio') %></p>
  </div>
  
</div>
