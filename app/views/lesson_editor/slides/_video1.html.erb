<%= form_tag save_slide_path(slide.lesson_id, slide.id), :method => :get, :remote => true, :id => "form-#{slide.id}" do %>
  <h2>
    <%= text_field_tag :title, (slide.title.blank? ? t('captions.enter_title') : slide.title), :class => '_lesson_editor_placeholder', :data => {:placeholder => slide.title.blank?} %>
  </h2>
  <div class="video1-content">
    <%= text_area_tag :text, (slide.text.blank? ? t('captions.insert_slide_content_here') : slide.text.html_safe), :id => "ta-#{slide.id}", :class => 'tinymce _lesson_editor_placeholder', :data => {:placeholder => slide.text.blank?} %>
  </div>
  <%= render :partial => 'lesson_editor/slides/parts/video', :locals => {:slide => slide, :position => 1, :video => slide.video_at(1), :classes => 'cover-choose-image-left'} %>
<% end %>

<script type="text/javascript">
  initTinymce('ta-<%= slide.id %>');
</script>
