<div class="box">
  <%= form_tag("/lesson_editor/save_slide", :remote => true) do %>
    <%= hidden_field_tag :slide_id, slide.id %>
    <%- if slide.media_elements_slides.count > 0 %>
    <%= link_to image_tag("http://lorempixel.com/900/560"), {:action => :show_gallery, :slide => slide.id} , :remote => true, :class => "show-gallery" %>
      <%= hidden_field_tag :media_element_1, slide.media_elements_slides.first.media_element_id, :class=> "media-tag-cover-1"  %>
    <%- else %>
      <%= hidden_field_tag :media_element_1, "", :class=> "media-tag-cover-1" %>
      <div class="cover-choose-image">
        <%= link_to image_tag("choose-image.gif"), {:action => :show_gallery, :slide => slide.id} , :remote => true, :class => "show-gallery" %>
        <br />
        choose an image
      </div>
    <%- end %>
  <% end %>
	<div class="title">

    <h2><%= slide.lesson.title %></h2>
  </div>
</div>
<div class="cover-slide-footer">
  <div class="subject pull-left">
    <%= slide.lesson.subject.description %>
  </div>
  <div class="author pull-right">
    <%= t "captions.author"%>: <span class="name"><%=  @current_user.full_name %></span>
  </div>
</div>
