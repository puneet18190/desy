<%
  classes_left = 'cover-choose-image-left choose-small'
  classes_right = 'cover-choose-image-right choose-small'
%>

<%= form_tag save_slide_path(slide.lesson_id, slide.id), :method => :post, :remote => true, :id => "form-#{slide.id}" do %>
  <%= render :partial => 'lesson_editor/slides/parts/image', :locals => {:slide => slide, :position => 1, :image => slide.image_at(1), :classes => classes_right} %>
  <%= render :partial => 'lesson_editor/slides/parts/image', :locals => {:slide => slide, :position => 2, :image => slide.image_at(2), :classes => classes_left} %>
  <%= render :partial => 'lesson_editor/slides/parts/image', :locals => {:slide => slide, :position => 3, :image => slide.image_at(3), :classes => classes_right} %>
  <%= render :partial => 'lesson_editor/slides/parts/image', :locals => {:slide => slide, :position => 4, :image => slide.image_at(4), :classes => classes_left} %>
<% end %>
