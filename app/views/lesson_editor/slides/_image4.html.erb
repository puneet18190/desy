<%= form_tag save_slide_path(slide.lesson_id, slide.id), :method => :get, :remote => true, :id => "form-#{slide.id}" do %>
  <%= render :partial => 'lesson_editor/slides/parts/image', :locals => {:slide => slide, :position => 1, :image => slide.image_at(1)} %>
  <%= render :partial => 'lesson_editor/slides/parts/image', :locals => {:slide => slide, :position => 2, :image => slide.image_at(2)} %>
  <%= render :partial => 'lesson_editor/slides/parts/image', :locals => {:slide => slide, :position => 3, :image => slide.image_at(3)} %>
  <%= render :partial => 'lesson_editor/slides/parts/image', :locals => {:slide => slide, :position => 4, :image => slide.image_at(4)} %>
<% end %>
