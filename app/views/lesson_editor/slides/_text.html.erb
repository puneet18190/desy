<div class="slide-content text normal-size">
  <%= form_tag save_slide_path(slide.lesson_id, slide.id), :method => "post", :remote => true, :id => "form-#{slide.id}" do %>
    
    <div class="item title-container">
      <%= text_field_tag :title, (slide.title.blank? ? t('lesson_editor.placeholders.title') : slide.title), :class => '_lesson_editor_placeholder', :data => {:placeholder => slide.title.blank?}, :maxlength => t('language_parameters.slide.length_title') %>
    </div>
    
    <div class="item text-container">
      <%= text_area_tag :text, (slide.text.blank? ? t('lesson_editor.placeholders.text') : slide.text.html_safe), :id => "ta-#{slide.id}", :class => '_lesson_editor_placeholder', :data => {:placeholder => slide.text.blank?} %>
    </div>
    
  <% end %>
</div>


<script type="text/javascript">
  initTinymce('ta-<%= slide.id %>');
</script>
