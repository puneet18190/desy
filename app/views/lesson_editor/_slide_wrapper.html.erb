<li id="slide_in_lesson_editor_<%= slide.id %>" class="<%= class_slide %>" data-slide-id="<%= slide.id %>" data-kind="<%= slide.kind %>" data-position="<%= slide.position %>" data-loaded="<%= loaded %>">
  <%= div_covering.html_safe %>
  <%= render :partial => "slide_buttons", :locals => {:slide => slide} %>
  <div class="slide-content <%= slide.kind %>">
    <% if loaded %>
      <%= render :partial => "lesson_editor/slides/#{slide.kind}", :locals => {:slide => slide} %>
    <% else %>
      <%= render :partial => 'lesson_editor/slides/loading' %>
    <% end %>
  </div>
</li>
