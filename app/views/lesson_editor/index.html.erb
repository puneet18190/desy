<% content_for :nav do %>
  <nav id="heading">
    <!-- slides top numbered navigation -->
    <ul id="slide-numbers">
      <%- @slides.each_with_index do |slide, index|%>
        <li class="<%= (index == 0) ? 'unsortable' : ''%>">
          <a href="#<%= slide.position %>" class="<%= (index == 0) ? 'active' : ''%>" data-slide="<%= slide.id%>"><%= index + 1 %></a>
          <div class="slide-tooltip">
            <%= render :partial => "shared/lesson_thumbnails/small/#{slide.kind}" , :locals => { :slide => slide }%>
          </div>
        </li>
      <%end%><!-- end each -->
      <li class="unsortable">
        <%= link_to "add slide", {:action => :add_new_slide, :slide => @lesson.slides.first.id} , :remote => true, :class => "add add-small _add_slide" %>
      </li>
    </ul>
  </nav>
<% end %>
<ul id="slides">
  <%= render :partial => "index_slides", :locals => {:slides => @slides}%>
</ul>