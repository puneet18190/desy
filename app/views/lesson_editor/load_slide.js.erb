<% if @ok %>
  var slide = $('#slide_in_lesson_editor_<%= @slide_id %>');
  slide.find('.slide-not-loaded').html('<%= j render(:partial => "lesson_editor/slides/#{@slide.kind}", :locals => {:slide => @slide}) %>');
  slide.find('.slide-not-loaded').removeClass('slide-not-loaded').addClass('slide-content');
  slide.data('loaded', true);
  $('html.lesson-editor-layout ul#slides input').attr('autocomplete', 'off');
  slide.find('.slide-content .image.editable').each(function() {
    makeDraggable($(this).attr('id'));
  });
<% end %>
