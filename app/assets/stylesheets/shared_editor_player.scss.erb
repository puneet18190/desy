/*MENU*/
  @mixin buttonExitElement {
  $button-size: 4.5em;
  & {
    display: block;
    width: $button-size;
    height: $button-size;
    background-image: url(<%= asset_path 'set-icone-editor.svg' %>);
    background-repeat: no-repeat;
    background-size: ($button-size*4) ($button-size*10);
    padding:0;
  }
  &:hover {
    cursor: pointer;
  }
  &.exitButton {
    font-size: 0.3em;
    background-position: (-$button-size*2) 0;
    opacity:0.2;
  }
  
 }
 /*FINE MENU*/
 .exitContent {
    padding-top:7px;
    a {
      @include buttonExitElement;
    }
  }
  .exitButton {
   @include buttonExitElement;
 }
