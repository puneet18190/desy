	background-image: url(<%= asset_path 'icone_editor_elementi.svg' %>);
	background-repeat: no-repeat;
	background-position:0 0;
	padding:0;
}

.iconMediaElements {
  .audio {
	  @include sharedElements;
    background-position: 0 -2.5em;
	}
}
.scrollVerde {
  .jspTrack {
   background: #3f3f3f;
  }
 .jspDrag {
  background: #41a62a;
 }
}



/*ICONOGRAFIA PER DISTINGUERE GLI ELEMENTI DIDATTICI*/
@mixin iconEditorElement {
  $button-size: 5.5em;
  & {
    float:left;
		margin-right:5px;
    width: $button-size;
    height: $button-size;
    background-image: url(<%= asset_path 'icone_editor_elementi.svg' %>);
    background-repeat: no-repeat;
    background-size: ($button-size*3) ($button-size*4);
    padding:0;
		font-size: 0.5em;
	}
	&:hover {
    cursor: pointer;
  }
	&.videoButton {
	  
    background-position: (-$button-size*2) 0;
		opacity:0.1;
	}
	&.videoButton:hover {
	  background-position: 0 0;
		opacity:1;
	}
	&.videoButton.current {
	  background-position: 0 0;
		opacity:1;
	}
	&.photoButton {
	  background-position: (-$button-size*2) (-$button-size*2);
		opacity:0.1;
	}
	&.photoButton:hover {
	  font-size: 0.5em;
		background-position: 0 (-$button-size*2);
		opacity:1;
	}
	&.photoButton.current {
	  background-position: 0 (-$button-size*2);
		opacity:1;
	}
	&.iconButton {
	  background-position: 0 (-$button-size*2);
		opacity:1;
	}
	&.audioButton {
	  background-position: (-$button-size*2) (-$button-size);
		opacity:0.1;
	}
	&.audioButton:hover {
	  background-position: 0 (-$button-size);
		opacity:1;
	}
	&.audioButton.current {
	  background-position: 0 (-$button-size);
		opacity:1;
	}
}
.videoButton {
   @include iconEditorElement;
 }
.photoButton {
   @include iconEditorElement;
}
.iconButton {
   @include iconEditorElement;
}
.audioButton {
   @include iconEditorElement;
}

/*MENU CONDIVISO EDITOR LESSON ED EDITOR ELEMENTS*/
@mixin menuCondivisoElementLessonEditor {
  $button-size: 5.5em;
  & {
    float:left;
		width: $button-size;
    height: $button-size;
    background-image: url(<%= asset_path 'set-icone-editor.svg' %>);
    background-repeat: no-repeat;
    background-size: ($button-size*4) ($button-size*8);
		padding:0;
		font-size:0.8em;
	}
	&:hover {
    cursor: pointer;
  }
	&.creaNuovoButton {
	  font-size: 0.7em;
    background-position: (-$button-size*2) (-$button-size);
		opacity:0.2;
		
	}
	&.creaNuovoButton:hover {
	  font-size: 0.7em;
		background-position: (-$button-size*3) (-$button-size);
		opacity:1;
	}
	&.creaNuovoButton.current {
	  font-size: 0.7em;
		background-position: (-$button-size*3) (-$button-size);
		opacity:1;
	}
	&.deleteButtonOrange {
	  background-position: 0 0;
		opacity:0.2;
	}
	&.deleteButtonOrange:hover {
	  background-position: (-$button-size) 0;
		opacity:1;
	}
	&.deleteButtonOrange.current {
	  background-position: (-$button-size) 0;
		opacity:1;
	}
	&.addButtonOrange {
	  background-position: 0 (-$button-size);
		opacity:0.2;
	}
	&.addButtonOrange:hover {
	  background-position: (-$button-size) (-$button-size);
		opacity:1;
	}
	&.addButtonOrange.current {
	  background-position: (-$button-size) (-$button-size);
		opacity:1;
	}
		
	&.infoButtonOrange {
	  background-position: 0 (-$button-size*2);
		opacity:0.2;
	}
	&.infoButtonOrange:hover {
	  background-position: (-$button-size) (-$button-size*2);
		opacity:1;
	}
	&.infoButtonOrange.current {
	  background-position: (-$button-size) (-$button-size*2);
		opacity:1;
	}
	&.saveButton,&.saveButtonOrange {
	  background-position: 0 (-$button-size*3);
		opacity:0.2;
	}
	&.saveButton:hover {
	  background-position: (-$button-size*3) (-$button-size*3);
		opacity:1;
	}
	&.saveButton.current {
	  background-position: (-$button-size*3) (-$button-size*3);
		opacity:1;
	}
	
	&.saveButtonOrange:hover {
	  background-position: (-$button-size) (-$button-size*3);
		opacity:1;
	}
	&.saveButtonOrange.current {
	  background-position: (-$button-size) (-$button-size*3);
		opacity:1;
	}
}
.creaNuovoButton {
   @include menuCondivisoElementLessonEditor;
 }
.saveButton, .saveButtonOrange {
   @include menuCondivisoElementLessonEditor;
 }
.deleteButtonOrange {
   @include menuCondivisoElementLessonEditor;
 }
.infoButtonOrange {
  @include menuCondivisoElementLessonEditor;
}
.addButtonOrange {
   @include menuCondivisoElementLessonEditor;
 }
