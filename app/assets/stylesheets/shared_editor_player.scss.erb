@mixin sharedElements {
  background-size: 11.3em 22.7em;
	background-image: url(<%= asset_path 'icone_editor_elementi.svg' %>);
	background-repeat: no-repeat;
	background-position:0 0;
	padding:0;
}

.iconMediaElements {
  .audio {
	  @include sharedElements;
    background-position: 0 -2.5em;
	}
}
.scrollVerde {
  .jspTrack {
   background: #3f3f3f;
  }
	.jspHorizontalBar {
   height:8px;
 }
 .jspDrag {
  background: #41a62a;
 }
 
}
/*ICONOGRAFIA PER DISTINGUERE GLI ELEMENTI DIDATTICI*/
@mixin iconEditorElement {
  $button-size: 5.6em;
  & {
    float:left;
		margin-right:5px;
    width: $button-size;
    height: $button-size;
    background-image: url(<%= asset_path 'icone_editor_elementi.svg' %>);
    background-repeat: no-repeat;
    background-size: ($button-size*3) ($button-size*4);
    padding:0;
		font-size: 0.5em;
	}
	
	&.videoButton {
	  background-position: (-$button-size*2) 0;
		opacity:0.1;
	}
	&.videoButton:hover {
	  background-position: 0 0;
		opacity:1;
		
	}
	&.videoButton.current {
	  background-position: 0 0;
		opacity:1;
	}
	&.photoButton {
	  background-position: (-$button-size*2) (-$button-size*2);
		opacity:0.1;
	}
	&.photoButton:hover {
	  font-size: 0.5em;
		background-position: 0 (-$button-size*2);
		opacity:1;
	}
	&.photoButton.current {
	  background-position: 0 (-$button-size*2);
		opacity:1;
	}
	&.audioButton {
	  background-position: (-$button-size*2) (-$button-size);
		opacity:0.1;
	}
	&.audioButton:hover {
	  background-position: 0 (-$button-size);
		opacity:1;
	}
	&.audioButton.current {
	  background-position: 0 (-$button-size);
		opacity:1;
	}
	&.textButton {
	  background-position: (-$button-size*2) (-$button-size*3);
		opacity:0.1;
	}
	&.textButton:hover {
	  background-position: 0 (-$button-size*3);
		opacity:1;
	}
	&.textButton.current {
	  background-position: 0 (-$button-size*3);
		opacity:1;
	}
	&.photoIcon {
	  background-position: 0 (-$button-size*2);
		opacity:1;
		font-size: 0.4em;
	}
	&.videoIcon {
	  background-position: 0 0;
		opacity:1;
		font-size: 0.4em;
	}
	&.audioIcon {
	  background-position: 0 (-$button-size);
		opacity:1;
		font-size: 0.4em;
	}
	&.textIcon {
	  background-position: 0 (-$button-size*3);
		opacity:1;
		font-size: 0.4em;
	}
}
.videoButton {
   @include iconEditorElement;
 }
.photoButton {
   @include iconEditorElement;
}
.audioButton {
   @include iconEditorElement;
}
.textButton {
   @include iconEditorElement;
}
.photoIcon {
   @include iconEditorElement;
}
.videoIcon {
   @include iconEditorElement;
}
.audioIcon {
   @include iconEditorElement;
}
.textIcon {
   @include iconEditorElement;
}

