//ELEMENTI IN COMUNE TRA EDITOR E PLAYER//
@mixin sharedElements {
  background-size: 11.3em 22.7em;
  background-image: url(<%= asset_path 'icone_editor_elementi.svg' %>);
  background-repeat: no-repeat;
  background-position:0 0;
  padding:0;
}

.iconMediaElements {
  .audio {
    @include sharedElements;
    background-position: 0 -2.5em;
  }
}
.scrollVerde {
  .jspTrack {
   background: #3f3f3f;
  }
  .jspHorizontalBar {
   height:8px;
 }
 .jspDrag {
  background: #41a62a;
 }
 
}

.scrollBlu {
  .jspTrack {
   background: #3f3f3f;
  }
  .jspHorizontalBar {
   height:8px;
 }
 .jspDrag {
  background: #2EAADC;
 }
 
}


$icon-size: 5.6em;
/*ICONOGRAFIA PER DISTINGUERE GLI ELEMENTI DIDATTICI*/
@mixin iconEditorElement($font-size: 0.5em) {
  
  & {
    float:left;
    
    width: $icon-size;
    height: $icon-size;
    background-image: url(<%= asset_path 'icone_editor_elementi.svg' %>);
    background-repeat: no-repeat;
    background-size: ($icon-size*3) ($icon-size*4);
    padding:0;
    font-size: $font-size;
  }
}
.videoButton {
  @include iconEditorElement(0.7em);
  margin-right:0px;
  background-position: (-$icon-size) 0;
  opacity:0.3;
  cursor:pointer;
  &:hover, &.current {
    background-position: 0 0;
    opacity:1;
  }
 }
.photoButton {
  @include iconEditorElement(0.7em);
  margin-right:0px;
  background-position: (-$icon-size) (-$icon-size*2);
  opacity:0.3;
  cursor:pointer;
  &:hover, &.current {
    background-position: 0 (-$icon-size*2);
    opacity:1;
  }
}
.audioButton {
  @include iconEditorElement(0.7em);
  margin-right:0px;
  background-position: (-$icon-size*2) (-$icon-size);
  opacity:0.1;
  cursor:pointer;
  &:hover, &.current {
    background-position: 0 (-$icon-size);
    opacity:1;
  }
}
.textButton {
  @include iconEditorElement(0.7em);
  margin-right:0px;
  background-position: (-$icon-size) (-$icon-size*3);
  opacity:0.3;
  cursor:pointer;
  &:hover, &.current {
    background-position: 0 (-$icon-size*3);
    opacity:1;
  }
}
.photoIcon {
   @include iconEditorElement(0.4em);
   margin-right:5px;
   background-position: 0 (-$icon-size*2);
    opacity:1;
}
.imageIcon {
   @include iconEditorElement(0.4em);
   margin-right:5px;
   background-position: 0 (-$icon-size*2);
    opacity:1;
}
.videoIcon {
   @include iconEditorElement(0.4em);
   background-position: 0 0;
    opacity:1;
}
.audioIcon {
  @include iconEditorElement(0.4em);
  margin-right:5px;
  background-position: 0 (-$icon-size);
  opacity:1;
}
.textIcon {
  @include iconEditorElement(0.4em);
  margin-right:5px;
  background-position: 0 (-$icon-size*3);
  opacity:1;
}


