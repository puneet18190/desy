

.media_element_editor-layout .contentFormInfoMediaElementEditor ._tags_container {
  width: 336px;
  height: 170px;
  display: block;
  resize: none;
  line-height: 20px;
  border-radius: 10px;
  border: 3px solid #43a848;
  padding: 0;
  line-height: 15px;
  box-shadow: 0px 2px 2px rgba(50, 50, 50, 0.1) inset;
  color: #fff;
  font-size: 13px;
  font-family: Arial, sans-serif;
  outline: none;
  background-color: #454343;
  overflow: auto;
  position: relative;
  
}
.lesson-editor-layout ul#slides.new .info ._tags_container {
  width: 336px;
  height: 140px;
  display:block;
  resize: none; 
  line-height: 20px; /* Altezza di riga */
  border-radius: 10px;
  border: 3px solid #f29400;
  padding: 0;
  line-height: 15px;
  box-shadow: 0px 2px 2px rgba(50, 50, 50, 0.1) inset;
  color: #fff;
  font-size: 13px;
  font-family: Arial, sans-serif;
  margin-top: 30px;
  outline: none;
  background-color: #E48D1F;
  overflow:auto;
  ._placeholder {
    position: absolute;
    top: 5px;
    left: 10px;
  }
  span{
    border-radius: 5px;
    padding: 0 3px;
    margin: 5px 0 0 5px;
    background-color: #fff;
    float:left;
    color: #373737;
    &.new_tag {
      background-color: lime;
    }
    a{
      display:block;
      float:right;
      $button-size: 10px;
      width: $button-size;
      height: $button-size;
      background-image: url(<%= asset_path 'set-icone-editor.svg' %>);
      background-repeat: no-repeat;
      background-size: ($button-size*4) ($button-size*10);
      background-position: -10px 0;
      margin: 2px;
      color: #373737;
      &:hover{
        background-position: -20px 0;
        opacity:0.8;
      }
    }
  }
}
.media_element_editor-layout #form_info_update_media_element_in_editor.formInfoMediaElementEditor input#tags, 
.media_element_editor-layout #form_info_new_media_element_in_editor.formInfoMediaElementEditor .contentFormInfoMediaElementEditor input#tags, 
.lesson-editor-layout ul#slides.new .info ._tags_container input#tags {
  overflow: visible;
  clear: both;
  border: none;
  margin-top: 5px;
  padding: 0 10px;
  box-shadow: none;
  width: 295px;
  height: auto;
}