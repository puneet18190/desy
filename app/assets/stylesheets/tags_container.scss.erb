
@mixin tagContainer {
  display: block;
  resize: none;
  line-height: 20px;
  border-radius: 10px;
  padding: 0;
  box-shadow: 0px 2px 2px rgba(50, 50, 50, 0.1) inset;
  color: #fff;
  font-size: 13px;
  font-family: Arial, sans-serif;
  outline: none;
  overflow: auto;
  position: relative;
  ._placeholder {
    position: absolute;
    top: 5px;
    left: 10px;
  }
  span{
    border-radius: 5px;
    padding: 0 3px;
    margin: 5px 0 0 5px;
    background-color: #fff;
    float:left;
    color: #373737;
    
    a{
      display:block;
      float:right;
      $button-size: 10px;
      width: $button-size;
      height: $button-size;
      background-image: url(<%= asset_path 'set-icone-editor.svg' %>);
      background-repeat: no-repeat;
      background-size: ($button-size*4) ($button-size*10);
      background-position: -10px 0;
      margin: 5px 2px 0px 5px;
      color: #373737;
      &:hover{
        background-position: -20px 0;
        opacity:0.8;
      }
    }
  }
  #tags {
  overflow: visible;
  clear: both;
  border: none;
  margin-top: 5px;
  margin-bottom: 5px;
  padding: 0 10px;
  box-shadow: none;
  width: 295px;
  height: auto;
}
}
.media_element_editor-layout .contentFormInfoMediaElementEditor ._tags_container {
  width: 336px;
  height: 170px;
  border: 3px solid #43a848;
  background-color: #454343;
  @include tagContainer;
  span.new_tag {
    color:#fff;
    background-color: #373636;

    a {
      background-position: -30px 0;
      &:hover {
       background-position: 0px 0;  
      }
    }
  }
}
.image_editor-controller {
  .ui-autocomplete {
    text-align: left;
    background-color: #fff;
    opacity:1;
    width:325px;
  }
  ul.ui-autocomplete, ul.ui-autocomplete li, ul.ui-autocomplete li:hover, ul.ui-autocomplete li a, ul.ui-autocomplete li a:hover {
    color: #30302f;
  }
  .ui-autocomplete.ui-menu .ui-menu-item a.ui-state-focus,
  .ui-autocomplete.ui-menu .ui-menu-item a.ui-state-active { 
    color: #43a848;
  }
}
.lesson-editor-layout ul#slides.new .info ._tags_container {
  width: 336px;
  height: 140px;
  border: 3px solid #f29400;
  background-color: #E48D1F;
  margin-top:30px;
  @include tagContainer;
  
  span.new_tag {
    background-color: #e9a44c;
    a {
      background-position: 0px 0;
      &:hover {
       background-position: -20px 0;  
      }
    }
  }
}
.lesson-editor-layout {
  .ui-autocomplete {
    background-color: #493f34;
    opacity:1;
  }
  .ui-autocomplete.ui-menu .ui-menu-item a.ui-state-focus,
  .ui-autocomplete.ui-menu .ui-menu-item a.ui-state-active { 
    color: #f29400;
  }
}
#load-media-element ._tags_container {
  width: 336px;
  height: 150px;
  border: 3px solid #373737;
  margin-bottom:5px;
  background-color: #454343;
  @include tagContainer;
  span {
    a {
      background-position: -30px 0;  
    }
  }
  span.new_tag {
    color: #fff;
    background-color: #373636;
    padding: 0 3px;
    a {
      background-position: -30px 0;
      &:hover {
       background-position: 0px 0;  
      }
    }
  }
}
.media_elements-controller {
  .ui-autocomplete {
    width: 325px;
    background-color: rgb(31,31,31)
    
  }
  .ui-autocomplete.ui-menu .ui-menu-item a.ui-state-focus,
  .ui-autocomplete.ui-menu .ui-menu-item a.ui-state-active { 
    color: #41a62a;
  }
}
