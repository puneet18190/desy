/*DASHBOARD*/
@mixin contentNew {
  background-color:#faf9fa;
  color:#bbbbbb;
  font-size:110%;
  text-align:center;
}
@mixin contentLayout {
  margin-bottom:1%;
	-moz-box-shadow: 1px 5px 5px #e8e8e8;
  -webkit-box-shadow: 1px 5px 5px #e8e8e8;
  box-shadow: 1px 5px 5px #e8e8e8;
	
	h1 {
	  font-size: 110%;
		color:#f29400;
		padding:0px;
	}
	h2 {
	  font-size: 140%;
	}
}
.boxContentIndex {
  p {font:  180% 'Nunito', sans-serif;}
  padding:2% 0 2% 2%;
  background-color:#f7f7f7; 
  width:45.3%;
	margin-left:27px;
	float:left;
	a {
	  color:#2faadc
	}
}
.boxViewSingleLesson {
  @include contentLayout;
	background-color:#fbfafb;
	float:left;
	width:47.3%;
	margin-left:1.5%;
	&:last-child {
		
		float:left;
	}
	.contentInterno {
	  padding:4%;
		height:110px;
		
	}
	&.createNew {
    @include contentNew;
		height:225px;
  }
  &.createNew:hover {
    cursor:pointer;
  }
}

.boxViewSingleMediaElement {
  @include contentLayout;
	width:221px;
	float:left;
	margin-left:1.1%;
	margin-right:0.8%;
	margin-bottom:20px;
	
	.contentInterno {
	  padding:0%;
		height:274px;
		background-color:#fbfafb;
		
	}
	&.createNew {
    @include contentNew;
		padding-top:70px;
		height:232px;
		&.createNew:hover {
      cursor:pointer;
    }
  }
	.menuController {
	  font-size: 55%;
	}
	.description {
    padding-top:1%;
	  padding-left:5%;
		h3 {
	    color:#41a62a;
		  font-size: 90%;
		  padding-top:1%;
	  }
  }
}
