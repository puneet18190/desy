#loading {
  display: none;
  background: url("/images/invisibile_background.gif");
  z-index: 1000;
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  text-align: center;
}

#loading, #loading p, #loading p img {
  vertical-align: middle;
  font-size: 100%;
  line-height: 81em;
}

.content {
	padding: 20px 0 43px 0;
	color:#939393;
	
}
.griglia-contenuti {
  width:97%;
	margin:0 auto;
	
}
/*DASHBOARD*/
@mixin contentNew {
  background-color:#faf9fa;
  color:#bbbbbb;
  font-size:110%;
  text-align:center;
}
@mixin contentLayout {
  margin-bottom:1%;
	-moz-box-shadow: 0px 3px 4px #d3d3d3;
  -webkit-box-shadow: 0px 3px 4px #d3d3d3;
  box-shadow: 0px 3px 4px #d3d3d3;
	
	h1 {
	  font:  110% 'Nunito', sans-serif;
	  color:#f29400;
		padding:0px;
	}
	h2 {
	  font:  140% 'Nunito', sans-serif;
	}
}
.boxContentIndex {
  p {font:  180% 'Nunito', sans-serif;}
  padding:2% 0 2% 2%;
  background-color:#f7f7f7; 
  width:47%;
	float:left;
	
	a {
	  color:#2faadc
	}
}
.boxViewSingleLesson {
  @include contentLayout;
	background-color:#fbfafb;
	float:left;
	width:49%;
	
	&:last-child {
	  float:right;
	}
	.contentInterno {
	  padding:4%;
		height:110px;
		
	}
	.contentNew {
	  p {padding-top:90px;}
		.createButton a {
		  background: url(<%= asset_path 'create.png' %>) top left no-repeat;
			padding-bottom:90px;
			padding-left:120px;
		}
		.createButton a:hover {
			  background: url(<%= asset_path 'create_white.png' %>) top center no-repeat;
		}
		
	}
}

.boxViewSingleMediaElement {
  @include contentLayout;
	float:left;
	width:200px;
	margin-right: 2%;
	margin-bottom:20px;
	h3 {
	    color:#41a62a;
		  font-size: 90%;
		  padding-bottom:0%;
	  }
	.contentInterno {
	  padding-top:0%;
		height:274px;
		background-color:#fbfafb;
		a.createButton {
		  background: url(<%= asset_path 'create.png' %>) top center no-repeat;
			padding:50px;
			&:hover {
			  background: url(<%= asset_path 'create_white.png' %>) top center no-repeat;
			}
		}
		
	}
	.menuController {
	  font-size: 55%;
	}
	.description {
    padding-top:1%;
	  padding-left:5%;
		
  }
}
@mixin emptyFormat {
  h1 {
	  font:  180% 'Nunito', sans-serif;
	}
}
.empty {
  margin: 0 auto;
	padding-top:5em;
	padding-bottom:10em;
	clear:both;
	width:30%;
	@include emptyFormat;
	.createButton {
	  float:left;
	}
	.createButton a {
		  background: url(<%= asset_path 'add-element-off.svg' %>) bottom right no-repeat;
			background-size:6em;
			padding:4em;
			
		}
	.createButton	a:hover {
			  background: url(<%= asset_path 'add-element-on.svg' %>) bottom right no-repeat;
				background-size:6em;
			}
}
.emptyFilter {
  margin: 0 auto;
	padding-top:5em;
	padding-bottom:5em;
	text-align:center;
	@include emptyFormat;
}
.advanced-search-content {
  float:left;
	width:99.5%;
	color:#c0bebe;
}