#loading {
  display: none;
  z-index: 100;
  position:absolute;
  left:0%;
  top:0;
  width:100%;
  height:100%; /* funziona solo se prima lo hai assegnato al parent */
  background:#fff;
  opacity:0.5;	
  text-align: center;
}
.containerLoading {
  position: absolute;
  top:50%;
	left:50%;
	z-index: 10;
}

.content {
	padding: 20px 0 43px 0;
	color:#939393;
	
}
.griglia-contenuti {
  width:97%;
	margin:0 auto;
	
}
/*DASHBOARD*/

.boxContentIndex {
  p {font:  180% 'Nunito', sans-serif;}
  padding:2% 0 2% 2%;
  background-color:#f7f7f7; 
  width:47%;
	float:left;
	
	a {
	  color:#2faadc
	}
}



@mixin emptyFormat {
  h1 {
	  font:  180% 'Nunito', sans-serif;
	}
}
.empty {
  margin: 0 auto;
	padding-top:5em;
	padding-bottom:10em;
	clear:both;
	width:30%;
	@include emptyFormat;
	.createButton {
	  float:left;
	}
	.createButton a {
		  background: url(<%= asset_path 'add-element-off.svg' %>) bottom right no-repeat;
			background-size:6em;
			padding:4em;
			width:102px;
			
		}
	.createButton	a:hover {
			  background: url(<%= asset_path 'add-element-on.svg' %>) bottom right no-repeat;
				background-size:6em;
				cursor: pointer;
			}
}
.emptyFilter {
  margin: 0 auto;
	padding-top:5em;
	padding-bottom:5em;
	text-align:center;
	@include emptyFormat;
}
.advanced-search-content {
  float:left;
	width:99.5%;
	color:#c0bebe;
}
