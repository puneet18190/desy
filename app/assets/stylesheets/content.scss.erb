.content {
	padding: 20px 0 43px 0;
	color:#939393;
	
}
.griglia-contenuti {
  width:97%;
	margin:0 auto;
	
}
/*DASHBOARD*/
@mixin contentNew {
  background-color:#faf9fa;
  color:#bbbbbb;
  font-size:110%;
  text-align:center;
}
@mixin contentLayout {
  margin-bottom:1%;
	-moz-box-shadow: 1px 5px 5px #e8e8e8;
  -webkit-box-shadow: 1px 5px 5px #e8e8e8;
  box-shadow: 1px 5px 5px #e8e8e8;
	
	h1 {
	  font-size: 110%;
		color:#f29400;
		padding:0px;
	}
	h2 {
	  font-size: 140%;
	}
}
.boxContentIndex {
  p {font:  180% 'Nunito', sans-serif;}
  padding:2% 0 2% 2%;
  background-color:#f7f7f7; 
  width:47%;
	float:left;
	
	a {
	  color:#2faadc
	}
}
.boxViewSingleLesson {
  @include contentLayout;
	background-color:#fbfafb;
	float:left;
	width:49%;
	
	&:last-child {
	  float:right;
	}
	.contentInterno {
	  padding:4%;
		height:110px;
		a.createButton {
		  background: url(<%= asset_path 'create.png' %>) top center no-repeat;
			padding:50px;
			&:hover {
			  background: url(<%= asset_path 'create_white.png' %>) top center no-repeat;
			}
		}
	}
	
}

.boxViewSingleMediaElement {
  @include contentLayout;
	float:left;
	width:200px;
	margin-right: 2%;
	margin-bottom:20px;
	h3 {
	    color:#41a62a;
		  font-size: 90%;
		  padding-bottom:0%;
	  }
	.contentInterno {
	  padding-top:0%;
		height:274px;
		background-color:#fbfafb;
		a.createButton {
		  background: url(<%= asset_path 'create.png' %>) top center no-repeat;
			padding:50px;
			&:hover {
			  background: url(<%= asset_path 'create_white.png' %>) top center no-repeat;
			}
		}
		
	}
	.menuController {
	  font-size: 55%;
	}
	.description {
    padding-top:1%;
	  padding-left:5%;
		
  }
}

