html.audio_editor-controller {
  .dialog_opaco {
    z-index:103;  
  }  
 .mediaEditorAudioContainer {
    .info {
      width:97px;
      background-color:#504f50;
      padding:20px 10px;
      top:0;
      right: 29px;
      background-image:url(<%= asset_path 'tile_colonna_info_audio.gif' %>);
      background-repeat:repeat-x;
      background-position: top left;
      font-size:12px;
      text-align:center;
      a.addButtonContent {
        font-size:2.2em;
        margin-bottom:20px;
        float:none;
        padding:0.4em 1em;
      }
      p {
        margin-top: 30px;
        text-align:left;
      }
    }
    .addAudioandSave {
      border-top: 10px solid #504f50;
      margin-left:56px;
    }
    .audioComponentContent {
      float: left;
      margin: 0px;
      text-align:left;
      width:617px;
    }
    .audioContent {
      float: left;
      padding: 0px;
      border: 1px solid #686969;
      margin-left:10px;
      -webkit-box-shadow: 0px 2px 6px rgba(22, 21, 21, 0.6);
      box-shadow: 0px 2px 6px rgba(22, 21, 21, 0.6);
      width:710px;
      .manigliaAudio {
        float: left;
        width: 93px;
        height: 103px;
        margin: 0px;
        background-image:url(<%= asset_path 'maniglia_audio_off.gif' %>);
        background-repeat:no-repeat;
        background-position: top left;
        &.current {
          background-image:url(<%= asset_path 'maniglia_audio_on.gif' %>);
        }
        &:hover {
          background-image:url(<%= asset_path 'maniglia_audio_on.gif' %>);
          cursor: move;
        }
      }
      &.current {
        border: 1px solid #fff;
      }
      .audioComponentTitle {
        width: auto;
        background-color: #424343;
        padding: 5px 0px 5px 20px;
        color:white;
        height:20px;
      }
      .audioComponentPlayer {
        height: 46px;
        background-color: #303030;
      }
      .audioComponentBottom {
        padding:7px 20px 13px 20px;
        background-color: #232323;
        height:7px;
        font-size:10px;
        font-family:'Nunito', sans-serif;
        color:#787575;
        
        .audioComponentDurations {
          width: 260px;
          float: left;
        }
        .audioComponentControls {
          width: 200px;
          float: right;
        }
      }
    }
    .contatore {
      float: left;
      margin: 5px;
      width: 18px;
    }
  }
  ._audio_editor_component {
    position: relative;
    width: 756px;
    height: 113px;
    &._last {
      height: 109px;
    }
    .boxGhost {
      height: 103px;
      width: 617px;
      position: absolute;
      z-index: 102;
      top: 1px;
      left: 132px;
      cursor: pointer;
    }
    a.exitButton {
      position: absolute;
      z-index: 103;
      float:right;
      background-position: 0em 0;
      top: 82px;
      right: 10px;
      &:hover {
        opacity:1;
      };
    }
  }
  
  #audio_editor_timeline {
    margin-left: 30px;
    margin-bottom: 30px;
  }
  
  #audio_editor_box_ghost {
    position: absolute;
    z-index: 100;
    left: 30px;
  }
  
  #audio_editor_timeline, #audio_editor_box_ghost {
    height: 448px;
    width: 768px;
  }
  
  .jspVerticalBar {
    top: 0;
  }
  
  .jspTrack {
    background-color: #3F3F3F;
  }
  
  .jspDrag {
    background-color: #43A848;
  }
  
  
  
}
