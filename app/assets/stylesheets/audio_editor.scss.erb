html.audio_editor-controller {
  
 .mediaEditorAudioContainer {
    .audioEditorTimeline {
      margin-left:10px;
      width:746px;
      margin-left:30px;
    }
    .info {
      width:77px;
      background-color:#504f50;
      text-align:center;
      padding:20px;
      top:0;
      right: 29px;
      background-image:url(<%= asset_path 'tile_colonna_info_audio.gif' %>);
      background-repeat:repeat-x;
      background-position: top left;
    }
    .addAudioandSave {
      border-top: 10px solid #504f50;
      margin-left:56px;
    }
    .audioComponentContent {
      float: left;
      margin: 0px;
      text-align:left;
      width:617px;
    }
    .audioContent {
      float:left;
      padding:0px;
      outline:1px solid #686969;
      margin-left:10px;
      -webkit-box-shadow: 0px 2px 6px rgba(22, 21, 21, 0.6);
      box-shadow: 0px 2px 6px rgba(22, 21, 21, 0.6);
      width:710px;
      .manigliaAudio {
        float: left;
        width: 93px;
        height: 103px;
        margin: 0px;
        background-image:url(<%= asset_path 'maniglia_audio_off.gif' %>);
        background-repeat:no-repeat;
        background-position: top left;
        &.current {
          background-image:url(<%= asset_path 'maniglia_audio_on.gif' %>);
        }
        &:hover {
          background-image:url(<%= asset_path 'maniglia_audio_on.gif' %>);
          cursor: move;
        }
      }
      &.current {
        outline:1px solid #fff; 
      }
      .audioComponentTitle {
        width: auto;
        background-color: #424343;
        padding: 5px 0px 5px 20px;
        color:white;
        height:20px;
      }
      .audioComponentPlayer {
        height: 46px;
        background-color: #303030;
      }
      .audioComponentBottom {
        padding:10px 20px;
        background-color: #232323;
        height:7px;
        font-size:10px;
        font-family:'Nunito', sans-serif;
        color:#787575;
        height: 7px;

        .audioComponentDurations {
          width: 260px;
          float: left;
        }
        .audioComponentControls {
          width: 200px;
          float: right;
        }
      }
    }
    .contatore {
      float: left;
      margin: 5px;
    }
  }
  ._audio_editor_component {
    position: relative;
    .boxGhost {
      height: 103px;
      width: 617px;
      position: absolute;
      z-index: 102;
      top: 0;
      left: 121px;
      cursor: pointer;
    }
  }
}
