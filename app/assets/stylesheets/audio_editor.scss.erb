html.audio_editor-controller {
  .dialog_opaco {
    z-index:103;  
  }  
 .mediaEditorAudioContainer {

    .info {
      width:97px;
      height: 407px;
      background-color:#504f50;
      padding:20px 10px;
      top:0;
      right: 29px;
      background-image:url(<%= asset_path 'tile_colonna_info_audio.gif' %>);
      background-repeat:repeat-x;
      background-position: top left;
      font-size:12px;
      text-align:center;
      a.addButtonContent {
        font-size:2.2em;
        margin-bottom:20px;
        float:none;
        padding:0.4em 1em;
      }
      p {
        margin-top: 30px;
        text-align:left;
      }
      .bottoniVerdi a {
        width:auto;
        margin-bottom:0px;
        margin-top:270px;
      }
    }
    .addAudioandSave {
      border-top: 10px solid #504f50;
      margin-left:56px;
    }
    .audioComponentContent {
      float: left;
      margin: 0px;
      text-align:left;
      width:617px;
    }
    .audioContent {
      float: left;
      padding: 0px;
      border: 1px solid #686969;
      margin-left:10px;
      -webkit-box-shadow: 0px 2px 6px rgba(22, 21, 21, 0.6);
      box-shadow: 0px 2px 6px rgba(22, 21, 21, 0.6);
      width:710px;
      background-color:#232323;
      .manigliaAudio {
        float: left;
        width: 93px;
        height: 103px;
        margin: 0px;
        background-image:url(<%= asset_path 'maniglia_audio_off.gif' %>);
        background-repeat:no-repeat;
        background-position: top left;
        &.current {
          background-image:url(<%= asset_path 'maniglia_audio_on.gif' %>);
        }
        &:hover {
          background-image:url(<%= asset_path 'maniglia_audio_on.gif' %>);
          cursor: move;
        }
      }
      &.current {
        border: 1px solid #fff;
      }
      .audioComponentTitle {
        width: auto;
        background-color: #424343;
        padding: 5px 0px 5px 20px;
        color:white;
        height:20px;
      }
      .audioComponentPlayer {
        height: 46px;
        background-color: #303030;
        
          .audioSlider, .audioDoubleSlider {
            margin-top: 0;
            width:93.4%;
            position: absolute;
            left: 28px;
          }
          
          padding:0;
          width:615px;
          position:absolute;
          top:31px;
          
          z-index:80;
          font: 10px 'Nunito', sans-serif;
          color:#787575;
          text-align: left;
          
          
          .cutter {
            padding-top: 18px;
            height:28px;
            background-color:#303030;
            margin-bottom:10px;
            .audioSlider {
              cursor: pointer;
              z-index: 50;
              .ui-slider-handle {
                cursor: default;
                position: absolute;
                background-color: #787575;
                border-radius:0%;
                height: 46px;
                width: 0;
                top: -19px;
                margin-left: 0;
                border:1px solid #787575;
                &.selected {
                  background-color:#fff;
                  border:1px solid #fff;
                }
              }
            }
            .audioDoubleSlider {
              cursor: pointer;
              z-index: 99;
              .ui-slider-handle {
                cursor: pointer;
                position: absolute;
                background-color: #43A848;
                border-radius: 0%;
                height: 46px;
                width: 0;
                top: -19px;
                margin-left: 0;
                border-left: 1px solid rgb(20, 20, 20);
                border-right: 7px solid rgb(70, 70, 70);
                border-top: 1px solid rgb(70, 70, 70);
                border-bottom: 1px solid rgb(70, 70, 70);
                &:hover {
                  /*background-color: red;*/
                  border-left:4px solid rgb(141, 141, 141);
                  border-right:4px solid rgb(141, 141, 141);
                  border-top:1px solid rgb(141, 141, 141);
                  border-bottom:1px solid rgb(141, 141, 141);
                }
                &.selected {
                  /*background-color: red;*/
                  border-left:1px solid rgb(20, 20, 20);
                  border-right:7px solid #fff;
                  border-top:1px solid #fff;
                  border-bottom:1px solid #fff;
                }
              }
              .ui-slider-range {
                position: absolute;
                background: url(<%= asset_path 'bg_ui_slider_horizontal.png' %>) top left repeat-x;
              }
            }
            .sliderDisabler, .underDoubleSlider {
              position: absolute;
              height: 46px;
              top: 0px;
              
            }
            .sliderDisabler {
              z-index: 100;
              width: 100%;
              left:0;
              outline:1px solid red;
            }
            .underDoubleSlider {
              z-index: 98;
              width: 93.4%;
              left: 28px;
            }
            .ui-slider-horizontal {
              height:13px;
              background-color: #000;
            }
            .callout {
              top: -11px;
              z-index:20;
              position:absolute;
              border:0;
              left:440px;
            }
          
        }
        



      }
      .audioComponentBottom {
        padding:7px 20px 13px 20px;
        background-color: #232323;
        height:7px;
        font-size:10px;
        font-family:'Nunito', sans-serif;
        color:#787575;
        
        .audioComponentDurations {
          width: 260px;
          float: left;
        }
        .audioComponentControls {
          width: 200px;
          float: right;
        }
      }
    }
    .contatore {
      float: left;
      margin: 5px;
      width: 18px;
    }
  }
  ._audio_editor_component {
    position: relative;
    width: 756px;
    height: 113px;
    &._last {
      height: 109px;
    }
    .boxGhost {
      height: 103px;
      width: 617px;
      position: absolute;
      z-index: 102;
      top: 1px;
      left: 132px;
      cursor: pointer;
    }
    a.exitButton {
      position: absolute;
      z-index: 103;
      float:right;
      background-position: 0em 0;
      top: 82px;
      right: 10px;
      &:hover {
        opacity:1;
      };
    }
    a.play {
      position:absolute;
      top:84px;
      right: 80px;
      background-image: none;
      font-size: 12px;
      color: #787575;
opacity: 1;
      
    }
  }
  
  #audio_editor_timeline {
    margin-left: 30px;
    margin-bottom: 30px;
  }
  
  #audio_editor_box_ghost {
    position: absolute;
    z-index: 100;
    left: 30px;
  }
  
  #audio_editor_timeline, #audio_editor_box_ghost {
    height: 448px;
    width: 768px;
  }
  
  .jspVerticalBar {
    top: 0;
  }
  
  .jspTrack {
    background-color: #3F3F3F;
  }
  
  .jspDrag {
    background-color: #43A848;
  }
  
  
  
  /* FIXME TEMPORANEI */
  ._double_slider .ui-slider-handle {
    background-color: red;
  }
  ._double_slider .ui-slider-range {
    background-color: aqua;
  }
  
}
