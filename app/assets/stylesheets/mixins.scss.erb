@mixin emptyFormat {
  
  h1 {
    
    font: 180% 'Nunito', sans-serif;
    
  }
}

@mixin title-bar {
  
  margin-bottom: 12px;
  float: left;
  width: 98%;
  color: #fff;
  
}

@mixin float-content {
  
  p {
    
    text-align: center;
    float: left;
    
  }
  
  div {
    
    float: right;
    
  }
  
}

@mixin ulGallery {
  
  .pseudo-ul {
    
    padding: 0;
    margin: 0;
    
    .scroll-pane {
      
      margin-left: 35px;
      width: 840px;
      position: absolute;
      
      .pseudo-li {
        
        float: left;
        
      }
      
    }
    
  }
  
}

@mixin boxShadow {
  
  height: 590px;
  width: 900px;
  background-color: #252323;
  
}

@mixin stileElementiSceltaColori {
  
  padding: 5px;
  outline: 1px solid #e6e6e6;
  cursor: pointer;
  float: left;
  margin-left: 8px;
  margin-top: 2px;
  
  &:hover, &.current {
    
    outline: 2px solid #fff;
    
  }
  
}

@mixin button {
  
  $button-size: 3.8em;
  
  & {
    
    display: inline-block;
    width: $button-size;
    height: $button-size;
    background-image: url(<%= asset_path 'icone_menu_preview.svg' %>);
    background-repeat: no-repeat;
    background-size: ($button-size*2) ($button-size*5);
    padding: 0;
    margin-right: 8px;
    
  }
  
  &:hover {
    
    cursor: pointer;
    
  }
  
  &.edit {
    
    background-position: 0 (-$button-size*2);
    
  }
  
  &.edit:hover {
    
    background-position: (-$button-size) (-$button-size*2);
    
  }
  
  &.report {
    
    background-position: 0 0;
    
  }
  
  &.report:hover {
    
    background-position: (-$button-size) 0;
    
  }
  
  &.report_light {
    
    background-position: (-$button-size) 0;
    
  }
  
  &.close {
    
    background-position: 0 (-$button-size);
    
  }
  
  &.close:hover {
    
    background-position: (-$button-size) (-$button-size);
    
  }
  
  &.change_info {
    
    background-position: 0 (-$button-size*3);
    
  }
  
  &.change_info:hover {
    
    background-position: (-$button-size) (-$button-size*3);
    
  }
  
  &.change_info_light {
    
    background-position: (-$button-size) (-$button-size*3);
    
  }
  
}
