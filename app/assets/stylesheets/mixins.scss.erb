@mixin emptyFormat {
  
  h1 {
    
    font: 180% 'Nunito', sans-serif;
    
  }
}

@mixin title-bar {
  
  margin-bottom: 12px;
  float: left;
  width: 98%;
  color: #fff;
  
}

@mixin float-content {
  
  p {
    
    text-align: center;
    float: left;
    
  }
  
  div {
    
    float: right;
    
  }
  
}

@mixin ulGallery {
  
  .pseudo-ul {
    
    padding: 0;
    margin: 0;
    
    .scroll-pane {
      
      margin-left: 35px;
      width: 840px;
      position: absolute;
      
      .pseudo-li {
        
        float: left;
        
      }
      
    }
    
  }
  
}

@mixin boxShadow {
  
  height: 590px;
  width: 900px;
  background-color: #252323;
  
}

@mixin stileElementiSceltaColori {
  
  padding: 5px;
  outline: 1px solid #e6e6e6;
  cursor: pointer;
  float: left;
  margin-left: 8px;
  margin-top: 2px;
  
  &:hover, &.current {
    
    outline: 2px solid #fff;
    
  }
  
}

@mixin button {
  
  $button-size: 3.8em;
  
  & {
    
    display: inline-block;
    width: $button-size;
    height: $button-size;
    background-image: url(<%= asset_path 'icone_menu_preview.svg' %>);
    background-repeat: no-repeat;
    background-size: ($button-size*2) ($button-size*5);
    padding: 0;
    margin-right: 8px;
    
  }
  
  &:hover {
    
    cursor: pointer;
    
  }
  
  &.edit {
    
    background-position: 0 (-$button-size*2);
    
  }
  
  &.edit:hover {
    
    background-position: (-$button-size) (-$button-size*2);
    
  }
  
  &.report {
    
    background-position: 0 0;
    
  }
  
  &.report:hover {
    
    background-position: (-$button-size) 0;
    
  }
  
  &.report_light {
    
    background-position: (-$button-size) 0;
    
  }
  
  &.close {
    
    background-position: 0 (-$button-size);
    
  }
  
  &.close:hover {
    
    background-position: (-$button-size) (-$button-size);
    
  }
  
  &.change_info {
    
    background-position: 0 (-$button-size*3);
    
  }
  
  &.change_info:hover {
    
    background-position: (-$button-size) (-$button-size*3);
    
  }
  
  &.change_info_light {
    
    background-position: (-$button-size) (-$button-size*3);
    
  }
  
}

@mixin slide-miniature {
  
  width: 243px; /* 900 scalato al 27% */
  height: 159px; /* 590 scalato al 27%, sarebbe 159.3 ma il 0.3 lo nascondo */
  padding: 21px 26px 26px 26px; /* top: 11 + 10; tutti gli altri: 16 + 10 */
  display: none;
  z-index: 9999999999;
  margin-top: 20px; /* per staccarsi dalle <a> */
  margin-right: 0;
  margin-bottom: 0;
  position: absolute;
  
}

@mixin buttonPlayerVirtual {
  
  width: $button-size;
  height: $button-size;
  background-image: url(<%= asset_path 'icone_menu_virtual.svg' %>);
  background-repeat: no-repeat;
  background-size: ($button-size*2) ($button-size*3);
  padding: 0;
  font-size: 0.688em;
  
}

@mixin buttonPlayer {
  
  width: $button-size;
  height: $button-size;
  background-image: url(<%= asset_path 'icone-player.svg' %>);
  background-repeat: no-repeat;
  background-size: ($button-size*5) ($button-size*4);
  padding: 0;
  
  &:hover {
    
    cursor: pointer;
    
  }
  
}

@mixin iconEditorElementInMediaElementEditor($font-size: 2em) {
  
  float: left;
  width: $icon-size;
  height: $icon-size;
  background-image: url(<%= asset_path 'set-editor-elementi.svg' %>);
  background-repeat: no-repeat;
  background-size: ($icon-size*3) ($icon-size*4);
  padding: 0;
  font-size: $font-size;
  
}

@mixin layoutIconElements {
  
  margin-right: 0px;
  position: absolute;
  bottom: 10px;
  right: 3px;
  font-size: 0.3em;
  
}

/* tenere allineato con content.css; le differenze con tale file sono sottolineate nei commenti */
@mixin read-only-tiny-mce {
  
  /* in content.css è < body, td, pre > */
  /* è anche stato rimosso html overflow: hidden che è stato messo solo per IE */
  color: #5d5c5c;
  font-size: 13px;
  font-family: Arial, Verdana, Helvetica, sans-serif;
  line-height: 14px;
  text-align: left;
  
  td, pre {
    color: #5d5c5c;
    font-size: 13px;
    font-family: Arial, Verdana, Helvetica, sans-serif;
    margin: 8px;
    line-height: 14px;
    text-align: left;
  }
  
  p, ol, ul {
    margin: 0 0 10px 0;
  }
  
  ol, ul {
    padding-left: 40px;
  }
  
  ul {
    list-style-image: url('/assets/pallino.svg'); /* questo ha nome diverso, esistono due duplicati del pallino */
  }
  
  strong, b {
    font-weight: bold;
  }
  
  i, cite, em, var, address, dfn {
    font-style: italic;
  }
  
  a {
    color: $orange;
    text-decoration: none;
  }
  
  a:hover {
    text-decoration: underline;
    cursor: pointer;
  }
  
  .size1 {
    font-size: 13px;
    line-height: 14px;
  }
  
  .size2 {
    font-size: 17px;
    line-height: 19px;
  }
  
  .size3 {
    font-size: 21px;
    line-height: 23px;
  }
  
  .size4 {
    font-size: 25px;
    line-height: 27px;
  }
  
  .size5 {
    font-size: 29px;
    line-height: 32px;
  }
  
  .size6 {
    font-size: 35px;
    line-height: 39px;
  }
  
  body {
    background: #FFF;
  }
  
  body.mceForceColors {
    background: #FFF;
    color: #000;
  }
  
  body.mceBrowserDefaults {
    background: transparent;
    color: inherit;
    font-size: inherit;
    font-family: inherit;
  }
  
  h1 {
    font-size: 2em;
  }
  
  h2 {
    font-size: 1.5em;
  }
  
  h3 {
    font-size: 1.17em;
  }
  
  h4 {
    font-size: 1em;
  }
  
  h5 {
    font-size: .83em;
  }
  
  h6 {
    font-size: .75em;
  }
  
  .mceItemTable, .mceItemTable td, .mceItemTable th, .mceItemTable caption, .mceItemVisualAid {
    border: 1px dashed #BBB;
  }
  
  a.mceItemAnchor {
    display: inline-block;
    -webkit-user-select: all;
    -webkit-user-modify: read-only;
    -moz-user-select: all;
    -moz-user-modify: read-only;
    width: 11px !important;
    height: 11px !important;
    background: url(img/items.gif) no-repeat center center;
  }
  
  span.mceItemNbsp {
    background: #DDD;
  }
  
  td.mceSelected, th.mceSelected {
    background-color: #3399ff !important;
  }
  
  img {
    border: 0;
  }
  
  table, img, hr, .mceItemAnchor {
    cursor: default;
  }
  
  table td, table th {
    cursor: text;
  }
  
  ins {
    border-bottom: 1px solid green;
    text-decoration: none;
    color: green;
  }
  
  del {
    color: red;
    text-decoration: line-through;
  }
  
  cite {
    border-bottom: 1px dashed blue;
  }
  
  acronym {
    border-bottom: 1px dotted #CCC;
    cursor: help;
  }
  
  abbr {
    border-bottom: 1px dashed #CCC;
    cursor: help;
  }
  
  * html body {
    scrollbar-3dlight-color: #F0F0EE;
    scrollbar-arrow-color: #676662;
    scrollbar-base-color: #F0F0EE;
    scrollbar-darkshadow-color: #DDD;
    scrollbar-face-color: #E0E0DD;
    scrollbar-highlight-color: #F0F0EE;
    scrollbar-shadow-color: #F0F0EE;
    scrollbar-track-color: #F5F5F5;
  }
  
  img:-moz-broken {
    -moz-force-broken-image-icon: 1;
    width: 24px;
    height: 24px;
  }
  
  font[face=mceinline] {
    font-family: inherit !important;
  }
  
  *[contentEditable]:focus {
    outline: 0;
  }
  
}

