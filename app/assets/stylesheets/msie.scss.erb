.msie {
  @mixin dimIconThumb {
    background-image: url(<%= asset_path 'icone_editor_elementi.svg' %>);
    background-repeat: no-repeat;
    background-size:16.8em 22.4em;
    opacity:1;
  }
  .slide-tooltip .zoomOutThumb {
    .slideCover {
      position:static; 
      
      .cover {
        position:static;
        img {
          position:static;
        }
      }
    }
    .slideVideo {
      position:static; 
      .videoBig {
          position:static;
          .videoIcon {
            @include dimIconThumb;
            background-position: -6em -0.3em;
          }
        }
      .videoMedium {
          position:static;
          .videoIcon {
            @include dimIconThumb;
            background-position: -6em -0.3em;
          }
      }
    }
    .slideAudio {
      position:static; 
      .audioIcon {
        @include dimIconThumb;
        background-position: -6em -5.5em;
      }
    }
    .slideTitle {
      position:static;
    }
    .slideText {
      position:static;
    }
    .slideImage {
      position:static;
      img {
        position:static;
      }
      .big {
        position:static;
        .photoIcon {
         @include dimIconThumb;
         background-position: -6em -11.6em;
        }
      }
      .mediumHeight {
        position:static;
        .photoIcon {
         @include dimIconThumb;
         background-position: -6em -11.6em;
        }
      }
      .medium {
        position:static;
        .photoIcon {
         @include dimIconThumb;
         background-position: -6em -11.6em;
        }
      }
      .small {
        position:static;
        .photoIcon {
         @include dimIconThumb;
         background-position: -6em -11.6em;
        }
      }
    }
  }
  .selectButton {
    .uploadFileButton {
      width:60px;
      height:60px;
    }
  }
  
  /* FIX IE ELEMENT UPLOAD */
  .innerUploadFileButton {
    opacity:0;
    height: 60px;
    padding: 20px 10px;
    display:block;
    z-index: 1000px;
    cursor: pointer;
  }
  .selectButton {
    a.uploadFileButton {
      font-size:0.93em;
    }
  }
}