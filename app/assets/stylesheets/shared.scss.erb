.boxViewCompactMediaElement {
	  width:100%;
		padding: 0;
	  color:#c0c0c0;
		@include contentLayout;
    background-color: #FBFAFB;
	  float:left;
		h3 {
	    color:#41a62a;
		  font-size: 90%;
		  padding-bottom:0%;
	  }
		h4 {
		  padding-bottom: 0%;
		}
		.contentInterno {
		  float:left;
		  width:99%;
		  padding:0.3% 0% 0.3% 1%;
			@include float-content;
			/*audio*/
			.audio {
		    @include iconeElements;
				padding-top:0.2em;
				padding-bottom:0.2em;
				background-position: 0 -2.6em;
		  }
			/*video*/
			.video {
		    @include iconeElements;
				background-position: 0 .1em;
				padding-top:0.2em;
				padding-bottom:0.2em;
		  }
			/*image*/
			.image {
		    @include iconeElements;
				background-position: 0 -5.1em;
				padding-top:0.2em;
				padding-bottom:0.2em;
		  }
		}
	.menuController {
	  padding:0px; 
    border-top:none;
		background-color:transparent;
		text-align:left;
	}
}
