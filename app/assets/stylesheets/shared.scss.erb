@mixin float-content {
  p {
    width:10%;
    text-align:center;
		float:left;
	}
	div {
    float:right;
  }
}
@mixin tag-formatting {
  h1 {
	  color:#fff;
		padding:0;
		margin:0;
		font: 200% 'Nunito', sans-serif;
		float:left;
		width:39%;
		
	}
	h2 {
	  font: 120% 'Nunito', sans-serif;
		color:#fff;
		float:left;
		padding:0px;
		margin:0px;
	}
	h3 {
	  font: 120% 'Nunito', sans-serif;
		color:#5d5c5c;
		padding:0px;
		width:38.5%;
		float:left;
	}
}
.boxViewExpandedLesson {
  margin-bottom:1%;
	-moz-box-shadow: 0px 3px 4px #d3d3d3;
  -webkit-box-shadow: 0px 3px 4px #d3d3d3;
  box-shadow: 0px 3px 4px #d3d3d3;
	
	h1 {
	  font:  110% 'Nunito', sans-serif;
	  color:#f29400;
		padding:0px;
	}
	h2 {
	  font:  140% 'Nunito', sans-serif;
	}
	background-color:#fbfafb;
	float:left;
	width:49%;
	
	&:last-child {
	  float:right;
	}
	.contentInterno {
	  padding:4%;
		height:110px;
		
	}
	.contentNew {
	  p {padding-top:90px;}
		.createButton a {
		  background: url(<%= asset_path 'create.png' %>) top left no-repeat;
			padding-bottom:90px;
			padding-left:120px;
		}
		.createButton a:hover {
			  background: url(<%= asset_path 'create_white.png' %>) top center no-repeat;
		}
		
	}
}

.lower {
  text-transform: lowercase;
}
.upper {
  text-transform: uppercase;
}
.capital {
  text-transform: capitalize;
}