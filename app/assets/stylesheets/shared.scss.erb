.slide-thumb {
  width: 290px;
  height: 200px;
  padding: 5px;
  background-color: white;
  font-size: 7px;
  h2{
    font-size: 16px;
    line-height: 16px;
    padding:5px 0;
    margin:0;
  }
  &.cover{
    .title{
      background-color: rgba(242,148,0,0.8);
      height: 42px;
      padding: 0px 5px;
      width: 280px;
      position: absolute;
      top: 168px;
      h2{
        color: rgba(255,255,255,1);
      }
    }
    .cover-slide-footer{
      clear:both;
      background-color: #fff;
      color: #777;
      height: 5px;
      width: 280px;
      padding: 3px 5px;
      font-size: 4px;
      .subject .h3{
        font-family: Arial, sans-serif;
        color: #777;
      }
      .author .name{
        color: #f29400;
      }
    }
  }
}

