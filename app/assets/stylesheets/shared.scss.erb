/*ICONOGRAFIA PER DISTINGUERE GLI ELEMENTI DIDATTICI*/
@mixin iconEditorElement {
  $button-size: 5.5em;
  & {
    float:left;
		margin-right:5px;
    width: $button-size;
    height: $button-size;
    background-image: url(<%= asset_path 'icone_editor_elementi.svg' %>);
    background-repeat: no-repeat;
    background-size: ($button-size*3) ($button-size*4);
    padding:0;
	}
	&:hover {
    cursor: pointer;
  }
	&.videoButton {
	  font-size: 0.5em;
    background-position: (-$button-size*2) 0;
		opacity:0.1;
	}
	&.videoButton:hover {
	  font-size: 0.5em;
		background-position: 0 0;
		opacity:1;
	}
	&.videoButton.current {
	  font-size: 0.5em;
		background-position: 0 0;
		opacity:1;
	}
	&.photoButton {
	  font-size: 0.5em;
    background-position: (-$button-size*2) (-$button-size*2);
		opacity:0.1;
	}
	&.photoButton:hover {
	  font-size: 0.5em;
		background-position: 0 (-$button-size*2);
		opacity:1;
	}
	&.photoButton.current {
	  font-size: 0.5em;
		background-position: 0 (-$button-size*2);
		opacity:1;
	}
	&.audioButton {
	  font-size: 0.5em;
    background-position: (-$button-size*2) (-$button-size);
		opacity:0.1;
	}
	&.audioButton:hover {
	  font-size: 0.5em;
		background-position: 0 (-$button-size);
		opacity:1;
	}
	&.audioButton.current {
	  font-size: 0.5em;
		background-position: 0 (-$button-size);
		opacity:1;
	}
	
 }
 .videoButton {
   @include iconEditorElement;
	 
}
.photoButton {
   @include iconEditorElement;
	 
}
.audioButton {
   @include iconEditorElement;
	 
}