.elements-content {
  
  float: left;
  width: 99.5%;
  margin-bottom: 3%;
  
  .title-bar {
    
    @include title-bar;
    @include float-content;
    padding: 0.3% 1% 0.3% 1%;
    background-color: #41a62a;
    text-shadow: #399125 0px 2px 0px;
    
    h1 {
      
      color: #fff;
      padding: 0;
      margin: 0;
      font: 200% 'Nunito', sans-serif;
      float: left;
      width: 39%;
      
    }
    
    h2 {
      
      font: 120% 'Nunito', sans-serif;
      color: #fff;
      float: left;
      padding: 0px;
      margin: 0px;
      
    }
    
    h3 {
      
      font-size: 110%;
      color: #5d5c5c;
      padding: 0px;
      width: 38.5%;
      float: left;
      
    }
    
    p {
      
      padding-top: 0.5%;
      
    }
    
    a {
      
      color: #9EDA90;
      
      &:hover {
        
        color: #fff;
        
      }
      
      &.current {
        
        color: #fff;
        cursor: default;
        
      }
      
    }
    
    div {
      
      padding-top: 0.5%;
      
    }
    
    .sbHolder {
      
      width: 179px;
      height: 14px;
      background-color: #5ab046;
      border-radius: 2px;
      -webkit-border-radius: 2px;
      
    }
    
    .selectDisplay .sbHolder {
      
      width: 60px;
      height: 14px;
      background-color: #5ab046;
      border-radius: 2px;
      -webkit-border-radius: 2px;
      
    }
    
    .selectDisplay .sbSelector {
      
      height: 18px;
      line-height: 20px;
      width: 60px;
      
    }
    
    .selectDisplay .sbOptions {
      
      width: 60px;
      left: 0px;
      border: none;
      
    }
    
    .sbSelector {
      
      height: 18px;
      line-height: 20px;
      width: 179px;
      
    }
    
    .sbSelector:link, .sbSelector:visited, .sbSelector:hover {
      
      color: #fff;
      text-shadow: none;
      letter-spacing: 1px;
      
    }
    
    .sbToggle {
      
      background: url(<%= asset_path 'select-icons-elements.png' %>) 0 -123px no-repeat;
      
    }
    
    .sbToggle:hover {
      
      background: url(<%= asset_path 'select-icons-elements.png' %>) 0 -123px no-repeat;
      
    }
    
    .sbToggleOpen {
      
      background: url(<%= asset_path 'select-icons-elements.png' %>) 0 -22px no-repeat;
      
    }
    
    .sbOptions {
      
      width: 179px;
      left: 0px;
      border: none;
      
    }
    
    .sbOptions li {
      
      padding: 7px;
      
    }
    
    .sbOptions a {
      
      text-shadow: none;
      padding: 7px;
      font-weight: bold;
      
    }
    
    .sbOptions a:link, .sbOptions a:visited {
      
      color: #939393;
      text-decoration: none;
      
    }
    
    .sbOptions a:hover, .sbOptions a:focus, .sbOptions a.sbFocus {
      
      color: #fff;
      background-color: #41a62a;
      
    }
  }
  
  .boxViewSingleMediaElement {
    
    background-color: #fbfafb;
    color: #c0c0c0;
    position: relative;
    
  }
  
  .contentInterno {
    
    p {
      
      font-size: 80%;
      padding-top: 0.6%;
      
    }
    
  }
  
}
