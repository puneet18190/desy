@mixin title-bar {
  padding:0.3% 1% 0.3% 1%;
  margin-bottom:12px;
  float:left;
  width:98%;
  color:#fff;
}
@mixin tag-formatting {
  h1 {
    color:#fff;
    padding:0;
    margin:0;
    font: 200% 'Nunito', sans-serif;
    float:left;
    width:39%;
  }
}
@mixin border-formatting {
  border-radius: 5px;
  -webkit-border-radius: 5px;  
}
.profile-content {
  float:left;
  width:99.5%;
  font-size:85%;
  padding-bottom: 50px;
  .title-bar {
    @include title-bar;
    @include tag-formatting;
    background-color:#5d5c5c;
    text-shadow: #4d4c4c 0px 2px 0px;
    h1{
      font-size: 30px;
      margin-left: 20px;
    }
    
    ul.navlist{
      float:right;
      width: auto;
      list-style:none;
      li{
        float:left;
        width: auto;
        a{
          font: 14px 'Nunito' sans-serif;
          text-transform: lowercase;  
          background-color: #999;
          color: #fff;
          float:left;
          width: 110px;
          display:block;
          margin: 10px;
          width: 100px;
          height: 20px;
          padding: 5px;
          text-align:center;
          display:block;
          text-shadow: none;
          &:hover,&.current{
            background-color: #fff;
            color: #666;
          }
        }
      }
    }
  }
}
.contentForm {
  padding:0;
  float:left;
  width:100%;
  header{
    padding: 30px 0 0 30px;
  }
  
  h2{
    font: 25px 'Nunito' sans-serif;
    color:  #7d7d7d;
    text-transform: lowercase;
    text-shadow: #ccc 1px 1px 0px;
  }
  
  .insert-content {
    float: left;
    border: 1px solid #efefef;
    color: #999;
    padding: 2%;
    margin: 20px 20px 20px 0;
    width: 96%;
    .inputElement {
      font: 100% 'Nunito' sans-serif;
      float:left; 
      width:227px;
      margin-right:5%;
      padding-bottom:30px;
      &:last-child {
        margin-right:0;
      }
      p {
        font-weight: bold;
        font-size: 10px;
        padding-left:15px;
        padding-bottom:5px;
      }
    }
    .text, select, option {
      font: 13px 'Nunito' sans-serif;
      width: 216px;
      height: 29px;
      &.school{
        width: 500px;
      }
    }
    
    .sbHolder, .sbOptions, .sbSelector{  
      color: #7d7d7d; 
      font: 13px 'Nunito' sans-serif;   
      width: 226px;
    }
    .sbOptions{
      margin-top: 10px;
      a{
        color: #999;
        &.sbFocus{
          color: #fff;
        }
      }
      
    }
    
    .sbToggle{
      z-index: 100;
    }
    .sbSelector{
      height: 26px;
      padding-top:10px;
      background-color: #f5f5f5;
    }
  }
  
  input[type="text"], input[type="password"], select {
    background-color: #f5f5f5;
    color:#7d7d7d;
    font-size:120%;
    margin-right:0px;
  }
  
  .form_submit{
    padding-left: 30px;
  }
  input[type="submit"]{
     background:#555;
     color: #fff;
     text-transform: uppercase;
     padding: 10px 30px;
     font-family: Arial, sans-serif;
     margin: 0;
     &:hover{
       background:#999;
     }
     &.current,&:hover.current{
       color:#ccc;
       background:#999;
     }
   }
  
  table {
    border-collapse:collapse;
    width:50%;
    float:left;
    td {
     padding:10px 0 10px 0;
    }
    
    p {
      padding-left:15px; padding-bottom:5px
    }
  }

}

.stats{
  background-color: #f5f5f5;
  padding: 20px 30px;
  margin-top: 30px;
  ul{
    width: 45%;
    list-style:none;
    margin:0 20px 0 0;
    li{
      width: 100%;
      min-height: 20px;
      padding: 10px;
      margin-bottom: 20px;
      background-color: #fff;
      border-bottom: 2px solid #e2e2e2;
      span{
        text-transform: uppercase;
        float:left;
        padding-top: 2px;
      }
      div{
        text-align:center;
        font-weight: bold;
        font-size: 18px;
        float:right;
        width: 50px;
      }
      &.lesson_stat{
        div, ul li span{
          color: #F29400;
        }
      }
      &.element_stat{
        div{
          color: #41A62A;
        }
      }
      ul{
        width: auto;
        clear:both;
        margin:0;
        padding-top: 5px;
        li{
          padding: 5px 0 0;
          min-height: 0;
          border:none;
          span{
            text-transform: none;
          }
          div{
            font-size: 15px;
            color: #7d7d7d !important;
          }
          span{
            font-weight: bold;
          }
        }
      }
    }
  }
}

.contentStats {
  background-color:#f5f5f5;
  padding:20px 8px 8px 8px;
  float:right;
  width:305px;
  h2 {
    font: 120% 'Nunito', sans-serif;
    color:#5d5c5c;
    padding:5px 10px;
    background-color:#fff;
  }
  .dati {
    padding:10px;
    color:#5d5c5c;
    p {
      padding-bottom:10px;
    }
  }
  p {
    padding:10px 0 10px 0;
  }
  table {
    border-collapse:collapse;
  }
  table,th, td {
    border: 1px solid #e0e0e0;
    font: 95% 'Nunito', sans-serif;
    color:#7d7d7d;
    h3 {
      padding:5px 20px;
    }
    
  }
  
}
.checkbox-content {
   padding:0px;
  margin:0px;
  width: 98%;
  .title {
    
    @include border-formatting;
    margin-bottom:20px;
    h2 {
      font: 160% 'Nunito', sans-serif;
      padding: 5px 15px;
      color:#5d5c5c; 
    }
  }
  
}

.checkboxElement {
  @include border-formatting;
  padding:8px;
  width:211px;
  float:left;
  font-size:110%;
  margin-right: 5%;
  margin-bottom: 30px;
  display:block;
  font-family: 'Nunito' sans-serif;
  font-size: 16px;
  color: #7d7d7d;
  .regular-checkbox:checked + label, label{
    background-color: #f5f5f5;
    box-shadow: 0 1px 1px rgba(50,50,50,0.5) inset;
    border-radius: 10px;
    padding: 20px;
  }
  &:last-child {
    margin-right: 0;
  }
  
  .regular-checkbox:checked + label::after{
    color: #41A62A;
    padding: 3px;
  }
}

