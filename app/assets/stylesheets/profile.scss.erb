@mixin title-bar {
  padding:0.3% 1% 0.3% 1%;
	margin-bottom:12px;
	float:left;
	width:98%;
	color:#fff;
}
@mixin tag-formatting {
  h1 {
	  color:#fff;
		padding:0;
		margin:0;
		font: 200% 'Nunito', sans-serif;
		float:left;
		width:39%;
	}
}
@mixin border-formatting {
  -moz-border-radius: 5px;
  border-radius: 5px;
  -webkit-border-radius: 5px;  
}
.profile-content {
  float:left;
	width:99.5%;
	font-size:85%;
	.title-bar {
    @include title-bar;
		@include tag-formatting;
	  background-color:#5d5c5c;
		text-shadow: #4d4c4c 0px 2px 0px;
  }
}
.contentForm {
  padding:20px 0 0 20px;
	float:left;
	width:60%;
	
	.insert-content {
    float: left;
    
		color: #dbdbdb;
		width:98%;
		padding-top:30px;
		.inputElement {
		  float:left; 
			width:227px;
			margin-right:5%;
			padding-bottom:30px;
			&:last-child {
			  margin-right:0;
			}
			p {
			  padding-left:15px;
				padding-bottom:5px;
			}
		}
		.text {
      width: 216px;
      height: 29px;
		}
    input[type="text"], input[type="password"] {
      background-color: #f5f5f5;
			color:#7d7d7d;
		  font-size:120%;
		  margin-right:0px;
    }
  }
	table {
    border-collapse:collapse;
		width:50%;
		float:left;
		td {
		 padding:10px 0 10px 0;
		}
		
		p {
		  padding-left:15px; padding-bottom:5px
		}
  }

}
.contentStats {
  background-color:#f5f5f5;
	padding:20px 8px 8px 8px;
	float:right;
	width:305px;
	h2 {
	  font: 120% 'Nunito', sans-serif;
		color:#5d5c5c;
		padding:5px 10px;
		background-color:#fff;
	}
	.dati {
	  padding:10px;
		color:#5d5c5c;
		p {
	    padding-bottom:10px;
	  }
	}
	p {
	  padding:10px 0 10px 0;
	}
	table {
    border-collapse:collapse;
  }
  table,th, td {
    border: 1px solid #e0e0e0;
		font: 95% 'Nunito', sans-serif;
		color:#7d7d7d;
		h3 {
		  padding:5px 20px;
		}
		
  }
	
}
.checkbox-content {
 	padding:0px;
	margin:0px;
	width: 98%;
	.title {
	  
    @include border-formatting;
		margin-bottom:20px;
		h2 {
		  font: 160% 'Nunito', sans-serif;
      padding: 5px 15px;
      color:#5d5c5c; 
		}
	}
	.checkboxElement {
	  @include border-formatting;
		background-color:#e9e9e9;
		padding:8px;
		width:211px;
		float:left;
		font-size:110%;
		margin-right: 5%;
    margin-bottom: 30px;
		&:last-child {
		  margin-right: 0;
		}
		table {width:100%}
	  table td {
      padding: 0;
			color:#5d5c5c;
			
			&:first-child {
			  width:45px;
			}
		}
	}
}

