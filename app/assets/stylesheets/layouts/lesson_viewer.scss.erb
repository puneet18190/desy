html.lesson-viewer-layout{
  margin:0;
  min-height: 100%;
  $orange: #f29400;
  *{
    outline: none;
  }
  body {
	  
  	direction:ltr;
  	@media (max-width: 1024px) {
      font-size: 13px;
  	}
    font-family: Arial, Verdana, sans-serif;
		font-size: 13px;
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 0;
    display: block;
    text-align:center;
    background-image: url(<%= asset_path 'bg_tile_editor.gif' %>);
    background-repeat: repeat-x;
		background-position: top left;
		background-color:#5f5f5f;
    overflow:hidden;
  }

  a {
    color: white;
    text-decoration: none;
    &:hover {
      color: #dedede;
    }
  }

  h1, h2, h3, h4, h5, h6, h7 {
    font-family: "Nunito", Helvetica, sans-serif;
    color: $orange;
  }

  h2 {
    font-size:70px;
		line-height:70px;
    font-weight: normal;
    padding:10px;
		margin:10px;
  }
	.top {
    margin-bottom: -220px;
    background: transparent;
    width: 1px;
    height: 40%;
    float: left;
  }
	
	.container {
    margin: 0 auto;
    width: 900px;
		height:590px;
		clear: left;
		position: relative;
		text-align:left;
		padding:0;
	}
	ul#cover {
	  display: block;
	  overflow:hidden;
	  width: 900px;
	  height: 590px;
	  li.cover {
		  display: inline-block;
      list-style-type: none;
      padding: 0px;
			float:left;
			width: 900px;
      height: 590px;
			-webkit-box-shadow: 0px 6px 16px #323333;
      box-shadow: 0px 6px 16px #323333;
		}
	}
	.bigViewLesson {
    float:left;
    padding:0;
  	position:relative;
		
		.bg_text {
		  background-color: rgba(242, 148, 0, 0.95);
      height: 130px;
      width: 880px;
      padding:5px 10px 10px 10px;
      position:absolute;
	    bottom:27px;
	    left:0px;
			
    .lessonTitle {
		  font: 100% 'Nunito', sans-serif;
      color:#fff;
		  line-height:1em;
		  font-size: 50px;
     }
		}
		.lessonSubject {
		   font-size: 13px;
       clear:both;
			 width: 870px;
			 padding:6px 15px;
			 position:absolute;
			 bottom:0;
			 background-color: #fff;
			 span {
			   float:right;
			 }
		}
		
  }
  .playlistMenu {
    display:none;
	  width:860px;
		padding:20px;
		position:absolute;
		bottom:0;
		background-color:#141313;
		ul {
		  padding-left:10px;
			display:inline-block;
			height:168px;
			width:auto;
		}
		li {
      display: inline-block;
      list-style-type: none;
      margin: 0 20px 0 10px;
      cursor:pointer;
		}
	}
	
	.scroll-pane {
    width: 100%;
	  height: 180px;
	  overflow: auto;
  }	
  .horizontal-only {
	  height:180px;
	}
	.scrollContent {
    width:860px;
		text-align:left;
	}
	
	@mixin formatElement {
	  width:860px;
		height:550px;
		padding: 20px;
		display:inline-block;
		background-color:#fff;
	}
	@mixin photoIconFormat {
	  font-size:2.8em;
		background-position: -11.6em -11.6em;
		opacity:0.1;
		width:180px;
		height:180px;
	}
	@mixin videoIconFormat {
	  font-size:2.8em;
		background-position: -11.6em -0.3em;
		opacity:0.1;
		width:180px;
		height:180px;
	}
	@mixin audioIconFormat {
	  font-size:0.45em;
		background-position: -11.6em -5.5em;
		opacity:0.1;
		
	}
	@mixin styleCaption {
	  background-color: rgba(50, 50, 50, 0.7);
    color: #FAFAFA;
		height:35px;
    display: block;
    position: absolute;
    left: auto;
    bottom: 0px;
    padding: 0 5px;
    line-height: 33px;
	}
  /*LAYOUT SLIDE*/
	/*copertina*/
	.slideCover{
	  height:590px;
	  .cover {
		  width:900px;
		  height:560px;
			overflow:hidden;
			img{
			  position:absolute;
			}
	  }
	}
	/*slide title*/
	.slideTitle{
	  @include formatElement;
		text-align:center;
		display:table;
		h2 {
		  display:table-cell; 
			vertical-align:middle;
		}
	}
	/*slide image*/
	.slideImage{
	  @include formatElement;
	  img{
	    position:absolute;
	  }
	}
	/*slide text*/
	.slideText{
	  @include formatElement
	}
	/*slide video*/
	.slideVideo{
	  @include formatElement
	}
	/*slide audio*/
	.slideAudio{
	  @include formatElement
	}
	.boxFissoImage {
	  width:420px;
		height:265px;
		display:inline-block;
	}
	/*slide immagini formato 860x550*/
	.big {
	  float:left;
		width:860px;
		height:550px;
		background-color:#f1f1f1;
		overflow:hidden;
		position:relative;
		.photoIcon {
	    @include photoIconFormat;
		  margin-top:178px;
			margin-left:328px;
	  }
		.caption {
		  @include styleCaption;
			width:860px;
	  }
	}
	.videoBig {
	  width:860px;
		height:550px;
		background-color:#f1f1f1;
		.videoIcon {
	    @include videoIconFormat;
		  margin-top:178px;
			margin-left:328px;
	  }
		.video {
      width:848px;
		  height:477px;
		  padding:37px 6px 36px 6px;
		  background-color:#fff;
	  }
	}
	.videoMedium {
	  width:432px;
		height:440px;
		background-color:#f1f1f1;
		float:left;
		.videoIcon {
	    @include videoIconFormat;
		  margin-top:125px;
			margin-left:120px;
	  }
		.video {
      width:432px;
		  height:243px;
		  background-color:#fff;
			padding-bottom:197px;
	  }
	}
	.audioBig {
	  width:auto;
		height:35px;
		background-color:#f1f1f1;
		.audioIcon {
	    @include audioIconFormat;
		  margin-left:408px;
	  }
		.audio {
		  width:860px;
      padding-bottom:5px;
		  background-color:#fff;
			
	  }
	}
	/*slide immagini formato 420x440*/
	.medium {
	  float:left;
		width:420px;
		height:440px;
		margin-right:20px;
		background-color:#f1f1f1;
		overflow:hidden;
		position:relative;
		
		.photoIcon {
	    @include photoIconFormat;
		  margin-top:125px;
			margin-left:110px;
	  }
		.caption {
		  @include styleCaption;
			width:410px;
	  }
		&:last-child {
	    margin-right:0px;
	  }
	}
	/*slide immagini formato 420x550*/
	.mediumHeight {
	  float:left;
		width:420px;
		height:550px;
		margin-right:20px;
		background-color:#f1f1f1;
		overflow:hidden;
		position:relative;
		.photoIcon {
	    @include photoIconFormat;
		  
			margin-top:194px;
			margin-left:110px;
	  }
		.caption {
		  @include styleCaption;
			width:410px;
	  }
		&:last-child {
	    margin-right:0px;
	  }
	}
	/*slide immagini formato 420x265*/
	.small {
	  background-color:#f1f1f1;
		width:420px;
		height:265px;
		overflow:hidden;
		position:relative;
		.photoIcon {
	    @include photoIconFormat;
			background-position: -11.6em -11.6em;
		  margin-top:70px;
			margin-left:137px;
			font-size:2em;
			width:140px;
			height:140px;
	  }
		.caption {
		  @include styleCaption;
			width:410px;
	  }
	}
	.textRightContent {
	  float:right;
		padding:10px;
		width:400px;
		height:420px;
		overflow:hidden;
		
	}
	.textRightVideoContent {
    float:right;
    padding:10px;
    width:390px;
    height:420px;
    overflow:hidden;
	}
	.contentText {
	  width:820px;
		height:400px;
		overflow:hidden;
		padding:20px;
	}
	
	/** carousel inner **/
	#carousel_inner {
  float:left; /* important for inline positioning */
  width:900px; /* important (this width = width of list item(including margin) * items shown */
  overflow: hidden;  /* important (hide the items outside the div) */
  /* non-important styling bellow */
	-webkit-box-shadow: 0px 6px 16px #161515;
  box-shadow: 0px 6px 16px #161515;
  }

  #carousel_ul {
  position:relative;
  left:0px; /* important (this should be negative number of list items width(including margin) */
  list-style-type: none; /* removing the default styling for unordered list items */
  margin: 0px;
  padding: 0px;
  width:9999px; /* important */
  /* non-important styling bellow */
  padding-bottom:10px;
  }

  #carousel_ul li{
  float: left; /* important for inline positioning of the list items */
  width:900px;  /* fixed width, important */
  /* just styling bellow*/
  padding:0px;
  height:590px;
  margin:0;
  }

  #left_scroll, #right_scroll{
  margin:0;
  position: absolute;
  z-index: 10;
  opacity:0.2;
  
  }
  
  #right_scroll{
    left: 450px;
  }
  
  #left_scroll a, #right_scroll a{
    cursor: pointer;
    height:590px;
    width:450px;
    display:block;
		
  }
	#left_scroll a:hover {
	  background: url(<%= asset_path 'freccia_left_lesson_viewer.svg' %>) center left no-repeat;
    background-size: 8em;
		opacity:0.4;
	}
	#right_scroll a:hover {
	  background: url(<%= asset_path 'freccia_right_lesson_viewer.svg' %>) center right no-repeat;
    background-size: 8em;
		opacity:0.4;
	}
}