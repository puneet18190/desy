html.lesson-viewer-layout{
  margin:0;
  min-height: 100%;
  $orange: #f29400;
  *{
    outline: none;
  }
  body {
    direction:ltr;
    @media (max-width: 1024px) {
      font-size: 13px;
    }
    font-family: Arial, Verdana, sans-serif;
    font-size: 13px;
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 0;
    display: block;
    text-align:center;
    background-image: url(<%= asset_path 'bg_tile_editor.gif' %>);
    background-repeat: repeat-x;
    background-position: top left;
    background-color:#5f5f5f;
    overflow:hidden;
  }

  a {
    color: white;
    text-decoration: none;
    &:hover {
      color: #dedede;
    }
  }

  h1, h2, h3, h4, h5, h6, h7 {
    font-family: "Nunito", Helvetica, sans-serif;
    color: $orange;
  }

  h2 {
    font-size:70px;
    font-weight: normal;
    padding:11px 11px 7px;
    margin:0px 0px 20px 0px;
  
  }
  @mixin formatList{
    ol {
      display: block;
      list-style-type: decimal;
      padding:10px 26px;
      margin:0 1em;
      
    }
    ul {
      display: block;
      list-style-type: disc;
      padding:0px 26px;
      margin:0 1em;
      font-size:13px;
    }
  }
  .top {
    margin-bottom: -220px;
    background: transparent;
    width: 1px;
    height: 40%;
    float: left;
  }
  
  
  
  .container {
    margin: 0 auto;
    width: 900px;
    height:590px;
    clear: left;
    position: relative;
    text-align:left;
    padding:0;
  }
  ul#cover {
    display: block;
    overflow:hidden;
    width: 900px;
    height: 590px;
    li.cover {
      display: inline-block;
      list-style-type: none;
      padding: 0px;
      float:left;
      width: 900px;
      height: 590px;
      -webkit-box-shadow: 0px 6px 16px #323333;
      box-shadow: 0px 6px 16px #323333;
    }
  }
  .bigViewLesson {
    float:left;
    padding:0;
    position:relative;
    
    .bg_text {
      background-color: rgba(242, 148, 0, 0.95);
      height: 130px;
      width: 880px;
      padding: 0px 20px 0px 0px;
      position:absolute;
      top:430px;
      left:0px;
      
    .lessonTitle {
      font: 100% 'Nunito', sans-serif;
      color:#fff;
      line-height:50px;
      font-size: 50px;
      margin:20px;
     }
    }
    .lessonSubject {
       font-size: 13px;
       clear:both;
       width: 870px;
       padding:6px 15px;
       position:absolute;
       bottom:0;
       background-color: #fff;
       span {
         float:right;
       }
    }
    
  }
  .playlistMenu {
    display:none;
    width:860px;
    padding:20px;
    position:absolute;
    z-index:3;
    bottom:0;
    background-color:#141313;
    ul {
      padding:0;
      display:inline-block;
      height:168px;
      width:auto;
      margin: 0;
    }
    li {
      display: inline-block;
      list-style-type: none;
      margin: 0 55px 0 0;
      cursor:pointer;
    }
  }
  
  .scroll-pane {
    width: 100%;
    height: 180px;
    overflow: auto;
  }  
  .horizontal-only {
    height:180px;
  }
  .scrollContent {
    width:860px;
    text-align:left;
    .img_expanded {
      &:hover {
      background-color:#373737;
      opacity:0.85;
      };
    }
  }
  
  @mixin formatElement {
    width:860px;
    height:550px;
    padding: 20px;
    display:inline-block;
    background-color:#fff;
  }
  @mixin photoIconFormat {
    font-size:2.8em;
    background-position: -11.6em -11.6em;
    opacity:0.1;
    width:180px;
    height:180px;
  }
  @mixin videoIconFormat {
    font-size:2.8em;
    background-position: -11.6em -0.3em;
    opacity:0.1;
    width:180px;
    height:180px;
  }
  @mixin audioIconFormat {
    font-size:0.45em;
    background-position: -11.6em -5.5em;
    opacity:0.1;
    
  }
  @mixin styleCaption {
    font-family:"Nunito", sans-serif;
    background-color: rgba(50, 50, 50, 0.7);
    color: #FAFAFA;
    height:35px;
    display: block;
    position: absolute;
    left: auto;
    bottom: 0px;
    padding: 0 5px;
    line-height: 35px;
    font-size:13px;
    
  }
  /*LAYOUT SLIDE*/
  /*copertina*/
  .slideCover{
    height:590px;
    .cover {
      width:900px;
      height:560px;
      overflow:hidden;
      position: relative;
      img{
        position:absolute;
      }
    }
   .cover-slide-footer{
        clear: both;
        background-color: white;
        color: #373737;
        height: 16px;
        width: 870px;
        padding: 7px 15px;
        font-size: 13px;
        
        .subject .h3{
          font-family: Arial, sans-serif;
          color: #373737;
        }
        .author .name{
          color: $orange;
        }
      }
  }
  /*slide title*/
  .slideTitle{
    @include formatElement;
    
    text-align:center;
    display:table;
    h2 {
      display:table-cell; 
      vertical-align:middle;
      padding:0px 100px;
      line-height:70px;
    }
  }
  /*slide image*/
  .slideImage{
    @include formatElement;
    h2 {
      height:93px;
    }
    img{
      position:absolute;
    }
  }
  /*slide text*/
  .slideText{
    @include formatElement;
    h2 {
      height:93px;
    }
    @include formatList;
  }
  /*slide video*/
  .slideVideo{
    @include formatElement;
    h2 {
      height:93px;
    }
  }
  /*slide audio*/
  .slideAudio{
    @include formatElement;
    h2 {
      height:100px;
    }
    .contentText {
      height:295px;
 
    }
    @include formatList;
  }
  .boxFissoImage {
    width:420px;
    height:265px;
    display:block;
  }
  /*slide immagini formato 860x550*/
  .big {
    float:left;
    width:860px;
    height:550px;
    background-color:#f1f1f1;
    overflow:hidden;
    position:relative;
    .photoIcon {
      @include photoIconFormat;
      margin-top:178px;
      margin-left:328px;
    }
    .caption {
      @include styleCaption;
      width:860px;
    }
  }
  .videoBig {
    width:860px;
    height:550px;
    background-color:#f1f1f1;
    .videoPlayer {
      height: 548px;
      
      a.play {margin-left:10px}
            a.pause {margin-left:10px}
            a.fullScreen {margin-right:10px}
            .videoSlider {width:70%}
          }
    .videoIcon {
      @include videoIconFormat;
      margin-top:178px;
      margin-left:328px;
    }
    video {
      width:860px;
      height:484px;
      margin-bottom:10px;
    }
  }
  /*slide video + testo*/
  .videoMedium {
    width:420px;
    height:420px;
    background-color:#f1f1f1;
    margin-top:3px;
    float:left;
    .videoPlayer {
      width: 420px;
        
      margin: 0px;
      a.play {margin-left:10px}
      a.pause {margin-left:10px}
      a.fullScreen {margin-right:10px}
      .videoSlider {width:60%}
     }
    .videoIcon {
      @include videoIconFormat;
      margin-top:125px;
      margin-left:120px;
    }
    video {
      width:420px;
      height:236px;
      margin-bottom: 5px;
      
    }
    .video {
      width:420px;
      height:243px;
      background-color:#fff;
      padding-bottom:197px;
    }
  }
  .audioBig {
    width:auto;
    height:71px;
    margin: 5px 0 20px 0px;
    background-color:#f1f1f1;
    
    .audioIcon {
      margin-top:20px;
      @include audioIconFormat;
      margin-left:408px;
    }
    .audio {
      width:860px;
      padding-bottom:5px;
      background-color:#fff;
      
    }
    .audioPlayer {
      padding: 17px 20px 8px 18px;
      margin:0;
      width: 822px;
      position:relative;
    }
  }
  /*slide immagini formato 420x420*/
  .medium {
    float:left;
    width:420px;
    height:420px;
    margin-right:20px;
    margin-top:3px;
    background-color:#f1f1f1;
    overflow:hidden;
    position:relative;
    
    .photoIcon {
      @include photoIconFormat;
      margin-top:125px;
      margin-left:125px;
    }
    .caption {
      @include styleCaption;
      width:410px;
    }
    &:last-child {
      margin-right:0px;
    }
  }
  /*slide immagini formato 420x550*/
  .mediumHeight {
    float:left;
    width:420px;
    height:550px;
    margin-right:20px;
    background-color:#f1f1f1;
    overflow:hidden;
    position:relative;
    .photoIcon {
      @include photoIconFormat;
      
      margin-top:194px;
      margin-left:110px;
    }
    .caption {
      @include styleCaption;
      width:410px;
    }
    &:last-child {
      margin-right:0px;
    }
  }
  /*slide immagini formato 420x265*/
  .small {
    background-color:#f1f1f1;
    width:420px;
    height:265px;
    overflow:hidden;
    position:relative;
    .photoIcon {
      @include photoIconFormat;
      background-position: -11.6em -11.6em;
      margin-top:70px;
      margin-left:137px;
      font-size:2em;
      width:140px;
      height:140px;
    }
    .caption {
      @include styleCaption;
      width:410px;
    }
  }
  .textRightContent {
    float:right;
    padding:0px 10px;
    width:400px;
    height:420px;
    overflow:hidden;
    font-size:13px;
    a  {
      color: $orange;
      text-decoration:underline;  
    }
    p {
      margin-top:0.8em;
      margin-bottom:0.8em;
      line-height:14px;
    }
    @include formatList;
  }
  .textRightVideoContent {
    float:right;
    padding:0px 10px;
    width:400px;
    height:420px;
    overflow:hidden;
    font-size:13px;
    a  {
      color: $orange;
      text-decoration:underline;  
    }
    p {
      margin-top:0.8em;
      margin-bottom:0.8em;
      line-height:14px;
    }
    @include formatList;
  }
  .contentText {
    width:840px;
    height:405px;
    margin: 0;
    padding:0px 10px;
    line-height: 13px;
    overflow:hidden;
    a  {
      color: $orange;
      text-decoration:underline;  
    }
    p {
      margin-top:1em;
      margin-bottom:1em;
    }
  }
  .playlist_footer{
    padding: 10px 0;
    height: 20px;
    display: inline-block;
    width:900px;
    margin-top:10px;
    text-align:center;
    a._open_playlist, a._close_playlist {
      color: #9f9f9f;
      font-size: 12px;
      font-weight: bold;
      &:hover{
        color: white;
      }
    }
    ._lesson_title_in_playlist{
      color: #9f9f9f;
      font-size: 12px;
      font-weight: bold;
      float:right;
      text-align:center;
      width: 650px;
      margin-right:100px;
      display:none;
    }
    
  }
  .esciButton{
    margin-top:0;
    font-size: 0.35em;
    opacity:0.4;
    height:6em;
    &:hover {
      background-position: 0em -1em;
      opacity:1;
    };
  }
  /** carousel inner **/
  #carousel_inner {
  float:left; /* important for inline positioning */
  width:900px; /* important (this width = width of list item(including margin) * items shown */
  height: 590px;
  overflow: hidden;  /* important (hide the items outside the div) */
  /* non-important styling bellow */
  -webkit-box-shadow: 0px 6px 16px #161515;
  box-shadow: 0px 6px 16px #161515;
  }

  #carousel_ul {
  position:relative;
  left:0px; /* important (this should be negative number of list items width(including margin) */
  list-style-type: none; /* removing the default styling for unordered list items */
  margin: 0px;
  padding: 0px;
  
  /* non-important styling below */
  padding-bottom:10px;
  }

  #carousel_ul li.slide{
  float: left; /* important for inline positioning of the list items */
  width:900px;  /* fixed width, important */
  /* just styling bellow*/
  padding:0px;
  height:590px;
  margin:0;
  }

  #left_scroll, #right_scroll{
  margin:0;
  position: absolute;
  z-index: 10;
  opacity:0.2;
  top:230px
  }
  
  #right_scroll{
    right: 0;
    
  }
  
  #left_scroll a, #right_scroll a{
    cursor: pointer;
    height:150px;
    width:130px;
    display:block;
    
  }
    
  .size1{
   font-size: 120%;
   line-height: 100%;
  }              

  .size2{        
   font-size: 160%;
   line-height: 110%;
  }              

  .size3{        
   font-size: 200%;
   line-height: 120%;
  }              

  .size4{        
   font-size: 240%;
   line-height: 130%;
  }              

  .size5{        
   font-size: 280%;
   line-height: 140%;
  }              

  .size6{        
   font-size: 340%;
   line-height: 150%;
  }              

  .size7{        
   font-size: 400%;
   line-height: 160%;
  }
}
