html.lesson-viewer-layout {
  
  margin: 0;
  min-height: 100%;
  $orange: #f29400;
  
  * {
    
    outline: none;
    
  }
  
  body {
    
    direction: ltr;
    font-family: Arial, Verdana, sans-serif;
    font-size: 13px;
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 0;
    display: block;
    text-align: center;
    background-image: url(<%= asset_path 'bg_tile_editor.gif' %>);
    background-repeat: repeat-x;
    background-position: top left;
    background-color: #5f5f5f;
    overflow: hidden;
    
  }
  
  a {
    
    color: white;
    text-decoration: none;
    
    &:hover {
      
      color: #dedede;
      
    }
    
  }
  
  h1, h2, h3, h4, h5, h6, h7 {
    
    font-family: "Nunito", Helvetica, sans-serif;
    color: $orange;
    
  }
  
  .top {
    margin-bottom: -220px;
    background: transparent;
    width: 1px;
    height: 40%;
    float: left;
  }
  
  .container {
    
    margin: 0 auto;
    width: 900px;
    height: 590px;
    clear: left;
    position: relative;
    text-align: left;
    padding: 0;
  }
  
  ul#cover {
    
    display: block;
    overflow: hidden;
    width: 900px;
    height: 590px;
    
    li.cover {
      
      display: inline-block;
      list-style-type: none;
      padding: 0px;
      float: left;
      width: 900px;
      height: 590px;
      -webkit-box-shadow: 0px 6px 16px #323333;
      box-shadow: 0px 6px 16px #323333;
      
    }
    
  }
  
  .playlistMenu {
    
    display: none;
    width: 860px;
    padding: 20px 20px 10px 20px;
    position: absolute;
    z-index: 3;
    bottom: 0;
    background-color: #141313;
    
    .playlistInnerMenu {
      
      padding: 0;
      height: 166px;
      width: auto;
      margin: 0;
      
    }
    
    .playlistInnerMenuItem {
      
      margin: 2px 60px 2px 0;
      float: left;
      cursor:pointer;
      width: 247px;
      
    }
    
    .jspHorizontalBar {
      
      margin-top: 5px;
      
    }
    
  }
  
  .scroll-pane {
    
    width: 100%;
    height: 180px;
    overflow: auto;
    
  }
  
  .horizontal-only {
    
    height: 180px;
    
  }
  
  .scrollCane {
    
    text-align: left;
    height: 166px;
    
    .img_expanded {
      
      &:hover {
        
        background-color: #373737;
        opacity: 0.85;
        
      }
      
    }
    
  }
  
  .playlist_footer {
    
    padding: 10px 0;
    height: 20px;
    display: inline-block;
    width: 900px;
    margin-top: 10px;
    text-align: center;
    
    a._open_playlist, a._close_playlist {
      
      color: #9f9f9f;
      font-size: 12px;
      font-weight: bold;
      
      &:hover {
        
        color: white;
        
      }
      
    }
    
    ._lesson_title_in_playlist {
      
      color: #9f9f9f;
      font-size: 12px;
      font-weight: bold;
      float: right;
      text-align: center;
      width: 650px;
      margin-right: 100px;
      display: none;
      
    }
    
  }
  
  .esciButton {
    
    margin-top: 0;
    font-size: 0.35em;
    opacity: 0.4;
    height: 6em;
    
    &:hover {
      
      background-position: 0em -1em;
      opacity: 1;
      
    }
    
  }
  
  #carousel_inner {
    
    float: left;
    width: 900px;
    height: 590px;
    overflow: hidden;
    -webkit-box-shadow: 0px 6px 16px #161515;
    box-shadow: 0px 6px 16px #161515;
    
  }
  
  #carousel_ul {
    
    position: relative;
    left: 0px;
    list-style-type: none;
    margin: 0px;
    padding: 0px;
    padding-bottom: 10px;
    
  }
  
  #carousel_ul li.slide {
    
    float: left;
    width: 900px;
    padding: 0px;
    height: 590px;
    margin: 0;
    
  }
  
  #left_scroll, #right_scroll {
    
    margin: 0;
    position: absolute;
    z-index: 10;
    opacity: 0.2;
    
    &:hover {
      
      opacity: 1;
      
    }
    
  }
  
  #right_scroll {
    
    right: 0;
    
  }
  
  #social_networks {
    
    padding: 20px;
    width: 120px;
    height: 176px;
    background: url('/assets/tendina_share.png') no-repeat scroll 0 0 transparent;
    position: absolute;
    top: 422px;
    left: 7px;
    -webkit-box-shadow: 0px 6px 16px #434343;
    box-shadow: 0px 6px 16px #434343;
    color: #c1c0bc;
    font-family: "Nunito", Helvetica, sans-serif;
    font-size: 1.063em;
    
    a {
      
      color: #c1c0bc;
      font-size: 0.750em;
      text-transform: uppercase;
      margin: 5px 0px;
      padding: 13px 0px 15px 48px;
      display: block;
      
    }
    
    .facebook {
      
      background: url('/assets/logo_facebook.png') no-repeat scroll 0 0 transparent;
      
      &:hover {
        
        background: url('/assets/logo_facebook_on.png') no-repeat scroll 0 0 transparent;
        
      }
    }
    
    .twitter {
      
      background: url('/assets/logo_twitter.png') no-repeat scroll 0 0 transparent;
      
      &:hover {
        
        background: url('/assets/logo_twitter_on.png') no-repeat scroll 0 0 transparent;
        
      }
      
    }
    
    .google-plus {
     
      background: url('/assets/logo_google_plus.png') no-repeat scroll 0 0 transparent;
      
      &:hover {
        
        background: url('/assets/logo_google_plus_on.png') no-repeat scroll 0 0 transparent;
        
      }
     
    }
    
  }
  
  #open_social_networks {
    
    margin-top: 20px;
    margin-left: 16px;
    width: 18px;
    height: 18px;
    background: url('/assets/icon_share.png') no-repeat scroll 0 0 transparent;
    float: left;
    
    &:hover {
      
      background: url('/assets/icon_share_roll.png') no-repeat scroll 0 0 transparent;
      
    }
    
  }
  
}
