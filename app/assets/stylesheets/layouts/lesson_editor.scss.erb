  .show-100 {
    -moz-opacity: 1;
    filter: alpha(opacity = 100);
    opacity: 1;
  }

  .show-75 {
    -moz-opacity: .75;
    filter: alpha(opacity = 75);
    opacity: .75;
  }

  .show-50 {
    -moz-opacity: .50;
    filter: alpha(opacity = 50);
    opacity: .50;
  }

  .show-25 {
