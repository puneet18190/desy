html.lesson-editor-layout{
  height:auto;
  margin:0;
  min-height: 100%;
  $orange: #f29400;
  *{
    outline: none;

  }

  body {
    direction:ltr;
    @media (max-width: 1024px) {
      font-size: 13px;
    }
    font-family: Arial, Verdana, sans-serif;
    font-size: 13px;
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 0;
    display: block;
    overflow:hidden;
    background-image: url(<%= asset_path 'bg_tile_editor.gif' %>);
    background-repeat: repeat-x;
    background-position: top left;
    background-color:#5f5f5f;
  }

  a {
    color: white;
    text-decoration: none;
    &:hover {
      color: #dedede;
    }
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: "Nunito", Helvetica, sans-serif;
    color: $orange;
  }

  h2 {
    
    font-size: 50px;
    /*text-align: left;*/
    font-weight: normal;
    line-height: 50px;
    margin:20px;
  }
  
  /** Page navigation **/
  
  #heading {
    padding: 10px;
    height: 20px;
    display: block;
    width:100%;
    
    .horizontal-only {
      height:230px;
      z-index: 99999;
    }
    .scroll-pane {
      overflow-y:visible;
    }
    .scrollOrange {
      .jspTrack {
        background: #3f3f3f;
        z-index: 99999;
      }
      .jspHorizontalBar {
        height:5px;
        top: 23px;
        position:absolute;
      }
      .jspPane {
        z-index: 99999;
      }
      .jspDrag {
        background: $orange;
        z-index: 99999;
      }
    }
  }  

  #slide-numbers {
    list-style: none;
    margin-left: 10px;
    width: 3500px;
    li.navNumbers {
      float: left;
      a._slide_nav {
        float: left;
        width: 20px;
        height: 14px;
        padding-top: 1px;
        margin-right: 10px;
        border: 1px solid rgba(75,75,75,1);
        color: rgba(95,95,95,1);
        text-align: center;
        font-size: 1em;
        background-color: rgba(45,45,45,0.5);
        
        &:hover {
          background-color: white;
          border: 1px solid white;
        }
        &.active {
          background-color: $orange;
          border: 1px solid $orange;
          color: white;
        }
        &.add-slide {
          border: none;
          background-color: transparent;
          padding-top: 0;
          &:hover {
            border: none;
            background-color: transparent;
            padding-top: 0;
          }
        }
      }
    }
  }
  
  .add-small{
    position:absolute;
    top:10px;
    right: 10px;
    text-indent: -9999999px;
    border:none;
    padding:0;
    height: 17px;
    width: 17px;
    background: url('/assets/add_small_on_off.png') top center no-repeat transparent;
    z-index:100000;
  }
  .add-small:hover{
    background-color:transparent;
    background-position: bottom center;
    border: none;
  }
  
/*THUMBNAILS*/
  .slide-tooltip {
    width: 250px;
    height:156px;
    display: none;
    z-index:9999999999;
    margin: 20px 0 0 -27px;
    position: absolute;
    padding: 20px 20px 25px 25px;
    background: url("/assets/lesson-editor-tooltip-bg.png") top left no-repeat;
  }
  .slide-tooltip-to-left {
    width: 300px;
    display: none;
    z-index:9999999999;
    margin: 20px 0 0 -247px;
    position: absolute;
    padding: 20px 20px 25px 25px;
    background: url("/assets/lesson-editor-tooltip-bg-to-left.png") top left no-repeat;
  }
  
  

