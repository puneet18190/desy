html.lesson-editor-layout{
  height:auto;
  margin:0;
  min-height: 100%;
  $orange: #f29400;
  *{
    outline: none;
  }
  body {
  	direction:ltr;
  	@media (max-width: 1024px) {
      font-size: 13px;
  	}
    font-family: Arial, Verdana, sans-serif;
		font-size: 13px;
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 0;
    display: block;
    overflow:hidden;
		background-image: url(<%= asset_path 'bg_tile_editor.gif' %>);
    background-repeat: repeat-x;
		background-position: top left;
		background-color:#5f5f5f;
  }

  a {
    color: white;
    text-decoration: none;
    &:hover {
      color: #dedede;
    }
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: "Nunito", Helvetica, sans-serif;
    color: $orange;
  }

  h2 {
    
    font-size: 50px;
    text-align: left;
    font-weight: normal;
    line-height: 50px;
		margin:20px;
  }
  
  /** Page navigation **/
  
  #heading {
    padding: 10px;
    height: 20px;
    display: block;
    width:100%;
    overflow-x:auto;
    -ms-overflow-x:auto;
    overflow-y:hidden;
    -ms-overflow-y:hidden; 
