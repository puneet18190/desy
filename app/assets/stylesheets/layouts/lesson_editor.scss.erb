        }
        &:hover {
          background-color: white;
          border: 1px solid white;
        }
        &.active {
          background-color: $orange;
          border: 1px solid $orange;
          color: white;
        }
        &.add-slide {
          border: none;
          background-color: transparent;
          padding-top: 0;
          &:hover {
            border: none;
            background-color: transparent;
            padding-top: 0;
          }
        }
      }
    }
  }
