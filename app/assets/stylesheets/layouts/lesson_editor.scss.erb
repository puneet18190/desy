@mixin slide-miniature {
  
  width: 243px; /* 900 scalato al 27% */
  height: 159px; /* 590 scalato al 27%, sarebbe 159.3 ma il 0.3 lo nascondo */
  padding: 21px 26px 26px 26px; /* top: 11 + 10; tutti gli altri: 16 + 10 */
  display: none;
  z-index: 9999999999;
  margin-top: 20px; /* per staccarsi dalle <a> */
  margin-right: 0;
  margin-bottom: 0;
  position: absolute;
  
}

html.lesson-editor-layout {
  
  .content {
    
    padding: 0;
    
  }
  
  height: auto;
  margin: 0;
  min-height: 100%;
  $orange: #f29400;
  
  * {
    
    outline: none;
    
  }
  
  body {
    
    direction: ltr;
    // @media (max-width: 1024px) {
    //   font-size: 13px;
    // }
    font-family: Arial, Verdana, sans-serif;
    font-size: 13px;
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 0;
    display: block;
    overflow: hidden;
    background-image: url(<%= asset_path 'bg_tile_editor.gif' %>);
    background-repeat: repeat-x;
    background-position: top left;
    background-color: #5f5f5f;
    
  }
  
  a {
    
    color: white;
    text-decoration: none;
    
    &:hover {
      
      color: #dedede;
      
    }
    
  }
  
  h1, h2, h3, h4, h5, h6 {
    
    font-family: "Nunito", Helvetica, sans-serif;
    color: $orange;
    
  }
  
  h2 {
    
    font-size: 50px;
    font-weight: normal;
    line-height: 50px;
    margin: 20px;
    
  }
  
  .emptyGalleryAudioEditor {
    
    padding-top: 180px;
    
  }
  
  .emptyGalleryVideoEditor {
    
    padding-top: 180px;
    
  }
  
  .emptyGalleryImageEditor {
    
    padding-top:180px;
    
  }
  
  #heading {
    
    padding: 10px;
    height: 20px;
    display: block;
    width: 100%;
    
    .horizontal-only {
      
      height: 230px;
      z-index: 99999;
      
    }
    
    .scroll-pane {
      
      overflow-y: visible;
      
    }
    
    .scrollOrange {
      
      .jspTrack {
        
        background: #3f3f3f;
        z-index: 99999;
        
      }
      
      .jspHorizontalBar {
        
        height: 5px;
        top: 23px;
        position: absolute;
        
      }
      
      .jspPane {
        z-index: 99999;
      }
      
      .jspDrag {
        
        background: $orange;
        z-index: 99999;
        
      }
      
    }
    
  }
  
  #slide-numbers {
    
    list-style: none;
    margin-left: 10px;
    width: 3500px;
    
    li.navNumbers {
      
      float: left;
      
      a._slide_nav {
        
        float: left;
        width: 20px;
        height: 14px;
        padding-top: 1px;
        margin-right: 10px;
        border: 1px solid rgba(75,75,75,1);
        color: rgba(95,95,95,1);
        text-align: center;
        font-size: 1em;
        background-color: rgba(45,45,45,0.5);
        
        &:hover {
          
          background-color: white;
          border: 1px solid white;
          
        }
        
        &.active {
          
          background-color: $orange;
          border: 1px solid $orange;
          color: white;
          
        }
        
        &.add-slide {
          
          border: none;
          background-color: transparent;
          padding-top: 0;
          
          &:hover {
            
            border: none;
            background-color: transparent;
            padding-top: 0;
            
          }
          
        }
        
      }
      
    }
    
  }
  
  .contentLessonNotAvailable {
    
    width: 600px;
    height: 550px;
    margin: 0 auto;
    text-align: center;
    display: table;
    
    .contentTitle {
      
      display: table-cell;
      vertical-align: middle;
      
      h1 {
        
        text-align: left;
        color: #F29400;
        font-size: 30px;
        font-weight: normal;
        margin: 0px;
        
      }
      
      h2 {
        
        text-align: left;
        color: #fff;
        font-size: 18px;
        font-weight: normal;
        margin: 0px;
        line-height: 25px;
        
      }
      
    }
    
  }
  
  .add-small {
    
    position: absolute;
    top: 10px;
    right: 10px;
    text-indent: -9999999px;
    border: none;
    padding: 0;
    height: 17px;
    width: 17px;
    background: url('/assets/add_small_on_off.png') top center no-repeat transparent;
    z-index: 100000;
    
  }
  
  .add-small:hover {
    
    background-color: transparent;
    background-position: bottom center;
    border: none;
    
  }
  
  ._add_new_slide_options_in_last_position.disabled {
    
    background: url('/assets/add_small_on_off.png') top center no-repeat transparent;
    opacity: 0.3;
    cursor: default;
    
    &:hover {
      
      background: url('/assets/add_small_on_off.png') top center no-repeat transparent;
      opacity: 0.3;
      cursor: default;
      
    }
    
  }
  
  ._add_new_slide_options.disabled {
    
    opacity: 0.070;
    cursor: default;
    
    &:hover {
      
      float: left;
      width: 6em;
      height: 6em;
      background-image: url(/assets/set-icone-editor.svg);
      background-repeat: no-repeat;
      background-size: 24em 60em;
      padding: 0;
      font-size: 0.75em;
      background-position: 0 -6em;
    };
  
  }
  
  .slide-tooltip {
    
    @include slide-miniature;
    margin-left: -27px;
    background: url("/assets/lesson-editor-tooltip-bg.png") top left no-repeat;
    
  }
  
  .slide-tooltip-to-left {
    
    @include slide-miniature;
    margin-left: -247px;
    background: url("/assets/lesson-editor-tooltip-bg-to-left.png") top left no-repeat;
    
  }
  
  .slide-tooltip, .slide-tooltip-to-left {
    
    .miniature-container {
      
      width: 243px;
      height: 159px;
      overflow: hidden;
      position: absolute;
      top: 21px;
      left: 26px;
      
      .zoomOutThumb {
        
        -moz-transform: scale(0.27);
        -webkit-transform: scale(0.27);
        position: absolute;
        
      }
      
    }
    
  }
  
  #container {
    
    height: 100%;
    text-align: center;
    margin: 0 auto -45px;
    
  }
  
  #main {
    
    width: 100%;
    display: block;
    
  }
  
  ul#slides {
    
    display: block;
    z-index: -9999;
    height: 590px;
    
    li.slides {
      
      opacity: 0.4;
      float: left;
      display: block;
      height: 590px;
      width: 960px;
      padding: 0;
      margin-left: 50px;
      
      &.active {
        
        width: 960px;
        height: 590px;
        opacity: 1;
        
      }
      
      .buttons {
        
        float: right;
        width: 55px;
        height: 200px;
        margin: 145px 0 0 3px;
        display: block;
        
        a {
          
          text-indent: -999999px;
          
        }
        
        a.delete, a.delete.disabled:hover {
          
          background-position: top left;
          
        }
        
        a.add, a.add.disabled:hover {
          
          background-position: left -56px;
          
        }
        
        a.info, a.info.disabled:hover {
          
          background-position: left -112px;
          
        }
        
        a.save,a.save.disabled:hover {
          
          background-position: left -168px;
          
        }
        
        a.delete:hover,a.delete.active {
          
          background-position: -57px 0;
          
        }
        
        a.add:hover, a.add.active {
          
          background-position: -57px -56px;
          
        }
        
        a.info:hover,a.info.active {
          
          background-position: -57px -112px;
          
        }
        
        a.save:hover,a.save.active {
          
          background-position: -57px -168px;
          
        }
        
      }
      
    }
    
  }
  
  ul#slides.new {
    
    margin-top: 30px;
    
    li {
      
      width: 900px;
      margin: 0;
      padding: 0;
      background-color: $orange;
      color: #fff;
      
      .box {
        
        height: 460px;
        width: 700px;
        margin: 70px 100px 30px;
        
        span.infoButtonWhite {
          
          cursor: default;
          
        }
        
      }
      
      h2 {
        
        color: #fff;
        font-size: 30px;
        height: 20px;
        line-height: 10px;
        margin: 0;
        padding: 0;
        
      }
      
      h3 {
        
        font-size: 15px;
        
      }
      
      p, h3 {
        
        width: 700px;
        color: #fff;
        display: block;
        padding: 5px 0;
        
      }
      
      p {
        font-size: 10px;
      }
      
    }
    
    .info {
      
      .infoButtonWhite {
        
        margin: 5px 15px 0 0;
        
      }
      
      opacity: 1;
      
      .form_error, textarea.form_error, input.form_error {
        
        border: 3px solid rgba(250, 0, 0, 0.5);
        
      }
      
      input, textarea, select {
        
        color: #fff;
        height: 30px;
        line-height: 20px;
        font-size: 13px;
        font-family: Arial, sans-serif;
        margin-top: 30px;
        background-color: transparent;
        outline: none;
        background-color: #E48D1F;
        
      }
      
      input[type="text"], textarea, select {
        
        border-radius: 10px;
        border: 3px solid #f29400;
        padding: 5px 10px;
        box-shadow: 0px 2px 2px rgba(50, 50, 50, 0.1) inset;
        
      }
      
      input::-webkit-input-placeholder {
        
        color: white;
        
      }
      
      input:-moz-placeholder {
        
        color: white;
        
      }
      
      textarea::-webkit-input-placeholder {
        
        color: white;
        
      }
      
      textarea:-moz-placeholder {
        
        color: white;
        
      }
      
      input {
        
        width: 430px;
        
      }
      
      .lesson-create, .buttonForm {
        
        background-color: #fff;
        color: #333;
        text-align: center;
        font-family: "Nunito", sans-serif;
        font-size: 18px;
        cursor: pointer;
        padding: 5px 30px;
        margin-top: 0px;
        
        &:hover {
          
          background-color: #f5a933;
          
        }
        
      }
      
      .lesson-create {
        
        width: 130px;
        height: 34px;
        
      }
      
      input[type="submit"].lesson-create {
        
        border: none;
        
      }
      
      select {
        
        width: 200px;
        
      }
      
      .ui-widget {
        
        position: relative;
        
      }
      
      textarea {
        
        width: 300px;
        height: 130px;
        resize: none;
        line-height: 20px;
        
      }
      
      ._error_messages {
        
        height: 10px;
        padding-top: 10px;
        margin-left: 75px;
        width: 700px;
        display: block;
        
      }
      
      .form_error, input.form_error, .sbHolder.form_error {
        
        border-radius: 10px;
        border: 3px solid rgba(250, 0, 0, 0.5);
        
      }
      
      .sbHolder.form_error {
        
        margin-top: 30px;
        
      }
      
      .sbHolder {
        
        width: 200px;
        height: 30px;
        margin-top: 33px;
        float: right;
        background-color: #E48D1F;
        border-radius: 10px;
        border: none;
        font-size: 11px;
        padding: 5px;
        
      }
      
      .sbSelector {
        
        height: 30px;
        padding: 5px 0;
        line-height: 30px;
        width: 190px;
        font-size: 13px;
        
      }
      
      .sbSelector:link, .sbSelector:visited, .sbSelector:hover {
        
        color: #fff;
        text-shadow: none;
        font-size: 13px;
        width: 210px;
        border: none;
        border-radius: 10px;
        
      }
      
      .sbToggle {
        
        margin-top: 10px;
        background: url('/assets/select-icons-lessons-white.png') 0 -123px no-repeat;
        
       }
       
       .sbToggle:hover {
         
         background: url('/assets/select-icons-lessons-white.png') 0 -123px no-repeat;
         
       }
       
       .sbToggleOpen {
         
         background: url('/assets/select-icons-lessons-white.png') 0 -22px no-repeat;
         
       }
       
      .sbOptions {
        
        width: 210px;
        overflow-x: hidden;
        left: 0px;
        border: none;
        
      }
      
      .sbOptions li {
        
        padding: 7px;
        margin: 0;
        height: 30px;
        width: 194px;
        background-color: #fff;
        
      }
      
      .sbOptions a {
        
        text-shadow: none;
        padding: 8px;
        color: #999;
        margin-bottom: 0;
        font-size: 13px;
        font-family: Arial, sans-serif;
        
      }
      
      .sbOptions a:link, .sbOptions a:visited {
        
        color: #999;
        text-decoration: none;
        
      }
      
      .sbOptions a:hover, .sbOptions a:focus, .sbOptions a.sbFocus {
        
        color: #fff;
        background-color: $orange;
        
      }
      
      .info-slide-footer {
        
        clear: both;
        background-color: #fff;
        color: #777;
        height: 16px;
        width: 870px;
        padding: 7px 15px;
        font-size: 13px;
        
        .author .name {
          
          color: $orange;
          
        }
        
      }
      
    }
    
  }
  
  #footer {
    
    padding: 6px 12px 18px 12px;
    display: block;
    background-color: #1c1c1c;
    color: white;
    font-size: 12px;
    opacity: 0.85;
    position: fixed;
    height: 30px;
    width: 100%;
    margin-top: 10px;
    height: 10px;
    clear: both;
    
    img {
      
      float: left;
      width: auto;
      margin-right: 5px;
      margin-top: 4px;
      
    }
    
    p {
      
      margin-top: 2px;
      float: left;
      
    }
    
  }
  
  #lesson-editor-container {
    
    min-height: 100%;
    
  }
  
  #content {
    
    overflow: auto;
    padding-bottom: 50px;
    
  }
  
  body:before {
    
    content: "";
    height: 100%;
    float: left;
    width: 0;
    margin-top: -32767px;
    
  }
  
  .clr {
    
    clear:both;
    
  }
  
  .pull-right {
    
    float: right;
    width: auto;
    
  }
  
  .pull-left {
    
    float: left;
    width: auto;
    
  }
  
  .spacer20 {
    
    height: 20px;
    display: block;
    
  }
  
  ._saved, ._slide_error {
    
    display: none;
    position: absolute;
    z-index: 999999999;
    font-size: 130px;
    background-image: url("/assets/icone_piene.svg");
    width: 130px;
    height: 130px;
    background-repeat: no-repeat;
    background-position: -520px center;
    background-size: 780px 130px;
    padding: 0;
    
  }
  
  ._slide_error {
    
    background-position: -650px center;
    
  }
  
  li.slides:not(active) {
    
    position: relative;
    
  }
  
  layer._not_current_slide, layer._not_current_slide_disabled {
    
    position: absolute;
    top: 0;
    left: 0;
    width: 900px;
    height: 590px;
    display: block;
    z-index: 9999;
    
  }
  
  layer._not_current_slide:hover {
    
    cursor: pointer;
    background: url('/assets/not_current_slide_arrows.png') no-repeat center 264px;
    
  }
  
  .new_slide {
    
    position: absolute;
    z-index: 9999;
    height: 570px;
    width: 860px;
    background-color: $orange;
    padding: 20px 0 0 40px;
    opacity: 1;
    -webkit-box-shadow: 0px 6px 16px #161515;
    box-shadow: 0px 6px 16px #161515;
    
    a img {
      
      -moz-opacity: .50;
      filter: alpha(opacity = 50);
      opacity: .50;
      
    }
    
    a:hover img {
      
      -moz-opacity: 1;
      filter: alpha(opacity = 100);
      opacity: 1;
      
    }
    
  }
  
}

.jScrollPaneContainer {
  
  position: relative;
  overflow: hidden;
  z-index: 1;
  
}

.jScrollPaneTrack {
  
  position: absolute;
  cursor: pointer;
  right: 0;
  top: 0;
  height: 100%;
  background: #aaa;
  
}

.jScrollPaneDrag {
  
  position: absolute;
  background: #666;
  cursor: pointer;
  overflow: hidden;
  
}

.jScrollPaneDragTop {
  
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
  
}

.jScrollPaneDragBottom {
  
  position: absolute;
  bottom: 0;
  left: 0;
  overflow: hidden;
  
}

a.jScrollArrowUp {
  
  display: block;
  position: absolute;
  z-index: 1;
  top: 0;
  right: 0;
  text-indent: -2000px;
  overflow: hidden;
  height: 9px;
  
}

a.jScrollArrowDown {
  
  display: block;
  position: absolute;
  z-index: 1;
  bottom: 0;
  right: 0;
  text-indent: -2000px;
  overflow: hidden;
  height: 9px;
  
}

#lesson_editor_image_gallery_container, #lesson_editor_audio_gallery_container, #lesson_editor_video_gallery_container {
  
  position: absolute;
  
}
