@mixin title-bar {
  padding:0.3% 1% 0.3% 1%;
	margin-bottom:12px;
	float:left;
	width:98%;
	color:#fff;
}

@mixin float-content {
  p {
    width:10%;
    text-align:center;
		float:left;
	}
	div {
    float:right;
  }
}
@mixin tag-formatting {
  h1 {
	  color:#fff;
		padding:0;
		margin:0;
		font: 200% 'Nunito', sans-serif;
		float:left;
		width:39%;
		
	}
	h2 {
	  font: 120% 'Nunito', sans-serif;
		color:#fff;
		float:left;
		padding:0px;
		margin:0px;
	}
	h3 {
	  font-size: 110%;
		color:#5d5c5c;
		padding:0px;
		width:38.5%;
		float:left;
	}
}
/*CLASSE VISTA LESSONS*/
.lessons-content {
  float:left;
	width:99.5%;
	
	.title-bar {
    @include title-bar;
		@include float-content;
		@include tag-formatting;
	  background-color:#f29400;
		text-shadow: #d68300 0px 2px 0px;
		p {
			padding-top:0.5%;
		}
		div {
			padding-top:0.5%;
		}
		.sbHolder{
      width: 179px;
      height: 14px;
      background-color:#d78300;
      -moz-border-radius: 2px;
      -webkit-border-radius: 2px;
     
    }
   .sbSelector{
	   height: 18px;
	   line-height: 20px;
	   width: 179px;
   }
   .sbSelector:link, .sbSelector:visited, .sbSelector:hover{
	   color: #f9bb5a;
		 text-shadow:none;
   }
   .sbToggle{
	   background: url(<%= asset_path 'select-icons-lessons.png' %>) 0 -123px no-repeat;
	 }
   .sbToggle:hover{
	   background: url(<%= asset_path 'select-icons-lessons.png' %>) 0 -123px no-repeat;
   }
   .sbToggleOpen{
	   background: url(<%= asset_path 'select-icons-lessons.png' %>) 0 -22px no-repeat;
   }
  .sbOptions{
	  width: 179px;
		left: 0px;
		border:none;
	}
	.sbOptions li{
	  padding: 0 ;
  }
  .sbOptions a{
	  text-shadow:none;
		border-bottom: solid 1px #f5f5f5;
		padding:7px;
  }
  .sbOptions a:link, .sbOptions a:visited{
	  color: #ddd;
	  text-decoration: none;
  }
  .sbOptions a:hover,
  .sbOptions a:focus,
  .sbOptions a.sbFocus{
	  color: #fff;
	  background-color:#f29400;
  }
 }
.current {
	background-color:#e8e8e8;
}	
	.boxViewSingleLesson {
	  width:100%;
		padding: 0;
	  color:#c0c0c0;
		position:relative;
		.contentInterno {
		  float:left;
		  width:99%;
		  padding:0.5% 0% 0.5% 1%;
			@include float-content;
			@include tag-formatting;
			height:auto;
			h3 {padding-top:0.5%}
			p {font-size:80%; padding-top:0.6%}
		}
		&:hover {
			  background-color:#e8e8e8;
				cursor: pointer;
				
			}
		
		.menuController {
	    padding:0px; 
      border-top:none;
			background-color:transparent;
			float:left;		
			text-align:left;
			
			
	  }
		.lessons-expanded {
		  display:none;
			color:#373737;
			background-color:#e8e8e8; 
			padding:1% 5% 2% 1%;
			float:left;
			width:94%;
			cursor:auto;
			h1 {
	       font-size: 100%;
		     color:#a7a9ac;
		  }
			.img_expanded {
			  float:left;
				position:relative;
				padding:0;
				width:auto;
				color:#fff;
			}
			.bg_text {
			  position:absolute;
				padding:4%;
				width:92%;
				top:62%;		
				left:0;
				background-color:#383535;
			}
			.info-text {
			  float:left;
				padding:1px 2px 0 10px;
				position:relative;
				
				p {
				  padding-top:5%;
				}
				.tooltipForm h1 {
	        font: 150% 'Nunito', sans-serif;
		      color:#5d5c5c;
	      }
				.tooltipForm p {
          display:inline-block; 
          padding:0% 1%;
		 
        }
        ._report_lesson_click:hover {
          cursor:pointer;
        }
				
			}
			.description-text {
			  float:right;
				padding:0.5% 1% 0 0%;
				width:54%;
				margin-left:1%;
				.intestazione {
				  padding-bottom:10px;
					float:left;
					h1 {
					  float:left;
						padding-right:5px;
					}
					p {
					  float:left;
						padding-right:20px;
					}
				}
			}
		}
	}
}

