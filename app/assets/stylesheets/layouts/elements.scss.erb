@mixin contentLayout {
  margin-bottom:1%;
	-moz-box-shadow: 1px 5px 5px #e8e8e8;
  -webkit-box-shadow: 1px 5px 5px #e8e8e8;
  box-shadow: 1px 5px 5px #e8e8e8;
	
	h1 {
	  font-size: 110%;
		color:#f29400;
		padding:0px;
	}
	h2 {
	  font-size: 140%;
	}
}
@mixin title-bar {
  padding:0.3% 1% 0.3% 1%;
	margin-bottom:12px;
	float:left;
	width:98%;
	
	color:#fff;
}

@mixin float-content {
  p {
    width:10%;
    text-align:center;
		float:left;
		
  }
	div {
    float:right;
  }
}
@mixin tag-formatting {
  h1 {
	  color:#fff;
		padding:0;
		margin:0;
		font: 200% 'Nunito', sans-serif;
		float:left;
		width:39%;
		
	}
	h2 {
	  font: 120% 'Nunito', sans-serif;
		color:#fff;
		float:left;
		padding:0px;
		margin:0px;
	}
	h3 {
	  font-size: 110%;
		color:#5d5c5c;
		padding:0px;
		width:38.5%;
		float:left;
	}
}

/*CLASSE VISTA ELEMENTS*/
@mixin iconeElements {
  float:left; 
  width:40%;
	height:34px;
  background-size: 2.7em;
	padding-left:50px;
	margin-right:1.8%;
	background-image: url(<%= asset_path 'icon_elements.svg' %>);
	background-repeat: no-repeat;
	background-position:0 0;
}
.elements-content {
  float:left;
	width:99.5%;
	  h3 {
	    color:#41a62a;
		  font-size: 90%;
		  padding-bottom:0%;
	  }
		h4 {
		  padding-bottom: 0%;
		}
	.title-bar {
    @include title-bar;
		@include float-content;
		@include tag-formatting;
	  background-color:#41a62a;
		text-shadow: #399125 0px 2px 0px;
		p {
			padding-top:0.5%;
		}
		
		a {
		  color:#9EDA90;
			&:hover {
			  color:#fff;
			}
			&.current {
			  color:#fff;
			}
		}
		div {
			padding-top:0.5%;
		}
		.sbHolder{
      width: 179px;
      height: 14px;
      background-color:#5ab046;
      -moz-border-radius: 2px;
      -webkit-border-radius: 2px;
    }
		.selectDisplay .sbHolder{
      width: 60px;
      height: 14px;
      background-color:#5ab046;
      -moz-border-radius: 2px;
      -webkit-border-radius: 2px;
		}
		.selectDisplay .sbSelector{
	     height: 18px;
	     line-height: 20px;
	     width: 50px;
    }
		.selectDisplay .sbOptions{
	     width: 60px;
		   left: 0px;
		   border:none;
	  }
    .sbSelector{
	     height: 18px;
	     line-height: 20px;
	     width: 179px;
    }
    .sbSelector:link, .sbSelector:visited, .sbSelector:hover{
	     color: #9eda90;
		   text-shadow:none;
    }
    .sbToggle{
	     background: url(<%= asset_path 'select-icons-elements.png' %>) 0 -123px no-repeat;
	  }
    .sbToggle:hover{
	    background: url(<%= asset_path 'select-icons-elements.png' %>) 0 -123px no-repeat;
    }
    .sbToggleOpen{
	    background: url(<%= asset_path 'select-icons-elements.png' %>) 0 -22px no-repeat;
    }
    .sbOptions{
	     width: 179px;
		   left: 0px;
		   border:none;
	  }
	 .sbOptions li{
	   padding: 0 ;
   }
   .sbOptions a{
	   text-shadow:none;
		 border-bottom: solid 1px #f5f5f5;
		 padding:7px;
   }
   .sbOptions a:link, .sbOptions a:visited{
	   color: #ddd;
	   text-decoration: none;
   }
   .sbOptions a:hover,
   .sbOptions a:focus,
   .sbOptions a.sbFocus{
	   color: #fff;
	   background-color:#41a62a;
   }
	}
	.boxViewSingleMediaElement {
	  background-color:#fbfafb;
	  color:#c0c0c0;
		position:relative;
	}
	.contentInterno {
	  p {
		  font-size:80%; 
			padding-top:0.6%;
		}
	}
	.boxViewCompactMediaElement {
	  width:100%;
		padding: 0;
	  color:#c0c0c0;
		@include contentLayout;
    background-color: #FBFAFB;
	  float:left;
		
		.contentInterno {
		  float:left;
		  width:99%;
		  padding:0.3% 0% 0.3% 1%;
			@include float-content;
			/*audio*/
			.audio {
		    @include iconeElements;
				padding-top:0.2em;
				padding-bottom:0.2em;
				background-position: 0 -2.6em;
		  }
			/*video*/
			.video {
		    @include iconeElements;
				background-position: 0 .1em;
				padding-top:0.2em;
				padding-bottom:0.2em;
		  }
			/*image*/
			.image {
		    @include iconeElements;
				background-position: 0 -5.1em;
				padding-top:0.2em;
				padding-bottom:0.2em;
		  }
		}
		.menuController {
	    padding:0px; 
      border-top:none;
			background-color:transparent;
			text-align:left;
		}
	}
	
}
