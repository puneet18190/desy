html.media_element_editor-layout {
  body {
 	  font:  13px 'Nunito', sans-serif;
	  color: #fff;
	  text-align: center;
		width: 100%;
		height:auto;
		background-image: url(<%= asset_path 'bg_tile_editor.gif' %>);
    background-repeat: repeat-x;
		background-position: top left;
		background-color:#5f5f5f;   
  }
	h1 {
	  font-size:  20px;
		padding:0;
	}
	.header {
	  background-color:#43a848;
		padding:10px;
		margin: 0 auto;
		
    .contenitore {
		  width: 960px;
			margin: 0 auto;
			display:inline-block;
			h1 {
			  padding-top:3px;
				color:white;
			}
			span {
			  color:white;
				padding-top:8px;
			}
		}
		
		.testo {
		 padding-top:7px; 
		 width:700px; 
		 text-align:center;
		}
		
	}
	@mixin boxShadow {
	  -webkit-box-shadow: 0px 6px 10px #161515;
    box-shadow: 0px 6px 10px #161515;
	}
	/*VIDEO EDITOR*/
	.mediaEditorVideoContainer {
	  width:984px;
		display:inline-block;
		position:relative;
		margin-top:40px;
		
		/*questa classe viene riscritta qui per la galleria video per l'editor video*/
			.gallery-header {
			  position:absolute;
				top:30px; left:20px;
				
				h3 {
				  padding-top:18px;
					padding-right:15px;
				}
			}
			
		.contentVideo {
	    background-color:#000;
		  width:640px;
		  height:360px;
		  margin:0 auto;
		  @include boxShadow;
		  margin-bottom:50px;
			
		
	  }
		.mediaEditorListaElementi {
		  /*position:absolute; */
			width:906px;
			margin-left:40px;
		}		
		
		.info {
		  padding:0px; 
			position:absolute; 
			top:10px; 
			right:70px; 
			text-align:left;
		}
		
	}
	@mixin iconeTipoElemento {
	  background-size: 5.7em 17em;
	  background-image: url(<%= asset_path 'icone-etichette.svg' %>);
    background-repeat: no-repeat;
    background-position:0 0;
		position:absolute;
		right:1px;
		margin-right:0px;
		float:none;
		top:0;
		opacity:0.4;
	}
	/*SCROLL ORIZZONTALE*/
	
  .horizontal-only {
	  max-height:170px;
	}
  /*SCROLL GALLERIA EDITOR VIDEO*/
	.scrollGatto {
		text-align:left;		
    
		.lista {
		  margin: 0px;
		  display:inline-block;
			
			.contatore {
			  padding: 4px 8px;
				width:32px;
        font-size:11px;
				border-radius:10px;
        -webkit-border-radius: 10px;
				margin-bottom:6px;
				background-color:#747574;
				position:relative;
				.textIcon {
				  @include iconeTipoElemento;
					background-position: -1em -11.9em;
					padding:0;
					width:4em;
					height:4em;
					
				}
				.photoIcon {
				  @include iconeTipoElemento;
					background-position: -1em -5.8em;
					padding:0;
					
					width:4em;
					height:4em;
				}
				.videoIcon {
				  padding:0;
				  @include iconeTipoElemento;
					background-position: -1em -0.5em;
					
					width:4em;
					height:4em;
				}
			}
			.separatore {
			  float:left; 
				padding-top:38px; 
				margin-left:7px;
				margin-right:4px;
			}
		}
		.newElement {
		  margin: 0px;
		  display:inline-block;
			width:156px;
			.contatore {
			  margin-bottom:6px;
			}
		}
	/*layout elementi sull'editor elementi*/
	@mixin layoutIconElements {
	  margin-right:0px;
    position:absolute;
	  bottom:10px;
	  right:3px;
		font-size:0.3em;
	}
	/*layout elemento singolo nella scroll orizzonatale*/
	.boxMediaElement {
	  width:156px;
	  height:88px;
		@include boxShadow;
		position:relative;
		float:left;
		
		.boxContentMediaElement {
		  position:absolute; 
			z-index:1;
			width:156px;
			height:88px;			
			img {
			  width: 156px;
			  height: 88px;
			}
			
		}
		.boxContentMediaElementText {
		  position:absolute; 
			z-index:1;
			width:156px;
			height:88px;
			
			p {
			  padding-top:20px;
				padding-left:20px;
				display: table-cell; 
        vertical-align: middle; 
        text-align: center; 
				width:116px;
				height:48px;
				line-height:12px;
				overlay:hidden;
			}			
		}
		.photoIcon {
			  @include layoutIconElements;
			}
			.audioIcon {
			  @include layoutIconElements;
			}
			.videoIcon {
			  @include layoutIconElements;
			}
			.textIcon {
			  @include layoutIconElements;
			}		
		/*menu elemento singolo*/
		.boxMenuMediaElement {
		  display:block;
		  position:absolute; 
			z-index:2;
			width:136px;
			height:22px; 
			padding: 5px 10px; 
			bottom:0px; 
			background-color: rgba(47,47,47,0.93);
			
			a {
			  font-size: 0.3em;
				float:left;
				padding:0;
				background-image: url(<%= asset_path 'action-fotogramma.svg' %>);
        background-repeat: no-repeat;
		    background-size: 12em 18em;
				&.cutButton {
				  background-position: -6em -12em;
					margin-right:2em;
					&:hover {
					  background-position: 0 -12em;
						opacity:1;
					}
				}
				&.creaNuovoButton {
				  background-position: -6em -6em;
					&:hover {
					  background-position: 0 -6em;
						opacity:1;
					}
				}
				&.closeButton {
				  background-position: -6em 0;
					float:right;
					&:hover {
					  background-position: 0 0;
						opacity:1;
					}
				}
			}
		}
		
	}
 }
  /*ELEMENTO NUOVO*/
	.boxNewMediaElement {
    width:156px;
	  height:88px;
	  margin-bottom:0;
		margin-right:0;
		position:relative;
		@include boxShadow;
	  .contentNew {
	    padding-top:15px;
			padding-left:50px;
		  height:73px;
		}
	}
		
	/*AGGIUNTA AUDIO -  SAVE ORA CANCEL*/
	.addAudioandSave {
	  float:left;
		padding-top:8px;
		width:900px;
		.titleTrack {
	    text-align:left;
		  padding:5px 10px;
		  float:left;
	  }
		.audioButton {
		  font-size: 0.8em;
			background-position: -5.2em -5.3em;
			opacity:0.2;
			float:left;
		}
		.audioButton:hover {
	    background-position: 0.3em -5.3em;
			opacity:1;
		}
		.audioButton.current {
	    background-position: 0.3em -5.3em;
		  opacity:1;
			float:left;
	  }
		a.exitButton {
	    opacity:0.5;
			background-position: -9em 0;
	}
		p {
		  padding-top:5%;
			float:left;
			color:#fff;
			width:300px;
			text-align:left;
			font: 13px Arial, Helvetica, sans-serif;
		}
  }
	
	.cutter {
	  display:none;
	  padding:10px;
		height:55px;
		position:absolute;
		z-index:150;
		top:150px;
		width:882px;
		@include boxShadow;
		background-color:#000;
		.ui-slider-horizontal {
		  border-radius:5px;
      -webkit-border-radius: 5px;
			background-color:blue;
		}
		.ui-slider-range {
		  background-color:#666;
		}
		.ui-slider-handle {
		  background-color:#fff;
		}
		.callout {
      top: -11px;
      z-index:20;
      position:absolute;
      border:0;
      left:440px;
    }
	}
	
	/*IMAGES EDITOR*/
	.mediaEditorElementContainer {
	  width:984px;
		display:inline-block;
		
		.imagesContainer {
			width:660px; 
			height:520px;
			float:left;
		}
		
	}
	.menuLeftEditorElement {
	  float:left; 
		width:183px;
		text-align:left;
		padding:20px;
		h2 {
		  font-size:18px;
			color:#43a848;
		}
		p {
		  font-size:11px;
			font-weight:normal;
		}
		.menuModifyImages {
		  padding-top:40px; 
			
			li {
			  list-style: none;
        margin: 0;
        padding-bottom:40px;
			}
		}
	}
	.menuBottomEditorElement {
	  clear:both;
		width:660px;
		height: 30px;
		margin: 0 0 0 215px; 
		text-align:center;
		padding:10px;
		.menuTextImages{
		  display:none;
		}
		
	}
	.menuFooterEditorElement {
	  padding-top:10px;
		margin-top:10px;
		border-top:10px solid #504f50;
		width:984px;
		height: 70px;
		p {
		  float:left;
			font-size:11px;
			
		}
	}
	.menuServiceImages {
		  display:none;
		  margin:0 auto;
		  width: 200px;
			
		 
		}
	/*
   * imgAreaSelect default style
   */
   
   #image_wrapper{
     margin:0 auto 0;
     padding:0;
 		 margin-top:25px;
     width: 660px;
     display:block;
     overflow:hidden;
     img{
       max-width: 660px;
       max-height: 495px;
     }
   }

    #_image_editor_container{
      .image_editor_text{
       padding:0;
      }
      textarea{
        background-color: rgba(230,230,230,0.5);
        border: 1px solid rgba(255,255,255,0.5);
        width: 230px;
        height: 40px;
        max-width: 640px; 
        max-height: 475px;
        padding: 0;
        font-size: 15px;
        font-weight: normal;
        line-height: 15px;
        font-family: Arial, sans-serif;
        resize: both;
        &.small_font{
          font-size: 15px;
          line-height: 15px;
        }
        &.medium_font{
          font-size: 25px;
          line-height: 25px;
        }
        &.big_font{
          font-size: 30px;
          line-height: 30px;
        }
      }
   }
  
   
  .text_tools{
    background-color: rgba(0,0,0,0.5);
    height: 25px;
    padding: 0 7px;
    .text_colors{
      float:left;
      margin: 7px 7px 0;
      width:110px;
      padding:0 5px;
      border-left: 1px solid #ccc;
      border-right: 1px solid #ccc;
      a{
        float:left;
        margin-left: 2px;
        margin-right: 2px;
        border: 1px solid #f5f5f5;
        height: 8px;
        width: 12px;
      }
      a:hover,a.current{
        margin-left:1px;
        margin-right:1px;
        border-left: 2px solid white;
        border-right: 2px solid white;
      }
    }
    .font_sizes{
      margin: 0;
      padding:3px 0 0;
      float:left;
      a.small_font{
        font-size: 8px;
      }
      a.medium_font{
        font-size: 10px;
      }
      a.big_font{
        font-size: 12px;
      }
      a{
        color:white;
        margin-right: 6px;
        &.medium_font:hover,&.small_font:hover,&.big_font:hover,&.medium_font.current,&.small_font.current,&.big_font.current{
          color: yellow;
        }        
      }
    }
  
    ._delete,._move{
      float:left;
      display:block;
      margin-top:2px;
    }
    ._move{
      float:right;
      margin-top:4px;
      width: 17px;
      height: 17px;
      cursor:move;
      cursor: -webkit-grab;
      background: url("/assets/draggable_knob.png") no-repeat center center;
    }
  }
  a.do_crop,a.write_text{
    color: white;
    &.active{
      color: green;
    }
  }
     
  .imgareaselect-border1 {
  	background: url(/assets/border-v.gif) repeat-y left top;
  }

  .imgareaselect-border2 {
      background: url(/assets/border-h.gif) repeat-x left top;
  }

  .imgareaselect-border3 {
      background: url(/assets/border-v.gif) repeat-y right top;
  }

  .imgareaselect-border4 {
      background: url(/assets/border-h.gif) repeat-x left bottom;
  }

  .imgareaselect-border1, .imgareaselect-border2,
  .imgareaselect-border3, .imgareaselect-border4 {
      filter: alpha(opacity=50);
  	opacity: 0.5;
  }

  .imgareaselect-handle {
      background-color: green;
      border: solid 1px green;
      filter: alpha(opacity=50);
      opacity: 0.5;
  }

  .imgareaselect-outer {
      background-color: #000;
      filter: alpha(opacity=50);
      opacity: 0.5;
  }

  .imgareaselect-selection {  
  }
}
