html.media_element_editor-layout {
  
 
  body {
 		font:  13px 'Nunito', sans-serif;
	  color: #fff;
	  text-align: center;
		width: 100%;
		height:auto;
		background-image: url(<%= asset_path 'bg_tile_editor.gif' %>);
    background-repeat: repeat-x;
		background-position: top left;
		background-color:#5f5f5f;   
  }
	
	h1 {
	  font-size:  20px;
		padding:0;
	}
	
	.header {
	  background-color:#43a848;
		padding:10px;
		margin: 0 auto;
		
    .contenitore {
		  width: 960px;
			margin: 0 auto;
			display:inline-block;
			h1 {
			  padding-top:3px;
				color:white;
			}
			span {
			  color:white;
				padding-top:8px;
			}
		}
		
		.testo {
		 padding-top:7px; 
		 width:700px; 
		 text-align:center;
		}
		
	}
	@mixin boxShadow {
	  -webkit-box-shadow: 0px 6px 10px #161515;
    box-shadow: 0px 6px 10px #161515;
	}
	
	.contentElement {
	  background-color:#000;
		width:640px;
		height:360px;
		margin:0 auto;
		@include boxShadow;
		margin-bottom:50px;
		
	}
	.scroll-pane {
    width: 100%;
	  height: 160px;
	  overflow: auto;
  }	
  .horizontal-only {
	  max-height:170px;
	}

	.scrollGatto {
    width:1500px;
		text-align:left;		

		.lista {
		  margin: 0px;
		  display:inline-block;
			width:186px;
			.contatore {
			  padding: 4px;
        font-size:11px;
			}
			.separatore {
			  float:left; 
				padding-top:38px; 
				margin-left:7px;
			}
		}
	/*layout elementi sull'editor elementi*/
	@mixin layoutIconElements {
	  margin-right:0px;
    position:absolute;
	  bottom:15px;
	  right:3px;
		font-size:0.3em;
	}
	/*content elemento singolo*/
	.boxMediaElement {
	  width:156px;
	  height:87.75px;
		@include boxShadow;
		position:relative;
		float:left;
		
		.boxContentMediaElement {
		  position:absolute; 
			z-index:1;
			width:156px;
			height:100px;
			
			img {
			  width: 156px;
			  height: 88px;
			}
			.photoIcon {
			  @include layoutIconElements;
			}
			.audioIcon {
			  @include layoutIconElements;
			}
			.videoIcon {
			  @include layoutIconElements;
			}
			.textIcon {
			  @include layoutIconElements;
			}
		}
				
		/*content menu elemento singolo*/
		.boxMenuMediaElement {
		  display:none;
		  background-color:#000; 
			position:absolute; 
			z-index:2; 
			padding:12px 6px; 
			bottom:0; 
			width:144px; 
			background-color: rgba(0,0,0,0.7);
			font-size:11px;
						
			/*a {
			  color:#fff;
				float:left;
				margin-right:10px;
			}*/
			
		}
	}
 }
	.boxNewMediaElement {
    width:156px;
	  height:87.75px;
	  margin-bottom:0px;
		@include boxShadow;
	  .contentNew {
	    padding-top:15px;
			padding-left:50px;
		  height:73px;
		}
	}
	
	.addAudioandSave {
	  float:left;
		padding-top:8px;
		width:860px;
		.audioButton {
		  font-size: 0.8em;
			background-position: -5.2em -5.3em;
			opacity:0.2;
			float:left;
		}
		.audioButton:hover {
	    background-position: 0.3em -5.3em;
			opacity:1;
		}
		.audioButton.current {
	    background-position: 0.3em -5.3em;
		  opacity:1;
			float:left;
	  }
		a.exitButton {
	    opacity:0.5;
			background-position: -9em 0;
	}
		p {
		  padding-top:5%;
			float:left;
			color:#fff;
			width:300px;
			text-align:left;
			font: 13px Arial, Helvetica, sans-serif;
		}
  }
	
	.timeline {
	  display:none;
	  padding:10px;
		height:55px;
		position:absolute;
		z-index:150;
		top:150px;
		width:882px;
		@include boxShadow;
		background-color:#000;
		.ui-slider-horizontal {
		  border-radius:5px;
      -webkit-border-radius: 5px;
			background-color:blue;
		}
		.ui-slider-range {
		  background-color:#666;
		}
		.ui-slider-handle {
		  background-color:#fff;
		}
		.callout {
      top: -11px;
      z-index:20;
      position:absolute;
      border:0;
      left:440px;
    }
	}
	.boxViewAudioElement {
    width: 100%;
    padding: 10px;
    color: silver;
    position: relative;
    float: left;
    margin-bottom: 1%;
    background-color: #4a4a4a;
		
		.contentAudio {
      float: left;
      width: 99%;
      padding: 0.5% 0% 0.5% 1%;
      color:#fff;
      height: auto;
    }
  }
	.mediaEditorVideoContainer {
	  width:984px;
		display:inline-block;
		position:relative;
		padding-top:30px;
		.mediaEditorListaElementi {
		  position:absolute; 
			width:906px;
		}		
		
		.info {
		  padding:20px; 
			position:absolute; 
			top:0px; 
			right:20px; 
			text-align:left;
		}
	}
	.mediaEditorElementContainer {
	  width:984px;
		display:inline-block;
		
		.imagesContainer {
		  outline:1px dotted blue; 
			width:600px; 
			height:600px; 
			float:left;
		}
		
	}
	.menuLeftEditorElement {
	  float:left; 
		width:183px;
		text-align:left;
		padding:16px;
		h2 {
		  font-size:18px;
			color:#43a848;
		}
		p {
		  font-size:11px;
			font-weight:normal;
		}
		.menuModifyImages {
		  padding-top:40px; 
			
			li {
			  list-style: none;
        margin: 0;
        padding-bottom:40px;
			}
		}
	}
	.menuRightEditorElement {
	  float:right;
		width:134px;
		text-align:left;
		padding:80px 16px 0 16px;
		.menuServiceImages {
		  margin-top:20px;
			
		  li {
			  list-style: none;
        margin-bottom: 10px;
        padding:5px 10px;
				text-align:center;
				background-color:#2d2e2e;
				border-radius: 10px;
        -webkit-border-radius: 10px;
				font-size:14px;
				input {
				  color:#43a848;
					padding:0px;
					cursor:pointer;
					font-size:14px;
				}
				a {
				  color:#43a848;
				}
			}
		}
	}
	.menuFooterEditorElement {
	  padding-top:15px;
		margin-top:40px;
		border-top:10px solid #504f50;
		width:984px;
		p {
		  float:left;
			font-size:11px;
			
		}
	}
	
	/*
   * imgAreaSelect default style
   */
   
  ._delete,._move{
    display:none;
    float:left;
    width: auto;
  }
  
  ._move{
    float:right;
  }
  
  a.do_crop,a.write_text{
    color: white;
    &.active{
      color: green;
    }
  }
   
  #image_wrapper{
    margin:0 auto;
    padding:0;
    width: 500px;
    display:block;
    overflow:hidden;
    img{
      max-width: 500px;
      max-height: 500px;
    }
  }
  
  #_image_container textarea{
   background-color: rgba(230,230,230,0.5);
   color: rgba(50,50,50,1);
   border: 1px solid white;
  }
  
  #_image_container a{
    color: white;
  }
  
  #_image_container img{
    margin-top:20px;
  }
  
  .imgareaselect-border1 {
  	background: url(/assets/border-v.gif) repeat-y left top;
  }

  .imgareaselect-border2 {
      background: url(/assets/border-h.gif) repeat-x left top;
  }

  .imgareaselect-border3 {
      background: url(/assets/border-v.gif) repeat-y right top;
  }

  .imgareaselect-border4 {
      background: url(/assets/border-h.gif) repeat-x left bottom;
  }

  .imgareaselect-border1, .imgareaselect-border2,
  .imgareaselect-border3, .imgareaselect-border4 {
      filter: alpha(opacity=50);
  	opacity: 0.5;
  }

  .imgareaselect-handle {
      background-color: #fff;
      border: solid 1px #000;
      filter: alpha(opacity=50);
      opacity: 0.5;
  }

  .imgareaselect-outer {
      background-color: #000;
      filter: alpha(opacity=50);
      opacity: 0.5;
  }

  .imgareaselect-selection {  
  }
  
	
	
}
