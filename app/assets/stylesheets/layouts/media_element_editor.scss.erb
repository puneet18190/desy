        }
      }
   }
  
   
  .text_tools{
    background-color: rgba(0,0,0,0.5);
    height: 25px;
    padding: 0 7px;
    .text_colors{
      float:left;
      margin: 7px 7px 0;
      width:110px;
      padding:0 5px;
      border-left: 1px solid #ccc;
      border-right: 1px solid #ccc;
      a{
        float:left;
        margin-left: 2px;
        margin-right: 2px;
        border: 1px solid #f5f5f5;
        height: 8px;
        width: 12px;
      }
      a:hover,a.current{
        margin-left:1px;
        margin-right:1px;
        border-left: 2px solid white;
        border-right: 2px solid white;
      }
    }
    .font_sizes{
      margin: 0;
      padding:3px 0 0;
      float:left;
      a.small_font{
        font-size: 8px;
      }
      a.medium_font{
        font-size: 10px;
      }
      a.big_font{
        font-size: 12px;
      }
      a{
        color:white;
        margin-right: 6px;
        &.medium_font:hover,&.small_font:hover,&.big_font:hover,&.medium_font.current,&.small_font.current,&.big_font.current{
          color: yellow;
        }        
      }
    }
  
    ._delete,._move{
      float:left;
      display:block;
      margin-top:2px;
    }
    ._move{
      float:right;
      margin-top:4px;
      width: 17px;
      height: 17px;
      cursor:move;
      cursor: -webkit-grab;
      background: url("/assets/draggable_knob.png") no-repeat center center;
    }
  }
  a.do_crop,a.write_text{
    color: white;
    &.active{
      color: green;
    }
  }
     
  .imgareaselect-border1 {
    background: url(/assets/border-v.gif) repeat-y left top;
  }

  .imgareaselect-border2 {
      background: url(/assets/border-h.gif) repeat-x left top;
  }

  .imgareaselect-border3 {
      background: url(/assets/border-v.gif) repeat-y right top;
  }

  .imgareaselect-border4 {
      background: url(/assets/border-h.gif) repeat-x left bottom;
  }

  .imgareaselect-border1, .imgareaselect-border2,
  .imgareaselect-border3, .imgareaselect-border4 {
      filter: alpha(opacity=50);
    opacity: 0.5;
  }

  .imgareaselect-handle {
      background-color: green;
      border: solid 1px green;
      filter: alpha(opacity=50);
      opacity: 0.5;
  }

  .imgareaselect-outer {
      background-color: #000;
      filter: alpha(opacity=50);
      opacity: 0.5;
  }

