      background-position: 0.3em -5.3em;
      opacity:1;
      float:left;
    }
    a.exitButton {
      opacity:0.5;
      background-position: -9em 0;
  }
    p {
      padding:10px 10px;
      float:left;
      color:#fff;
      width:400px;
      outline:1px solid red;
      text-align:left;
      font: 13px Arial, Helvetica, sans-serif;
    }
  }
  
  .cutter {
    display:none;
    padding:10px;
    height:55px;
    position:absolute;
    z-index:150;
    top:150px;
    width:882px;
    @include boxShadow;
    background-color:#000;
    .ui-slider-horizontal {
      border-radius:5px;
      -webkit-border-radius: 5px;
      background-color:blue;
    }
    .ui-slider-range {
      background-color:#666;
    }
