  /*IMAGES EDITOR*/
  .mediaEditorElementContainer {
    width:984px;
    display:inline-block;
    
    .imagesContainer {
      width:660px; 
      height:520px;
      float:left;
    }
    
  }
  .menuLeftEditorElement {
    float:left; 
    width:183px;
    text-align:left;
    padding:20px;
    h2 {
      font-size:18px;
      color:#43a848;
    }
    p {
      font-size:11px;
      font-weight:normal;
    }
    .menuModifyImages {
      padding-top:40px; 
      
      li {
        list-style: none;
        margin: 0;
        padding-bottom:40px;
      }
    }
  }
  .menuBottomEditorElement {
    clear:both;
    width:660px;
