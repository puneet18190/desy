html.media_element_editor-layout {
  body {
     font:  13px 'Nunito', sans-serif;
    color: #fff;
    text-align: center;
    width: 100%;
    background-image: url(<%= asset_path 'bg_tile_editor.gif' %>);
    background-repeat: repeat-x;
    background-position: top left;
    background-color:#5f5f5f;   
  }
  h1 {
    font-size:  20px;
    padding:0;
  }
  .header {
    background-color:#43a848;
    padding:5px;
    margin: 0 auto;
    
    .contenitore {
      width: 960px;
      margin: 0 auto;
      display:inline-block;
      h1 {
        padding-top:3px;
        color:white;
      }
      span {
        color:white;
        padding-top:8px;
      }
    }
    
    .testo {
     padding-top:7px; 
     width:700px; 
     text-align:center;
    }
    
  }
  .headerEmpty {
    height: 44px;
    background-color:#43a848;
    margin: 0 auto;
  }
  @mixin boxShadow {
    -webkit-box-shadow: 0px 6px 10px #161515;
    box-shadow: 0px 6px 10px #161515;
  }
  
  /* ELEMENTS EDITOR */
  #form_info_new_media_element_in_editor.formInfoMediaElementEditor, #form_info_update_media_element_in_editor.formInfoMediaElementEditor {
    background-color: #43a848;
    width: 990px;
    height: 600px;
    position: absolute;
    top: 68px;
    z-index: 101;
    
    .videoIcon {
      background-position: -6em 0;
      font-size:1em;
      margin-right:15px;
    }
    .imageIcon {
      background-position: -6em -11.2em;
      font-size:1em;
      margin-right:15px;
    }
    .audioIcon {
      background-position: -6em -5.6;
      font-size:1em;
      margin-right:15px;
    }
    .contentFormInfoMediaElementEditor {
      padding-top: 60px;
      width:670px;
      margin:0 auto;
      .titleFormInfo {
        padding-bottom:40px;
        display:inline-block;
        width:670px;
        
        h1 {
          color:#fff;
          text-align:left;
          font-size:24px;
          margin-top:10px;

        }
        h2 {
          color:#fff;
          text-align:left;
        }
      }
      .cols {
        padding-top:40px;
        text-align:left;
      }
      input, textarea {
        border:1px solid #fff;
        background-color:#454343;
        padding:5px 14px;
        width:272px;
        font: 12px Arial, Helvetica, sans-serif;
        color: #fff;
        resize:none;
        &.form_error,{
          outline: 3px solid white;
        }
      }
      input {
        height:25px;
        margin-bottom:12px;
      }
      textarea {
        height: 106px;
      }
      textarea#new_tags, textarea#update_tags {
        height:155px;
      }
      input[type="submit"] {
        font: 130% 'Nunito', sans-serif;
        color: #fff;
        width:160px;
        background-color:#41a62a;
        &:hover {
          background-color: #67b855;
          cursor: pointer;
        }
      }
      .buttonForm {
        background-color:#000;
        color:white;
        &:hover {
          background-color: #67b855;
        }
      }
    }
    
    
        
  }
  
  /*VIDEO EDITOR*/
  .mediaEditorVideoContainer {
    width:984px;
    display:inline-block;
    position:relative;
    margin-top:40px;
    
    .contentVideo {
      background-color:#000;
      width:640px;
      height:360px;
      margin:0 auto;
      @include boxShadow;
      margin-bottom:50px;
      
    
    }
    .mediaEditorListaElementi {
      /*position:absolute; */
      width:906px;
      margin-left:40px;
    }
    
    .info {
      padding:0px; 
      position:absolute; 
      top:10px; 
      right:70px; 
      text-align:left;
    }
    
  }
  
  .mediaEditorVideoGalleryContainer {
    width: 960px;
    position: absolute;
    -webkit-box-shadow: 0px 6px 10px #161515;
    box-shadow: 0px 6px 10px #161515;
    background-color:#252323;
    top: 65px;
    .video_gallery {
      
      width:876px;
    }
    /*questa classe viene riscritta qui per la galleria video per l'editor video*/
      .gallery-header {
        position:absolute;
        top:40px; left:40px;
        h3 {
          padding-top:18px;
          padding-right:15px;
        }
      }
      
    .contentVideo {
      background-color:#000;
      width:640px;
      height:360px;
      margin:0 auto;
      @include boxShadow;
      margin-bottom:50px;
      
    
    }
    .mediaEditorListaElementi {
      /*position:absolute; */
      width:906px;
      margin-left:40px;
    }
    .info {
      padding:0px;
      position:absolute;
      top:10px;
      right:70px;
      text-align:left;
    }
  }
  
  $icon-size: 5.6em;
/*ICONOGRAFIA PER DISTINGUERE GLI ELEMENTI DIDATTICI*/
@mixin iconEditorElement($font-size: 2em) {
  
  & {
    float:left;
    
    width: $icon-size;
    height: $icon-size;
    background-image: url(<%= asset_path 'icone_editor_elementi.svg' %>);
    background-repeat: no-repeat;
    background-size: ($icon-size*3) ($icon-size*4);
    padding:0;
    font-size: $font-size;
  }
}

  .mediaSelectEditorButtonContainer{
    width:550px;
    height:550px;
    margin: 0 auto;
    text-align:center;
    display:table;
    .contentTitle {
      display:table-cell; 
       vertical-align:middle;
      h1 {
        text-align:left;
        color:#40a748;
        font-size:30px;
        font-weight:normal;
      }
      h2 {
        text-align:left;
        color:#fff;
        font-size:18px;
        font-weight:normal;
      }
    }
    .contentSelectButton {
      float:left;
      padding-top:45px;
      .videoButton {
      @include iconEditorElement();
      background-position: 0 0;
      opacity:1;
      cursor:pointer;
      &:hover, &.current {
        background-position: (-$icon-size) 0;
        opacity:0.4;
      }
     }
    .photoButton {
      @include iconEditorElement();
      
      background-position: 0 (-$icon-size*2);
      opacity:1;
      cursor:pointer;
      &:hover, &.current {
        background-position: (-$icon-size)(-$icon-size*2);
        opacity:0.4;
      }
    }
    .audioButton {
      @include iconEditorElement();
      background-position: 0 (-$icon-size);
      opacity:1;
      cursor:pointer;
      &:hover, &.current {
        background-position: (-$icon-size) (-$icon-size);
        opacity:0.4;
      }
    }
    }
  }
  @mixin iconeTipoElemento {
    background-size: 5.7em 17em;
    background-image: url(<%= asset_path 'icone-etichette.svg' %>);
    background-repeat: no-repeat;
    background-position:0 0;
    position:absolute;
    right:1px;
    margin-right:0px;
    float:none;
    top:0;
    opacity:0.4;
  }
  /*SCROLL ORIZZONTALE*/
  
  .horizontal-only {
    max-height:170px;
  }
  /*SCROLL GALLERIA EDITOR VIDEO*/
  .scrollGatto {
    text-align:left;    
    
    .lista {
      margin: 0px;
      display:inline-block;
      
      .contatore {
        padding: 4px 8px;
        width:32px;
        font-size:11px;
        border-radius:10px;
        -webkit-border-radius: 10px;
        margin-bottom:6px;
        background-color:#747574;
        position:relative;
        .textIcon {
          @include iconeTipoElemento;
          background-position: -1em -11.9em;
          padding:0;
          width:4em;
          height:4em;
          
        }
        .photoIcon {
          @include iconeTipoElemento;
          background-position: -1em -5.8em;
          padding:0;
          
          width:4em;
          height:4em;
        }
        .videoIcon {
          padding:0;
          @include iconeTipoElemento;
          background-position: -1em -0.5em;
          
          width:4em;
          height:4em;
        }
      }
      .separatore {
        float:left; 
        padding-top:38px; 
        margin-left:7px;
        margin-right:4px;
      }
    }
    .newElement {
      margin: 0px;
      display:inline-block;
      width:156px;
      .contatore {
        margin-bottom:6px;
      }
    }
  /*layout elementi sull'editor elementi*/
  @mixin layoutIconElements {
    margin-right:0px;
    position:absolute;
    bottom:10px;
    right:3px;
    font-size:0.3em;
  }
  /*layout elemento singolo nella scroll orizzonatale*/
  .boxMediaElement {
    width:156px;
    height:88px;
    @include boxShadow;
    position:relative;
    float:left;
    
    .boxContentMediaElement {
      position:absolute; 
      width:156px;
      height:88px;      
      img {
        width: 156px;
        height: 88px;
      }
      
    }
    .boxContentMediaElementText {
      position:absolute; 
      width:156px;
      height:88px;
      
      p {
        padding-top:20px;
        padding-left:20px;
        display: table-cell; 
        vertical-align: middle; 
        text-align: center; 
        width:116px;
        height:48px;
        line-height:12px;
        overlay:hidden;
      }      
    }
    .photoIcon {
        @include layoutIconElements;
      }
      .audioIcon {
        @include layoutIconElements;
      }
      .videoIcon {
        @include layoutIconElements;
      }
      .textIcon {
        @include layoutIconElements;
      }    
    /*menu elemento singolo*/
    .boxMenuMediaElement {
      display:block;
      position:absolute; 
      z-index:2;
      width:136px;
      height:22px; 
      padding: 5px 10px; 
      bottom:0px; 
      background-color: rgba(47,47,47,0.93);
      
      a {
        font-size: 0.3em;
        float:left;
        padding:0;
        background-image: url(<%= asset_path 'action-fotogramma.svg' %>);
        background-repeat: no-repeat;
        background-size: 12em 18em;
        &.cutButton {
          background-position: -6em -12em;
          margin-right:2em;
          &:hover {
            background-position: 0 -12em;
            opacity:1;
          }
        }
        &.creaNuovoButton {
          background-position: -6em -6em;
          &:hover {
            background-position: 0 -6em;
            opacity:1;
          }
        }
        &.closeButton {
          background-position: -6em 0;
          float:right;
          &:hover {
            background-position: 0 0;
            opacity:1;
          }
        }
      }
    }
    
  }
 }
  /*ELEMENTO NUOVO*/
  .boxNewMediaElement {
    width:156px;
    height:88px;
    margin-bottom:0;
    margin-right:0;
    position:relative;
    @include boxShadow;
    .contentNew {
      padding-top:15px;
      padding-left:50px;
      height:73px;
    }
  }
    
  /*AGGIUNTA AUDIO -  SAVE ORA CANCEL*/
  .addAudioandSave {
    float:left;
    padding-top:8px;
    width:900px;
    .titleTrack {
      text-align:left;
      padding:5px 10px;
      float:left;
      margin-top:10px;
    }
    .audioButton {
      font-size: 0.8em;
      background-position: -5.2em -5.3em;
      opacity:0.2;
      float:left;
    }
    .audioButton:hover {
      background-position: 0.3em -5.3em;
      opacity:1;
    }
