html.media_elements-layout {
  height: 100%;
 
  body {
    font: 80% Arial, Helvetica, sans-serif;
	  margin: 0;
	  color: #fff;
	  text-align: center;
		width: 100%;
		height: 100%;
		background: #2d2d2d;
    /* Old browsers */
    background: -moz-linear-gradient(top, #2d2d2d 0%, #5f5f5f 100%, #7db9e8 100%);
    /* FF3.6+ */
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #2d2d2d), color-stop(100%, #5f5f5f), color-stop(100%, #7db9e8));
    /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(top, #2d2d2d 0%, #5f5f5f 100%, #7db9e8 100%);
    /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(top, #2d2d2d 0%, #5f5f5f 100%, #7db9e8 100%);
    /* Opera 11.10+ */
    background: -ms-linear-gradient(top, #2d2d2d 0%, #5f5f5f 100%, #7db9e8 100%);
    /* IE10+ */
    background: linear-gradient(to bottom, #2d2d2d 0%, #5f5f5f 100%, #7db9e8 100%);
    /* W3C */
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#2d2d2d', endColorstr='#7db9e8',GradientType=0 );
    /* IE6-9 */
  }
	h1 {
	  font:  180% 'Nunito', sans-serif;
		padding:0;
	}
	.header {
	  background-color:#eaeaea; 
		padding:10px;
		margin: 0 auto;
		color:#535353;
    .contenitore {
		  width: 960px;
			margin: 0 auto;
			text-align:left;
			display:inline-block;
			border:1px solid red;
		}
	}
	.top {
    margin-bottom: -190px;
    background: transparent;
    width: 1px;
    height: 22%;
    float: left;
  }
	.container {
    margin: 0 auto;
    width: 960px;
		clear: left;
		padding:0;
		background-color:transparent;
  }
	.contentElement {
	  background-color:#000;
		width:640px;
		height:360px;
		margin:0 auto;
		-moz-box-shadow: 0px 6px 10px #161515;
    -webkit-box-shadow: 0px 6px 10px #161515;
    box-shadow: 0px 6px 10px #161515;
		margin-bottom:50px;
	}
}
