html.media_elements-layout {
  height: 100%;
 
  body {
    font: 13px Arial, Helvetica, sans-serif;
	  margin: 0;
	  color: #fff;
	  text-align: center;
		width: 100%;
		height: auto;
		background: #2d2d2d;
    /* Old browsers */
    background: -moz-linear-gradient(top, #2d2d2d 0%, #5f5f5f 100%, #7db9e8 100%);
    /* FF3.6+ */
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #2d2d2d), color-stop(100%, #5f5f5f), color-stop(100%, #7db9e8));
    /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(top, #2d2d2d 0%, #5f5f5f 100%, #7db9e8 100%);
    /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(top, #2d2d2d 0%, #5f5f5f 100%, #7db9e8 100%);
    /* Opera 11.10+ */
    background: -ms-linear-gradient(top, #2d2d2d 0%, #5f5f5f 100%, #7db9e8 100%);
    /* IE10+ */
    background: linear-gradient(to bottom, #2d2d2d 0%, #5f5f5f 100%, #7db9e8 100%);
    /* W3C */
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#2d2d2d', endColorstr='#7db9e8',GradientType=0 );
    /* IE6-9 */
  }
	h1 {
	  font:  20px 'Nunito', sans-serif;
		padding:0;
	}
	/*MENU*/
	@mixin buttonEditorElement {
  $button-size: 4.5em;
  & {
    display: block;
    width: $button-size;
    height: $button-size;
    background-image: url(<%= asset_path 'set-icone-editor.svg' %>);
    background-repeat: no-repeat;
    background-size: ($button-size*4) ($button-size*8);
    padding:0;
	}
	&:hover {
    cursor: pointer;
  }
	&.exitButton {
	  font-size: 0.3em;
    background-position: (-$button-size*2) 0;
		opacity:0.2;
		
	}
	&.exitButton:hover {
	  font-size: 0.3em;
		background-position: (-$button-size*3) 0;
		opacity:1;
	}
	&.creaNuovoButton {
	  font-size: 0.8em;
    background-position: (-$button-size*2) (-$button-size);
		opacity:0.2;
		
	}
	&.creaNuovoButton:hover {
	  font-size: 0.8em;
		background-position: (-$button-size*3) (-$button-size);
		opacity:1;
	}
 }
 /*FINE MENU*/
