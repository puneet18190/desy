html.media_elements-layout {
  height: 100%;
 
  body {
    font: 13px Arial, Helvetica, sans-serif;
	  margin: 0;
	  color: #fff;
	  text-align: center;
		width: 100%;
		height: auto;
		background: #2d2d2d;
    /* Old browsers */
    background: -moz-linear-gradient(top, #2d2d2d 0%, #5f5f5f 100%, #7db9e8 100%);
    /* FF3.6+ */
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #2d2d2d), color-stop(100%, #5f5f5f), color-stop(100%, #7db9e8));
    /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(top, #2d2d2d 0%, #5f5f5f 100%, #7db9e8 100%);
    /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(top, #2d2d2d 0%, #5f5f5f 100%, #7db9e8 100%);
    /* Opera 11.10+ */
    background: -ms-linear-gradient(top, #2d2d2d 0%, #5f5f5f 100%, #7db9e8 100%);
    /* IE10+ */
    background: linear-gradient(to bottom, #2d2d2d 0%, #5f5f5f 100%, #7db9e8 100%);
    /* W3C */
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#2d2d2d', endColorstr='#7db9e8',GradientType=0 );
    /* IE6-9 */
  }
	
	h1 {
	  font:  20px 'Nunito', sans-serif;
		padding:0;
	}
	
	.header {
	  background-color:#eaeaea;
		font-family: 'Nunito', sans-serif;
		padding:10px;
		margin: 0 auto;
		color:#535353;
    .contenitore {
		  width: 960px;
			margin: 0 auto;
			display:inline-block;
			h1 {
			  padding-top:3px;
			}
			span {
			  color:#535353;
				padding-top:8px;
			}
		}
		
		.testo {
		 padding-top:7px; 
		 width:615px; 
		 text-align:center;
		}
		
	}
	@mixin boxShadow {
	  -webkit-box-shadow: 0px 6px 10px #161515;
    box-shadow: 0px 6px 10px #161515;
	}
	.top {
    margin-bottom: -190px;
    background: transparent;
    width: 1px;
    height: 22%;
    float: left;
  }
	.container {
    margin: 0 auto;
    width: 960px;
		clear: left;
		padding:0;
		background-color:transparent;
  }
	.contentElement {
	  background-color:#000;
		width:640px;
		height:360px;
		margin:0 auto;
		@include boxShadow;
		margin-bottom:50px;
		
	}
	.scroll-pane {
    width: 100%;
	  height: 170px;
	  overflow: auto;
  }	
  .horizontal-only {
	  max-height:170px;
	}
	.scrollContent {
    width:1500px;
		text-align:left;		
		.lista {
		  margin: 0px;
		  float:left; 
			width:186px;
			.contatore {
			  padding: 4px;
        font-size:11px;
			}
			.separatore {
			  float:left; 
				padding-top:46px; 
				margin-left:7px;
			}
		}
	/*layout elementi sull'editor elementi*/
	@mixin layoutIconElements {
	  margin-right:0px;
    position:absolute;
	  top:6px;
	  right:3px;
	}
	/*content elemento singolo*/
	.boxMediaElement {
	  width:156px;
	  height:104px;
		@include boxShadow;
		position:relative;
		float:left;
		.boxContentMediaElement {
		  position:absolute; 
			z-index:1;
		}
		
		
		/*content menu elemento singolo*/
		.boxMenuMediaElement {
		  background-color:#000; 
			position:absolute; 
			z-index:2; 
			padding:12px 6px; 
			bottom:0; 
			width:144px; 
			background-color: rgba(0,0,0,0.7);
			font-size:11px;
			display:block;
			
			a {
			  color:#fff;
				float:left;
				margin-right:10px;
			}
			.photoIcon {
			  @include layoutIconElements;
			}
			.audioIcon {
			  @include layoutIconElements;
			}
			.videoIcon {
			  @include layoutIconElements;
			}
			.textIcon {
			  @include layoutIconElements;
			}
		}
	}
 }
	.boxNewMediaElement {
    width:156px;
	  margin-bottom:0px;
		@include boxShadow;
	  .contentNew {
	    padding-top:25px;
			padding-left:55px;
		  height:79px;
		}
	}
	.addAudioandSave {
	  float:left;
		padding-top:8px;
		width:960px;
		.audioButton {
		  font-size: 0.8em;
			background-position: -5.2em -5.2em;
			opacity:0.2;
			float:left;
		}
		.audioButton:hover {
	    background-position: 0.3em -5.2em;
			opacity:1;
		}
		.audioButton.current {
	    background-position: 0.3em -5.2em;
		  opacity:1;
			float:left;
	  }
		a.exitButton {
	    opacity:0.5;
			background-position: -9em 0;
	}
		p {
		  padding-top:5%;
			float:left;
			color:#fff;
			width:300px;
			text-align:left;
		}
  }
	.timeline {
