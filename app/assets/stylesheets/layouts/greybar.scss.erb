.gray-bar {
  padding:0.4% 1.3% 0.4% 1.3%; 
	background-color:#f5f5f5;
	color:#727377;
	float:left;
	margin-bottom:20px;
	margin-left:1%;
	font:  80% 'Nunito', sans-serif;
	width:95.2%;
	font: {
	  size:120%;
	}
	ul.navlist {
    margin: 20px 0 10px 0;
    padding: 0;
    white-space: nowrap;
		float:left;
  }
  .navlist li {
    display: inline;
    list-style-type: none;
    margin-right:10px;
  }
  .navlist a {
   padding: 15px 30px;
	}
  .navlist a:link, 
	.navlist a:visited {
	  color: #727377;
    background-color: #fff;
    text-decoration: none;
  }
  .navlist a:hover,
	.navlist a.current {
	  color: #f0f0f0;
    background-color: #fafafa;
    
  }
	p {
	  padding-top:20px
	}
	.boxCerca {
    padding:0px;
		margin:0px;
    float: right;
		
  }
	a.advanced {
	  font-size:65%;
	  color:#bebdbd;
		background-image:url(<%= asset_path 'bullet_point.png' %>);
    background-repeat:no-repeat;
		background-position:left center;
		padding-left:4%;
	}
}