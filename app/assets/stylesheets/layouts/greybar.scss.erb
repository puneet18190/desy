.gray-bar {
  padding:10px 22px 10px 22px; 
	background-color:#f5f5f5;
	color:#727377;
	float:left;
	margin-bottom:20px;
	font:  80% 'Nunito', sans-serif;
	width:98%;
	font: {
	  size:120%;
	}
	ul.navlist {
    margin: 10px 0 10px 0;
    padding: 0;
    white-space: nowrap;
		float:left;
  }
  .navlist li {
    display: inline;
    list-style-type: none;
    margin-right:10px;
  }
  .navlist a {
   padding: 5px 30px;
	}
  .navlist a:link, 
	.navlist a:visited {
	  color: #f0f0f0;
    background-color: #fafafa;
    text-decoration: none;
  }
  .navlist a:hover,
	.navlist a.current {
    color: #727377;
    background-color: #fff;
  }
	p {
	  padding-top:10px
	}
	.boxCerca {
    padding:0px;
		margin:0px;
    float: right;
  }
	.text {
	  border:none;
	  width:168px; 
		height:29px; 
		-moz-border-radius: 4px;
    -webkit-border-radius: 4px;
		margin-right:10px;
	}
	.styled-select {
	  width: 126px;
    height: 30px;
    background: url(<%= asset_path 'bg_select_greybar.png' %>) no-repeat left;
  }
}