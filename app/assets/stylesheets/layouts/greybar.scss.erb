.gray-bar {
  padding:0.4% 1.3% 0.4% 1.3%; 
	background-color:#f5f5f5;
	color:#727377;
	float:left;
	margin-bottom:20px;
	margin-left:1%;
	font:  80% 'Nunito', sans-serif;
	width:95.2%;
	font: {
	  size:120%;
	}
	ul.navlist {
    margin: 20px 0 10px 0;
    padding: 0;
    white-space: nowrap;
		float:left;
  }
  .navlist li {
    display: inline;
    list-style-type: none;
    margin-right:10px;
  }
  .navlist a {
   padding: 15px 30px;
	}
  .navlist a:link, 
	.navlist a:visited {
	  color: #f0f0f0;
    background-color: #fafafa;
    text-decoration: none;
  }
  .navlist a:hover,
	.navlist a.current {
	  color: #727377;
    background-color: #fff;
	  
    
  }
	p {
	  padding-top:20px
	}
	.boxCerca {
    padding:0px;
		margin:0px;
    float: right;
		
  }
	a.advanced {
	  font-size:65%;
	  color:#bebdbd;
		background-image:url(<%= asset_path 'bullet_point.png' %>);
    background-repeat:no-repeat;
		background-position:left center;
		padding-left:4%;
	}
	&.advancedSearch {
	  
	  .cols {
		  width:30%;
			float:left;
			
		}
		div:last-child {
		  float:right;
		}
		h1 {
		  font:  160% 'Nunito', sans-serif;
			color:#d1d1d1;
			padding:0;
		}
		p {
		  font-size:80%;
			padding-top:10px;
			margin:0;
			color:#c0bebe;
		}
		
	}
}
.advanced-search-content {
 .contentSearch {
   width: 92%; 
	 margin: 0 auto 0 auto;
  }
  table {
	  width:100%;
		padding:10px 0 15px 0;
	}
	p {
	  font-size:80%;
		padding-left:10px;
	}
  .sbHolder {
    background-color:#f8f8f8;
	}
	input[type="text"] {
    background-color:#f8f8f8;
  }
	input[type="radio"] {
    border:none;
		margin-bottom:10px;
  }
}
