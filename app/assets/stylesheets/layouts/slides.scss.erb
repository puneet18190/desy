  }
  
}

@mixin slide-title-common {
  
  font-size: $slide-title-font-size;
  width: $slide-title-inner-width;
  height: $slide-title-inner-height;
  padding: $slide-title-padding;
  line-height: $slide-title-line-height;
  font-family: "Nunito", Helvetica, sans-serif;
  border: $slide-title-border solid #EFEFEF;
  color: $orange;
  letter-spacing: -4px;
  background-color: white;
  
}

@mixin image-icon {
  
  background: url('/assets/icone_piene.svg') no-repeat scroll -2em center / 6em 1em transparent;
  
}

@mixin image-icon-big {
  
  @include image-icon;
  font-size: $big-icon-dimension;
  width: $big-icon-dimension;
  height: $big-icon-dimension;
  
}

@mixin image-icon-small {
  
  @include image-icon;
  font-size: $small-icon-dimension;
  width: $small-icon-dimension;
  height: $small-icon-dimension;
  
}

@mixin image-icon-tiny {
  
  @include image-icon;
  font-size: $tiny-icon-dimension;
  width: $tiny-icon-dimension;
  height: $tiny-icon-dimension;
  
}

@mixin video-icon {
  
  background: url('/assets/icone_piene.svg') no-repeat scroll -1em center / 6em 1em transparent;
  
}

@mixin video-icon-big {
  
  @include video-icon;
  font-size: $big-icon-dimension;
  width: $big-icon-dimension;
  height: $big-icon-dimension;
  
}

@mixin video-icon-small {
  
  @include video-icon;
  font-size: $small-icon-dimension;
  width: $small-icon-dimension;
  height: $small-icon-dimension;
  
}

@mixin audio-icon {
  
  background: url('/assets/icone_piene.svg') no-repeat scroll 0em center / 6em 1em transparent;
  cursor: pointer;
  position: absolute;
  
}

@mixin audio-icon-big {
  
  @include audio-icon;
  font-size: $audio-big-icon-dimension;
  width: $audio-big-icon-dimension;
