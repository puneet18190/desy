  }
  
  table, img, hr, .mceItemAnchor {
    cursor: default;
  }
  
  table td, table th {
    cursor: text;
  }
  
  ins {
    border-bottom: 1px solid green;
    text-decoration: none;
    color: green;
  }
  
  del {
