            width: $slide-video-full-width;
            height: $slide-video-full-height;
            overflow: hidden;
            position: relative;
            
            .alignable {
              
              position: relative;
              width: $slide-video-full-width;
              
            }
            
            .add {
              
              top: $big-icon-top-position-in-full-height-video;
              opacity: 0.8;
              
            }
            
          }
          
          .empty-mask {
            
            @include general-empty-mask;
            width: $slide-video-full-width;
            height: $slide-video-full-height;
            position: relative;
            
            p {
              
              margin-top: $icon-label-margin-top-in-full-height-video;
              
            }
            
          }
          
        }
        
      }
      
      .add {
        
        @include video-icon-big;
        cursor: pointer;
        position: absolute;
        top: $big-icon-top-position-in-full-height-video-empty;
        left: $big-icon-left-position-in-full-width-video;
        
        &:hover {
          
          @include plus-icon;
          
        }
        
      }
      
    }
    
  }
  
}
