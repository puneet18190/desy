html.prelogin-layout {
  height: 100%;
  
  body {
    font: 80% Arial, Helvetica, sans-serif;
	  background: #0f0f0f;
	  margin: 0;
	  color: #fff;
	  text-align: center;
		width: 100%;
		height: 100%;
  }
	.top {
    margin-bottom: -190px;
    background: transparent;
    width: 1%;
    height: 50%;
    float: left;
  }
	.container {
    margin: 0 auto;
    width: 1024px;
    background-color: #030303;
		
    clear: left;
		position: relative;
		text-align:left;
		padding:0;
		
		.header {
	    background-image:url(<%= asset_path 'bg_prelogin.jpg' %>);
      background-repeat:no-repeat;
		  background-position: top center;
		  padding: 22px 18px 352px 18px;
			
		  .headerMenu {
		    padding:5px 5px 5px 20px;
			  background-color:#2f2e2e;
			  float:left;
			  width:960px;
				
				ul {
		    margin:0;
			  float:left;
			  padding-top:2px;
				li {
		      display: inline;
          list-style-type: none;
          padding-right: 20px;
		    }
		   }
		  }
			/*fine header menu*/
			.login {
		    float:right;
			  color:#5f5e5e;
			  font-size:70%;
			  width:200px;
			  p {
			    float:left; 
				  padding-top:5px;
			  }
		    .button a {
			    float:right;
				  padding:5px 15px 5px 15px;
				  background-color:#000;
				  text-align:center;
				  font-weight:bold;
			  }
		  }
			/*fine login*/
		
	 }
	 /*fine header */
	 .containerText {
		  padding:30px;
			background-color: #231f20;
			float:left;
			border:1px solid #fff;
			width:100%;
			h1 {
			 font: 150% 'Nunito', sans-serif;
			 color:#505051;
			 padding-top:14px;
			 padding-bottom:0px;
			}
			p {
			  padding-top:10px;
			}
			a {
			  color:#f29400;
				font-size:90%;
			}
		}
  }
}