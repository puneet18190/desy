html.prelogin-layout {
  
  body {
    font: 80% Arial, Helvetica, sans-serif;
    background: #248fba;
    margin: 0;
    color: #fff;
    text-align: center;
    width: 100%;
    height: 100%;
  }
  hr {
    color: #248fba;
    background-color: #248fba;
    height: 1px;
    width:100%;
    border:0;
  }
  a {
    color:#fff;
    cursor:pointer;
    
  }
  h1 {
    font-size: 280%;
    color:#fff;
    padding-top:14px;
    padding-bottom:0px;
    line-height:100%;
  }
  h2 {
    color:#fff;
    font-size: 130%;
    padding: 30px 0px 0px 90px;
    line-height:100%;
  }
  h1 + h2 {
    color:#ffd400;
  }
  h3 {
    font-size: 110%;
    color:#fff;
    line-height:100%;
  }
  .container {
    margin: 0 auto;
    width: 944px;
    display:inline-block;
    @media (max-width: 1024px) {
      font-size: 50%;
    }
    
    text-align:left;
    padding:20px;
    
    /* HEADER*/
    .header {
      padding:0px;
      background-image: none;
    }
    /*FINE HEADER*/
    .containerText {
      p {
        padding-bottom:10px;
      }
      h2 {
        padding: 0px;
      }
    }
   .insert-content {
      padding: 0px 90px 0px 90px;
      margin-top:20px;
      margin-bottom:20px;
      .inputElement {
        float:left;
        label {
          margin-left:10px;
        }
        p {
          color:#2f2e2e;
        }
      }
      
    }
    .contentForm {
      padding: 30px 90px 0px 90px;
      width:auto;
      .checkbox-content {
        width:270px;

        .checkboxElement {
          margin-bottom:0px;
          padding-left:0px;
          table {
            width:auto;
            float:none;
            td:last-child {
              padding-left:10px;
            }
          }
          .field_with_errors {
            label {
              border: 2px solid #fff;
            }
          }
          .regular-checkbox + label, label {
            box-shadow: 0 1px 1px rgba(0,0,0,0.05), inset 0px -15px 10px -12px rgba(0,0,0,0.05);
            padding: 3px 9px;
            border-radius: 3px;
          }

          .regular-checkbox + label:active, .regular-checkbox:checked + label:active {
            box-shadow: 0 1px 1px rgba(0,0,0,0.05), inset 0px 1px 3px rgba(0,0,0,0.1);
          }

          .regular-checkbox:checked + label {
            background-color: #e9ecee;
            box-shadow: 0 1px 1px rgba(0,0,0,0.05), inset 0px -15px 10px -12px rgba(0,0,0,0.05), inset 15px 10px -12px rgba(255,255,255,0.1);
          }

          .regular-checkbox:checked + label:after {
            font-size: 16px;
            position: absolute;
            top: -3px;
            left: 2px;
            color: #248fba;
          }
        }
      }
    }
    
    .checkboxElement {
      color:#fff;
      width: 200px;
      font-size: 13px;
      span {
        padding: 7px 0px 0px 10px;
        float:left;
      }
       .big-checkbox:checked + label, label{
        background-color: #248fba;
        box-shadow: 0 1px 1px rgba(50,50,50,0.5) inset;
        border-radius: 5px;
        padding:15px;
        border-top: 0px solid #d2d2d2;
        float:left;
        &:last-child {
          margin-right: 0;
        }
      }
      .big-checkbox:checked + label:after {
        color: #fff;
        left: 4px;
        top: -2px;
        font-size:22px;
      }
    }
    input[type="text"], input[type="password"], input[type="email"] {
      background-color: #248fba;
      color:#fff;
      font-size:120%;
      margin-top:5px;
      box-shadow: -1px -1px 1px 0px rgba(30,121,158,0.8), inset -1px -1px 1px rgba(128,190,215,0.8);
      width:227px;
      margin-bottom:10px;
      margin-right:12px;
      &.school {
        width:485px;
      }
    }
    .sbHolder {
      width: 227px;
      height: 29px;
      margin-right:16px;
      margin-top: 5px;
      background-color:#248fba;
      .sbSelector {
        width: 227px;
        &:link {
          color:#fff;
        };
      }
      .sbToggle {
        background: url(/assets/select-icons-blue.png) 0 -116px no-repeat;
      }
      .sbToggleOpen {
        background: url(/assets/select-icons-blue.png) 0 -16px no-repeat;
      }
      .sbOptions {
        width: 227px;
        li a {
          color: #adadad;
        }
        .sbFocus, li a:hover {
          background-color:#248fba;
          color:#fff;
        };
        .sbFocus li a {
          color:#fff;
        }
      }
    }
  .listaErrori { 
    margin-left: 0;
    padding-top: 20px;
    list-style: none;
    li {
      padding: 8px  20px;
      background-image: url(/assets/puntoesclamativo.png);
      background-repeat: no-repeat;
      background-position: 0 .5em;
    }
  }  
  .footer {
    padding:10px 150px 10px 40px;
    background-color: transparent;
    color: #fff;
    font-size: 75%;
    text-transform: lowercase;
    text-align:right;
  }
}

  &.registration-action, &.users-controller.create-action {
    .container {
      background-color: #2eaadc;
      .header .headerMenu {
        background-color:#000;
        a {
          color: white;
        }
      }
      .containerText {
        background: url(<%= asset_path 'bg_register.png' %>) top right no-repeat;
        padding:200px 90px 20px 90px;
        font-family: 'Nunito', sans-serif;
      }
    }

    // stile dei campi del form di registrazione che hanno errori
    &.users-controller.create-action {
      .field_with_errors {
        input, select, textarea {
          border: 2px solid #fff;
        }
      }
    }
    input[type="submit"] {
      background-color: #2eaadc;
      font-size:20px;
      font-family: 'Nunito', sans-serif;
      text-transform:none;
      padding: 40px 0 0 0;
      cursor:pointer;
    }
  }
  &.what_is_desy-action .container {
    background-color: #fdb525;
    
    .header .headerMenu {
      background-color:#000;
      a {
        color: white;
      }
    }  
    .containerText {
      background-image:none;
      padding: 100px 20px 20px 20px;
      width:60%;
      color:#2f2e2e;
      float:left;
      h3 {
        padding-bottom:25px;
      }
    }
    .colDx {
      float:right;
      margin-top:110px;
      width:30%;
      background-color:#fff;
    }
  }
  &.users-controller.request_reset_password-action {
    body {
      background: #373737;
      color: #fff; 
      text-align:center;
    }
    .container {
      background-color: transparent;
      display:table;
      padding:20px;
      height:90%;
      text-align:center;
      width:auto;
      .dialog {
        display:table-cell; 
        vertical-align:middle;
        text-align: left;
        padding: 20px;
        margin:0;
        h1 { 
          font-size: 260%; 
          color: #25aae1;  
          padding:0; 
          margin:0 
        }
        p { 
          padding:0px; 
          margin-bottom:30px 
        }
        input[type="submit"] {
          font-size: 120%;
          cursor:pointer;
          color: #fff;
          background-color: transparent;
        }
        input[type="email"] {
          border: 1px solid #424141;
          box-shadow:none;
          margin-left:10px;
          height: 29px;
          background-color: #2e2c2d;
          border-radius: 10px;
          color: #fff;
          font-size: 120%;
        }  
          
      }
    }
    
  }

}

