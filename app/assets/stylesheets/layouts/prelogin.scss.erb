html.prelogin-layout {
  height: 100%;
  @mixin hrefColorSize {
	  color:#f29400;
		font-size:90%;
  }
  body {
    font: 80% Arial, Helvetica, sans-serif;
	  background: #0f0f0f;
	  margin: 0;
	  color: #fff;
	  text-align: center;
		width: 100%;
		height: 100%;
  }
	.top {
    margin-bottom: -190px;
    background: transparent;
    width: 1px;
    height: 30%;
    float: left;
  }
	.container {
    margin: 0 auto;
    width: 1024px;
		@media (max-width: 1024px) {
      font-size: 50%;
	  }
    background-color: #030303;
		clear: left;
		position: relative;
		text-align:left;
		padding:0;
		
		.header {
	    background-image:url(<%= asset_path 'bg_prelogin.jpg' %>);
      background-repeat:no-repeat;
		  background-position: top center;
		  padding: 22px 18px 352px 18px;
			
		  .headerMenu {
		    padding:5px 5px 5px 20px;
			  background-color:#2f2e2e;
			  float:left;
			  width:960px;
				
				ul {
		    margin:0;
			  float:left;
			  padding-top:2px;
				li {
		      display: inline;
          list-style-type: none;
          padding-right: 20px;
		    }
		   }
			 a {
			   color:#fff;
			 }
		  }
			/*fine header menu*/
			.login {
		    float:right;
			  color:#5f5e5e;
			  font-size:70%;
			  width:200px;
			  p {
			    float:left; 
				  padding-top:5px;
			  }
		    .button a {
			    float:right;
				  padding:5px 15px 5px 15px;
				  background-color:#000;
				  text-align:center;
				  font-weight:bold;
					font-size:120%;
					&:hover {
					  background-color:#282828;
					}
				}
				.tooltip {
				  border:none;
					top: 70px;
					right:20px;
					width:196px;
					background-color:#2f2e2e;
					padding:15px 20px 15px 20px;
					a {
					  @include hrefColorSize;
				    font-size:120%;
					}
				 .text {
	          border:1px solid #424141;
            width:184px; 
            height:29px;
						background-color:#2e2c2d;
            -moz-border-radius: 6px;
            -webkit-border-radius: 4px;
            margin-right:0px;
						color:#6f6d6e;
						padding:0px;
						margin-bottom:10px;
	          padding-left:10px
				  }
				 .callout {
            top: -8px;
	          z-index:20;
	          position:absolute;
	          border:0;
	          right:30px;
         }	
				}
		  }
			/*fine login*/
		
	 }
	 /*fine header */
	 .containerText {
		  padding:30px;
			background-color: #231f20;
			float:left;
			a {
			  @include hrefColorSize;
			}
			h1 {
			 font: 150% 'Nunito', sans-serif;
			 color:#505051;
			 padding-top:14px;
			 padding-bottom:0px;
			 line-height:100%;
			}
			p {
			  padding-top:10px;
			}
			
		}
		/*fine container text*/
		.footer {
		  padding:10px 150px 10px 40px;
			background: transparent;
      color: #515151;
      font-size: 75%;
      text-transform: lowercase;
			text-align:right;
		}
  }
}
