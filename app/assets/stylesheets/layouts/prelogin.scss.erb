
html.prelogin-layout {
  
  body {
    font: 80% Arial, Helvetica, sans-serif;
	  background: #0f0f0f;
	  margin: 0;
	  color: #fff;
	  text-align: center;
	}
	.container {
    margin: 0 auto;
    width: 984px;
		@media (max-width: 1024px) {
      font-size: 50%;
	  }
    
		text-align:left;
		padding:20px;
		
		/* HEADER*/
		.header {
	    padding:0px;
			background-image: none;
		}
	  /*FINE HEADER*/
		.containerText {
		  border:1px solid red;
			background: url(<%= asset_path 'bg_register.png' %>) top left no-repeat;
			padding:20px;
		}
	 
		
		.footer {
		  padding:10px 150px 10px 40px;
			background-color: #373737;
      color: #515151;
      font-size: 75%;
      text-transform: lowercase;
			text-align:right;
		}
  }
}
.registration-action .container {
  background-color: #2eaadc;
	
}