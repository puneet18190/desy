html.virtual_classroom-controller {
  height: 100%;
  @mixin hrefColorSize {
	  color:#fff;
		font-size:90%;
  }
  body {
    font: 80% Arial, Helvetica, sans-serif;
	  background: #373737;
	  margin: 0;
	  padding: 0;
	  color: #FFF;
	  direction:ltr;
	  @media (max-width: 1024px) {
      font-size: 50%;
	  }
  }
	.content {
	  color:#fff;
	}
	.container {
	  width: 100%;
	  background: #373737;
	  margin: 0 auto;  
  }
	.bluBar {
    margin: 0 auto 24px auto;
    padding-left:2%;
		float: left;
    width: 98%;
		padding-top:5px;
		padding-bottom:10px;
    font: 120% 'Nunito', sans-serif;
		background-color:#2eaadc;
		h1 {
	    color:#fff;
		  padding:0;
		  margin-top:5px;
		  font: 200% 'Nunito', sans-serif;
		  float:left;
		  width:39%;
		}
		ul.navlist {
      margin: 1em 3.8em 0.5em 3em;
      padding: 0;
      white-space: nowrap;
		  float:left;
			
    }
    .navlist li {
      display: inline;
      list-style-type: none;
      margin-right:10px;
			&:last-child {
			  margin-right:0px;
			}
    }
    .navlist a {
       padding: 5px 25px;
	     background-color: #42b9e9;
	     color:#fff;
	  }
	  .navlist a:hover	{
	     background-color: #fff;
	  }
	  .navlist a.current {
       padding: 15px 30px;
	     background-color: #fff;
	     color:#727377;
	  }
	}
	.boxViewSingleLesson {
    float:left;
	  width:270px;
	  margin-right: 20px;
	  margin-bottom:20px;
		-moz-box-shadow: none;
    -webkit-box-shadow: none;
    box-shadow: none;
    background-color: #434343;
    .img_expanded {
		  padding-bottom:10px;	  
		}
	  
	  .contentInterno {
	    height:214px;
			p {
			  padding-top:10px;
			}
		  a {
			  color:#fff;
				padding-left:10px;
				font-size:80%;
			}			
	  }
		
  }
	.playList {
	  padding:10px; 
		background-color:#2b2929;
		
		h1 {
		  color:#2eaadc;
			font: 160% 'Nunito', sans-serif;
		}
		.lista {
      padding-left: 0;
      margin-left: 0;
      border-bottom: 1px solid gray;
      width: 200px;
			li {
        list-style: none;
        margin: 0;
        padding: 0.25em;
        border-top: 1px solid gray;
				a { text-decoration: none; }
      }
    }
  }
}
