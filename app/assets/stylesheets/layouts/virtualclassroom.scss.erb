html.virtual_classroom-controller {
  height: 100%;
  @mixin hrefColorSize {
	  color:#fff;
		font-size:90%;
  }
  body {
    font: 80% Arial, Helvetica, sans-serif;
	  background: #373737;
	  margin: 0;
	  padding: 0;
	  color: #FFF;
	  direction:ltr;
	  @media (max-width: 1024px) {
      font-size: 50%;
	  }
  }
	.content {
	  color:#fff;
	}
	.container {
	  width: 100%;
	  background: #373737;
	  margin: 0 auto;  
  }
	.bluBar {
    margin: 0 auto 24px auto;
    padding-left:2%;
		float: left;
    width: 98%;
		padding-top:5px;
		padding-bottom:10px;
    font: 120% 'Nunito', sans-serif;
		background-color:#2eaadc;
		h1 {
	    color:#fff;
		  padding:0;
		  margin-top:5px;
		  font: 200% 'Nunito', sans-serif;
		  float:left;
		  width:39%;
		}
		ul.navlist {
      margin: 1em 3.8em 0.5em 3em;
      padding: 0;
      white-space: nowrap;
		  float:left;
			
    }
    .navlist li {
      display: inline;
      list-style-type: none;
      margin-right:10px;
			&:last-child {
			  margin-right:0px;
			}
    }
    .navlist a {
       padding: 5px 25px;
	     background-color: #42b9e9;
	     color:#fff;
	  }
	  .navlist a:hover	{
	     background-color: #59c9f6;
	  }
	  .navlist a.current {
       
	     background-color: #59c9f6;
	     
	  }
	}
	.boxViewSingleLesson {
    float:left;
	  width:270px;
	  margin-right: 20px;
	  margin-bottom:20px;
		-moz-box-shadow: none;
    -webkit-box-shadow: none;
    box-shadow: none;
    background-color: #434343;
    
		.img_expanded {
		  padding-bottom:10px;
			&:hover {
			  cursor:pointer;
			  background-color:#000;
				opacity: 0.20;
			}	
			&.current {
			  background-color:#000;
				opacity: 0.20;
			}	  
		}
	  
	  .contentInterno {
	    height:214px;
			p {
			  padding-top:10px;
			}
		  a {
			  color:#fff;
				padding-left:10px;
				font-size:80%;
			}			
	  }
		
  }
	.playList {
	  padding:10px; 
		background-color:#2b2929;
		width:316px;
		h1 {
		  color:#2eaadc;
			font: 160% 'Nunito', sans-serif;
		}
		h2 {
      font-size:80%;
      color:#373737;
    }
		.lista {
      padding-bottom: 15px;
      padding-top: 15px;
      border-bottom: 1px solid #373636;
			float:left;
			width:290px;
					
      .contatore {
		   float:left;
			 padding:4px 8px;
			 margin-right:15px;
			 background-color:#434343;
			}
			.description {
			  width:248px;
				float:left;
				
				.title {
				  background-color:#f29400;
				  padding:10px;
				}
				
				.lessonType {
			    background-color:#fff;
				  padding:5px 10px;
			  }
			  &:hover {
				  cursor:pointer;
					background-color:#000;
				  opacity: 0.20;
			  }
				&.current {
			    background-color:#000;
				  opacity: 0.20;
			  }	 
				
			}
			
			h1 {
			  font: 120% 'Nunito', sans-serif;
        color:#fff;
		    line-height:1em;
				height: 25px;
			}
    }
		.play {
		  padding:10px;
			background-color:#2eaadc;
			text-align:center;
			color:#fff;
			font: 180% 'Nunito', sans-serif;
			margin-top:15px;
			
			&:hover {
			  cursor:pointer;
				background-color:#59c9f6;
			}
		}
		a {
		  color:#fff;
		}
  }
	.empty {
	  color:#727377;
	}
	.createButton a {
    background: url(<%= asset_path 'add-element-off.svg' %>) bottom right no-repeat;
    background-size: 6em;
    padding: 4em;
    width: 102px;
  }
	.emptyPlayList {
	  color:#727377;
		padding-bottom:80px;
		background: url(<%= asset_path 'bg_playlist_empty.png' %>) top right no-repeat;
		p {
		  padding:120px 0px 0px 30px;
			width:150px;
			text-align:right;
		}
	}
}
