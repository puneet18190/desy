@mixin misc {
  position:absolute;
  margin:0px;
  z-index:10;
  border-radius:3px;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
}
@mixin call {
  z-index:20;
  position:absolute;
  border:0;
  right:-7px;
}
.tooltip {
  display:none; 
  @include misc;
  padding:2.5% 10% 2.5% 10%;
  right:110%;
  top:-9px;
  width:210%;
  background-color:#fff;
  border:1px solid #e8e8e8;
  .list ul {
    margin: 0;
    padding: 0;
    list-style-type: none;
    li { 
      margin: 5px 0 5px 0;
      padding:0%;
      position:relative;
      
      .cancelTooltip {
        position:absolute;
        right:0.1em;
        top:0.1em;
        
      }
    }
    a {
      display: block;
      background-color: #c1e6f6;
      border-radius:3px;
      -moz-border-radius: 3px;
      -webkit-border-radius: 3px;
      margin-right: 0;
      padding:10px;
			height:50px;
    }
    a.expanded {
      display: block;
      background-image:none;
      background-image: url(<%= asset_path 'arrow_tooltip_notice.png' %>);
      background-position:center bottom;
      border-radius:3px;
      -moz-border-radius: 3px;
      -webkit-border-radius: 3px;
      margin-right: 0;
      padding:10px;
			height:50px;
    }
    a:link, .navlist a:visited {
      text-decoration: none;
    }
    .current {background-image:none; background-color:#f5f5f5}
  }
}
.tooltipArancione {
  display: none;
  @include misc;
  padding:7px;
  right:110%;
  top:0px;
  color:#fff;
  background-color:#f29400;
}
/*TOOLTIP HELP*/
$canvasSize: 450%;


.tooltipHelp {
  display:none; 
  @include misc;
  padding:2.5% 10% 2.5% 10%;
  font-size:85%;
  right:70%;
  top:-9px;
  float:right;
  background-color:#fff;
  border:1px solid #e8e8e8;
  width:520%;
  strong {
    color:#f29400;
  }
  p {
    display:inline-block; 
    width:30%;
    padding:1%;
		vertical-align: top;
  }
}

/*TOOLTIP REPORT ABUSE*/
$canvasSize: 450%;

.tooltipForm {
  display:none; 
  @include misc;
  padding:10px;
  
  left:3px;
  bottom:30px;
  float:right;
  background-color:#fbfbfb;
	color:#c0c0c0;
  border:1px solid #c6c5c3;
  width:350px;
	/*nelfile content.css trovi alcune classi per quest'oggetto*/
  .text {
	  margin:10px 0 10px 0;
	  width: 336px;
		overflow:hidden;
    /*height: 67px;*/
		padding-top:0px;
		padding-bottom:50px;
		border:1px solid #f0e5e5;
	}
}


.callout {
  top: 15px;
  @include call;
	
}
.calloutTooltipArancione {
  top: 4px;
  @include call;
}
.calloutForm {
  bottom: -8px;
  z-index:20;
  position:absolute;
  border:0;
  left:8px;
}
.scroll-pane {
  width: 100%;
  height: 304px;
  overflow: auto;
}
