@mixin misc {
  position:absolute;
	width:auto;
	margin:0px;
	z-index:10;
	border-radius:3px;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
}
@mixin call {
  z-index:20;
	position:absolute;
	border:0;
	right:-7px;
}
.tooltip-arancione {
  display:none; 
	@include misc;
  padding:7px;
  color:#fff;
  right:137px;
  top:0px;
  background-color:#f29400;
  -moz-box-shadow: 3px 3px 3px #e8e8e8;
  -webkit-box-shadow: 3px 3px 3px #e8e8e8;
  box-shadow: 3px 3px 3px #e8e8e8;
}
.tooltip {
  display:block; 
	@include misc;
  padding:20px;
  right:137px;
  top:-9px;
  background-color:#fff;
	border:1px solid #e8e8e8;
}
.callout-tooltip-arancione {
  top: 6px;
	@include call;
}
.callout {
  top: 15px;
	@include call;
}