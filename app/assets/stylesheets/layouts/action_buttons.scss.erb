@mixin button-test {
  $button-size: 3.5em;
  & {
    display: inline-block;
    width: $button-size;
    height: $button-size;
    background-image: url(<%= asset_path 'action_buttons.svg' %>);
    background-repeat: no-repeat;
    background-size: ($button-size*2) ($button-size*10);
    padding:0;
		margin-right:8px;
  }
	
  &:hover {
    cursor: pointer;
  }
  &.preview {
    background-position: 0 (-$button-size*7);
  }
  &.preview:hover {
    background-position: (-$button-size) (-$button-size*7);
  }
  &.edit {
    background-position: 0 (-$button-size*6);
  }
  &.edit:hover {
    background-position: (-$button-size) (-$button-size*6);
  }
  &.publish {
    background-position: 0 (-$button-size*4);
  }
  &.publish:hover {
    background-position: (-$button-size) (-$button-size*4);
  }
  &.unpublish {
    background-position: (-$button-size) (-$button-size*4);
  }
  &.add {
    background-position: 0 (-$button-size*9);
  }
  &.add:hover {
    background-position: (-$button-size) (-$button-size*9);
  }
  &.remove {
    background-position: 0 (-$button-size*8);
  }
  &.remove:hover {
    background-position: (-$button-size) (-$button-size*8);
  }
  &.destroy {
    background-position: 0 (-$button-size);
  }
  &.destroy:hover {
    background-position: (-$button-size) (-$button-size);
  }
  &.dislike {
    background-position: (-$button-size) (-$button-size*3);
  }
  &.like {
    background-position: 0 (-$button-size*3);
  }
  &.like:hover {
    background-position: (-$button-size) (-$button-size*3);
  }
  &.report {
    background-position: 0 0;
		font-size:50%;
		
  }
  &.report:hover {
    background-position: (-$button-size) 0;
  }
  &.report_light {
    background-position: (-$button-size) 0;
		font-size:50%;
  }
  &.remove_virtual_classroom {
    background-position: (-$button-size) (-$button-size*5);
  }
  
  &.add_virtual_classroom {
    background-position: 0 (-$button-size*5);
  }
  &.add_virtual_classroom:hover {
    background-position: (-$button-size) (-$button-size*5);
  }
  &.copy {
    background-position: 0 (-$button-size*2);
  }
  &.copy:hover {
    background-position: (-$button-size) (-$button-size*2);
  }
  &.change_info {
    background-position: 0 (-$button-size*2);
  }
  &.change_info:hover {
    background-position: (-$button-size) (-$button-size*2);
  }
}

.menuController {
  background-color:#fff;
  padding:0.5%; 
  border-top:1px solid #f2f1f2;
  text-align:right;
  color:#cbcbcb;
  font-size:75%;
  display: block;
  
  a {
    @include button-test;
  }
}
