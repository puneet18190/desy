@mixin ulGallery {
  
  .pseudo-ul {
    
    padding: 0;
    margin: 0;
    
    .scroll-pane {
      
      margin-left: 35px;
      width: 840px;
      position: absolute;
      
      .pseudo-li {
        
        float: left;
        
      }
      
    }
    
  }
  
}

@mixin boxShadow {
  
  height: 590px;
  width: 900px;
  background-color: #252323;
  
}

@mixin buttonApri {
  
  $button-size: 3.5em;
  
  & {
    
    width: $button-size;
    height: $button-size;
    background-image: url(<%= asset_path 'icone-player.svg' %>);
    background-repeat: no-repeat;
    background-size: ($button-size*5) ($button-size*4);
    padding: 0;
    
  }
  
  &:hover {
    
    cursor: pointer;
    
  }
  
  &.creaNuovoButton {
    
    background-position: (-$button-size*4) (-$button-size*2);
    opacity: 0.3;
    
  }
  
  &.creaNuovoButton:hover {
    
    background-position: (-$button-size*4) 0;
    opacity: 1;
    
  }
  
}

@mixin stileElementiSceltaColori {
  padding: 5px;
  outline: 1px solid #e6e6e6;
  cursor: pointer;
  float: left;
  margin-left: 8px;
  margin-top: 2px;
  &:hover, &.current {
    outline: 2px solid #fff;
  }
}

.gallery-header {
  
  position: absolute;
  top: 40px;
  left: 40px;
  padding: 0px;
  display: inline-block;
  
  h3 {
    
    color: #666;
    padding-top: 18px;
    padding-right: 15px;
    
  }
  
}

.image_gallery {
  
  @include boxShadow;
  @include ulGallery;
  display: block;
  
  .jspVerticalBar {
    
    top: 0;
    
  }
  
  .gallery-header {
    
    h3 {
      
      color: #666;
      padding-top: 18px;
      padding-right: 15px;
      
    }
    
    .photoIcon {
      
      font-size: 0.7em;
      
    }
    
  }
  
  .scroll-pane {
    
    top: 140px;
    height: 343px;
    
    .pseudo-li {
      
      width: 111px;
      height: 111px;
      margin: 4px 2px 0 2px;
      
    }
    
  }
  
  .imageInGalleryPopUp {
    
    display: none;
    background-color: #48484a;
    color: #fff;
    
    img {
      
      max-height: 420px;
      max-width: 420px;
      
    }
    
    .caption {
      
      margin: 0;
      padding: 0;
      
    }
    
    a.aggiungiImgButton {
      
      outline: none;
      
    }
    
  }
  
  img:hover {
    
    outline: 1px solid white;
    
  }
  
}

.audio_gallery {
  
  background-color: #252323;
  @include boxShadow;
  @include ulGallery;
  display: block;
  
  .jspVerticalBar {
    
    top: 0;
    
  }
  
  .gallery-header {
    
    h3 {
      
