@mixin headerGallery {
  padding: 20px 0px 20px 40px;
  display:inline-block;
  h3{
    color: #666;
    padding-top:18px;
    padding-right:15px;
  }
}
@mixin ulGallery {
  ul {
    padding: 0;
    margin:0;
    list-style:none;
    .scroll-pane{
      margin:10px 0 0 20px;
      padding-left:20px;
      width: 840px;
      /*height: 470px;*/
      li{
        float:left; 
        width: 115px;
        margin: 5px 5px 5px 0;
      }
    }
  }
}
@mixin boxShadow {
  -webkit-box-shadow: 0px 6px 10px #161515;
  box-shadow: 0px 6px 10px #161515;
  height: 590px;
  width: 900px;
  background-color:#252323;
}


@mixin buttonApri {
  $button-size: 3.5em;
  & {
    width: $button-size;
    height: $button-size;
    background-image: url(<%= asset_path 'icone-player.svg' %>);
    background-repeat: no-repeat;
    background-size: ($button-size*5) ($button-size*4);
    padding:0;
  }
  
  &:hover {
    cursor: pointer;
  }
  
  &.creaNuovoButton {
    background-position: (-$button-size*4) (-$button-size*2);
    opacity:0.3;
  }
  &.creaNuovoButton:hover {
    background-position: (-$button-size*4) 0;
    opacity:1;
  }
}

.image_gallery {
  background-color: #252323;
  @include boxShadow;
  
  display:block;
  .scroll-pane {
  }
  .gallery-header{
    @include headerGallery;
    .photoIcon {
      font-size:0.7em;
    }
  }
  @include ulGallery;
  
   
  .imageInGalleryPopUp {
    display:none;
    background-color:#48484a;
    color: #fff;
    
    img{
      max-height: 420px;
      max-width: 420px;

    }
    .caption{
     margin:0;
     padding:0;
    }
    a.aggiungiImgButton{
      outline:none;
    }
  }
  img:hover {
    outline:1px solid white;
  };
}


.audio_gallery {
  background-color: #252323;
  @include boxShadow;
  
  display:block;
  .gallery-header{
    @include headerGallery; 
    .audioIcon {
      font-size:0.7em;
    } 
  }
  
  .audioTrackCompact {
    width:820px;
    
    .audioTrackContent {
      background-color:#4a4a4a;
      padding:5px 10px;
      height:34px;
      margin-top:8px;
      
      &:hover {
        cursor:pointer;
        background-color:#403f3f;
      }
      
      .infoTrack {
        float:left; 
        padding:5px 10px;
        border-left:1px solid #2d2d2d;
        height:26px;
        a {
          color:#fff;
        }
      }
      
    }
    .audioTrackExpanded {
      background-color:#3b3a3b;
      text-align:left;
      padding:10px 20px;
      position:relative;
      
    }
  }
  .titleTrack {
    text-align:left;
    padding:8px 8px;
    float:left;
  }
  @include ulGallery;
  

  &.audio-kind {
    ul{
      li{
        width: 250px;
        height: 140px;
        margin: 0 20px 20px 0;
      }
    }
  }
  
  .audioInGalleryPopUp {
    display:none;
    background-color:#fff;
    color: #666;
    max-height: 420px;
    max-width: 420px;
    img{
      max-height: 420px;
      max-width: 420px;
    }
    .caption{
     margin:0;
     padding:0;
    }
    a.aggiungiImgButton{
      outline:none;
    }
  }

}


