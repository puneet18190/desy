        float: left;
        padding: 5px 10px;
        border-left: 1px solid #2d2d2d;
        height: 26px;
        
        a {
          
          color: #fff;
          
        }
        
      }
      
    }
    
  }
  
  .titleTrack {
    
    text-align: left;
    padding: 8px 8px;
    float: left;
    
  }
  
