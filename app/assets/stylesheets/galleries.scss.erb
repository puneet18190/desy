  .audioInGalleryPopUp {
    
    display: none;
    background-color: #fff;
    color: #666;
    max-height: 420px;
    max-width: 420px;
    
    img {
      
      max-height: 420px;
      max-width: 420px;
      
    }
    
    .caption {
      
      margin: 0;
      padding: 0;
      
    }
    
    a.aggiungiImgButton {
      
      outline: none;
      
    }
    
  }
  
  .addButtonContent {
    
    margin-top: 5px;
    
  }
  
}

