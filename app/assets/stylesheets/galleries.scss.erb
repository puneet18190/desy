@mixin headerGallery {
  display:block;
  padding: 20px;
  width: 860px;
  h3{
    color: #666;
    padding:5px 10px;
	}
}
@mixin ulGallery {
  ul {
    padding: 0;
    margin:0;
    list-style:none;
    .scroll-pane{
      margin:20px 0 0 20px;
      padding:0;
      width: 860px;
      height: 470px;
      li{
        float:left; 
        width: 115px;
        margin: 0 5px 5px 0;
      }
    }
  }
}

@mixin galleryFooter {
.gallery-footer{
    display:inline-block;
    padding: 10px 15px;
		float:right;
    width: 830px;
    color: #fff;
	}
}
@mixin buttonApri {
  $button-size: 3.5em;
  & {
    width: $button-size;
    height: $button-size;
    background-image: url(<%= asset_path 'icone-player.svg' %>);
    background-repeat: no-repeat;
    background-size: ($button-size*5) ($button-size*4);
    padding:0;
  }
	
  &:hover {
    cursor: pointer;
  }
  
  &.creaNuovoButton {
    background-position: (-$button-size*4) (-$button-size*2);
		opacity:0.3;
  }
  &.creaNuovoButton:hover {
    background-position: (-$button-size*4) 0;
		opacity:1;
  }
}

.image_gallery {
  background-color: black;
  height: 590px;
  width: 900px;
  display:block;
  .gallery-header{
    @include headerGallery;
  }
  @include ulGallery;
  @include galleryFooter;
  
  
  
  .imageInGalleryPopUp {
    display:none;
    background-color:#fff;
    color: #666;
    max-height: 420px;
    max-width: 420px;
    img{
      max-height: 420px;
      max-width: 420px;
    }
    .caption{
     margin:0;
     padding:0;
    }
    a.aggiungiImgButton{
      outline:none;
    }
  }
}


.audio_gallery {
  outline:1px solid red; 
  background-color: black;
  height: 590px;
  width: 900px;
  display:block;
  .gallery-header{
    @include headerGallery;  
	}
  .audioTrackCompact {
	  width:840px;
		
		.audioTrackContent {
	    background-color:#4a4a4a;
		  padding:5px 10px;
			height:34px;
			margin-top:10px;
			&:hover {
			  cursor:pointer;
				background-color:#403f3f;
			}
			
			.infoTrack {
			  float:left; 
				padding:5px 10px;
				border-left:1px solid #2d2d2d;
				height:26px;
				a {
				  color:#fff;
				}
			}
			.addButtonContent {
			  float:left;
			  padding-left:10px;
			  @include buttonApri;
			} 
	  }
	  .audioTrackExpanded {
	    background-color:#3b3a3b;
		  text-align:left;
		  padding:10px 20px;
			position:relative;
		  
	  }
	}
	.titleTrack {
	  text-align:left;
		padding:5px 10px;
		float:left;
	}
	@include ulGallery;
  @include galleryFooter;
  

  &.audio-kind {
    ul{
      li{
        width: 250px;
        height: 140px;
        margin: 0 20px 20px 0;
      }
    }
  }
  
  .audioInGalleryPopUp {
    display:none;
    background-color:#fff;
    color: #666;
    max-height: 420px;
    max-width: 420px;
    img{
      max-height: 420px;
      max-width: 420px;
    }
    .caption{
     margin:0;
     padding:0;
    }
    a.aggiungiImgButton{
      outline:none;
    }
  }

}


