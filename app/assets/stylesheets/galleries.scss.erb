.image_gallery {

  background-color: black;
  height: 590px;
  width: 900px;
  display:block;
  .gallery-header{
    display:block;
    padding: 20px;
    width: 860px;
    h3{
      color: #666;
      img{
        vertical-align: middle;
      }
    }
  }

  ul {
    padding: 0;
    margin:0;
    list-style:none;
    .scroll-pane{
      margin:20px 0 0 20px;
      padding:0;
      width: 860px;
      height: 470px;
      li{
        float:left; 
        width: 115px;
        margin: 0 5px 5px 0;
      }
    }
  }
  
  .gallery-footer{
    display:block;
    padding: 10px 20px;
    width: 865px;
    color: #fff;
  }
  
  .imageInGalleryPopUp {
    display:none;
    background-color:#fff;
    color: #666;
    max-height: 420px;
    max-width: 420px;
    img{
      max-height: 420px;
      max-width: 420px;
    }
    .caption{
     margin:0;
     padding:0;
    }
    a.aggiungiImgButton{
      outline:none;
    }
  }
  
}


