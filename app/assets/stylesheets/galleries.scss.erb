@mixin headerGallery {
  display:block;
  padding: 20px;
  width: 860px;
  h3{
    color: #666;
    padding:5px 10px;
	}
}
@mixin ulGallery {
  ul {
    padding: 0;
    margin:0;
    list-style:none;
    .scroll-pane{
      margin:20px 0 0 20px;
      padding:0;
      width: 860px;
      height: 470px;
      li{
        float:left; 
        width: 115px;
        margin: 0 5px 5px 0;
      }
    }
  }
}

@mixin galleryFooter {
.gallery-footer{
    display:inline-block;
    padding: 10px 15px;
		float:right;
    width: 830px;
    color: #fff;
	}
}


.image_gallery {
  background-color: black;
  height: 590px;
  width: 900px;
  display:block;
  .gallery-header{
    @include headerGallery;
  }
  @include ulGallery;
  @include galleryFooter;
  
  
  
  .imageInGalleryPopUp {
    display:none;
    background-color:#fff;
    color: #666;
    max-height: 420px;
    max-width: 420px;
    img{
      max-height: 420px;
      max-width: 420px;
    }
    .caption{
     margin:0;
     padding:0;
    }
    a.aggiungiImgButton{
      outline:none;
    }
  }
}


.audio_gallery {
  outline:1px solid red; 
  background-color: black;
  height: 590px;
  width: 900px;
  display:block;
  .gallery-header{
    @include headerGallery;  
	}
  .audioTrackCompact {
	  width:840px;
		
		.audioTrackContent {
	    background-color:#4a4a4a;
		  padding:5px 10px;
			height:34px;
			margin-top:10px;
			&:hover {
			  cursor:pointer;
			}
			
			.infoTrack {
			  float:left; 
				padding:5px 10px;
				border-left:1px solid #2d2d2d;
				height:26px;
				a {
				  color:#fff;
				}
			}
			.addButtonContent {
			    float:left;
			    padding-left:10px;
			    
					.creaNuovoButton {
					  background-position: 0 -6em;
					  font-size: 0.4em;
            opacity: 0.3;
						&:hover {
						  background-position: -18em -6em;
						}
					}
			  } 
	  }
	  .audioTrackExpanded {
	    background-color:#3b3a3b;
		  text-align:left;
		  padding:10px 20px;
			
		  position:relative;
		  .exitButton {
		    background-position: 0 0;
			  position:absolute;
			  bottom:10px;
			  right:10px;
		  }
	  }
	}
	.titleTrack {
	  text-align:left;
		padding:5px 10px;
		float:left;
	}
	@include ulGallery;
  @include galleryFooter;
  

  &.audio-kind {
    ul{
      li{
        width: 250px;
        height: 140px;
        margin: 0 20px 20px 0;
      }
    }
  }
  
  .audioInGalleryPopUp {
    display:none;
    background-color:#fff;
    color: #666;
    max-height: 420px;
    max-width: 420px;
    img{
      max-height: 420px;
      max-width: 420px;
    }
    .caption{
     margin:0;
     padding:0;
    }
    a.aggiungiImgButton{
      outline:none;
    }
  }

}


