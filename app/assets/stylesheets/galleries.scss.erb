  .audioTrackCompact._enabled {
    
    width: 820px;
    
    .audioTrackContent {
      
      background-color: #4a4a4a;
      padding: 5px 10px;
      height: 34px;
      margin-top: 8px;
      
      &:hover {
        
        cursor: pointer;
        background-color: #403f3f;
        
      }
      
      .infoTrack {
        
        float: left;
        padding: 5px 10px;
        border-left: 1px solid #2d2d2d;
        height: 26px;
        
        a {
          
          color: #fff;
          
        }
        
      }
      
    }
    
