@mixin headerGallery {
  display:block;
  padding: 20px 0px 20px 40px;
  
  h3{
    color: #666;
    padding-top:18px;
		padding-right:15px;
	}
}
@mixin ulGallery {
  ul {
    padding: 0;
    margin:0;
    list-style:none;
    .scroll-pane{
      margin:50px 0 0 20px;
      padding-left:20px;
      width: 840px;
      height: 470px;
      li{
        float:left; 
        width: 115px;
        margin: 0 5px 5px 0;
      }
    }
  }
}

@mixin galleryFooter {
.gallery-footer{
    display:inline-block;
    padding: 15px 15px;
		float:right;
    /*width: 830px;*/
    color: #fff;
	}
}

@mixin buttonApri {
  $button-size: 3.5em;
  & {
    width: $button-size;
    height: $button-size;
    background-image: url(<%= asset_path 'icone-player.svg' %>);
    background-repeat: no-repeat;
    background-size: ($button-size*5) ($button-size*4);
    padding:0;
  }
	
  &:hover {
    cursor: pointer;
  }
  
  &.creaNuovoButton {
    background-position: (-$button-size*4) (-$button-size*2);
		opacity:0.3;
  }
  &.creaNuovoButton:hover {
    background-position: (-$button-size*4) 0;
		opacity:1;
  }
}

