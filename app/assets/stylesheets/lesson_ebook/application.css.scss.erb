<%# assets urls %>
<%= Erubis::Eruby.new( Rails.application.config.assets.stylesheets.paths.urls.read ).result binding() %>

<% SETTINGS['colors'].each do |key, value| %>
  $<%= key %>:<%= value['code'] %>;
  .color_<%= key %>{
    color: <%= value['code'] %>;
  }
  .background_color_<%= key %>{
    background-color: <%= value['code'] %>;
  }
<% end %>

@import 'variables';
@import 'mixins';
@import 'layouts/slides';
