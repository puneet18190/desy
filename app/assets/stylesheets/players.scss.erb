.audioPlayer .play {
  outline:1px solid red;
  width: 50px;
  height: 50px;
  float: left;
}

.audioPlayer .pause {
  background-color: red;
  width: 50px;
  height: 50px;
  float: left;
  display: none;
}

.audioPlayer {
  width: 100%;
	height:100%;
  background-color: transparent;
}

.audioSlider {
  float:left;
	width: 60%;
  background-color: #2d2e2d;
}

.audioSlider .ui-slider-handle {
  background-color: lime;
}

.sliderDisabler {
  position: relative;
  top: 180px;
  background-color: maroon;
  width: 300px;
  height: 50px;
  display: none;
}
.secondTime {
  width:70px;
	height:20px;
	color:#fff;
	float:left;
	text-align:center;
}