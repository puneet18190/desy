.audioPlayer .play {
  outline:1px solid red;
  width: 50px;
  height: 50px;
  float: left;
}

.audioPlayer .pause {
  background-color: red;
  width: 50px;
  height: 50px;
  float: left;
  display: none;
}

.audioPlayer {
  width: 100%;
  background-color: yellow;
	position:absolute;
	bottom:0px;
}

.audioSlider {
  position: relative;
  top: 5px;
  background-color: green;
}

.audioSlider .ui-slider-handle {
  background-color: lime;
}

.sliderDisabler {
  position: relative;
  top: 180px;
  background-color: maroon;
  width: 300px;
  height: 50px;
  display: none;
}
