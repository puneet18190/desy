@mixin buttonPlayer {
  $button-size: 2.5em;
  & {
    width: $button-size;
    height: $button-size;
    background-image: url(<%= asset_path 'icone-player.svg' %>);
    background-repeat: no-repeat;
    background-size: ($button-size*4) ($button-size*4);
    padding:0;
  }
	
  &:hover {
    cursor: pointer;
  }
  
  &.play {
    background-position: 0 (-$button-size*2);
		opacity:0.3;
  }
  &.play:hover {
    background-position: 0 0;
		opacity:1;
  }
  &.pause {
    background-position: (-$button-size*2) 0 ;
		opacity:1;
  }
  &.pause:hover {
    background-position: (-$button-size*2) (-$button-size*2);
		opacity:0.3;
  }
	&.fullScreen {
    background-position:  (-$button-size*3) (-$button-size*2);
		opacity:0.3;
  }
  &.fullScreen:hover {
    background-position: (-$button-size*3) 0;
		opacity:1;
		
  }
}
