@mixin buttonPlayer {
  $button-size: 2.5em;
  & {
    width: $button-size;
    height: $button-size;
    background-image: url(<%= asset_path 'icone-player.svg' %>);
    background-repeat: no-repeat;
    background-size: ($button-size*4) ($button-size*4);
    padding:0;
  }
	
  &:hover {
    cursor: pointer;
  }
  
  &.play {
    background-position: 0 (-$button-size*2);
		opacity:0.3;
  }
  &.play:hover {
    background-position: 0 0;
		opacity:1;
  }
  &.pause {
    background-position: (-$button-size*2) 0 ;
		opacity:1;
  }
  &.pause:hover {
    background-position: (-$button-size*2) (-$button-size*2);
		opacity:0.3;
  }
}
.audioPlayer {
  float:left;
  background-color: transparent;
	width: 99%;
	height:90%;
	outline:1px solid red;
	position:absolute;
	top:0;
	
}
.audioPlayer .play {
  @include buttonPlayer;
  float: left;
}
.audioPlayer .pause {
 @include buttonPlayer;
  float: left;
  display: none;
}

.audioSlider {
  float:left;
	width: 80%;
