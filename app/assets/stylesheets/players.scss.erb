.audioPlayer .play {
  background-color: blue;
  width: 50px;
  height: 50px;
  float: left;
}

.audioPlayer .pause {
  background-color: red;
  width: 50px;
  height: 50px;
  float: left;
  display: none;
}

.audioPlayer {
  width: 480px;
  height: 340px;
  float: left;
  background-color: yellow;
}

.audioSlider {
  position: relative;
  top: 180px;
  background-color: green;
}

.audioSlider .ui-slider-handle {
  background-color: lime;
}

.sliderDisabler {
  position: relative;
  top: 180px;
  background-color: maroon;
  width: 300px;
  height: 50px;
  display: none;
}
