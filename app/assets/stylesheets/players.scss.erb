$button-size: 2.4em;
@mixin buttonPlayer {
  & {
    width: $button-size;
    height: $button-size;
    background-image: url(<%= asset_path 'icone-player.svg' %>);
    background-repeat: no-repeat;
    background-size: ($button-size*5) ($button-size*4);
    padding:0;
  }
  
  &:hover {
    cursor: pointer;
  }
  
 
}

.audioPlayer {
  background-color: #3b3a3b;
  width: 95%;
  height:62%;
  
  display:inline-block;
    .sliderDisabler {
    position: absolute;
    top: 20px;
    left:130px;
    background-color: #000;
    opacity:0;
    width: 620px;
    height: 30px;
    display: none;
    z-index:5;
  }
}
.audioSlider {
  float:left;
  width: 75%;
  margin:10px 0px;
  background-color: #2d2e2d;
}

.audioSlider .ui-slider-handle {
  background-color: #43a848;
  top:-.2em;
  -webkit-border-radius: 50%;
  border-radius: 50%;
  border:3px solid #fff;
  width: 0.8em;
  height: 0.8em;
  cursor:pointer;
}
.audioSlider .ui-slider-range-min {
  background-color: #43a848;
  
}
.secondTime {
  width:10%;
  margin:10px 0 0 0;
  color:#fff;
  float:left;
  text-align:center;
  font-size:80%;
}

.videoPlayer {
  background-color: #3b3a3b;
  height:280px;
  position:relative;
  .sliderDisabler {
    position: absolute;
    bottom: 4%;
    left:10%;
    background-color: #000;
    opacity:0;
    width: 80%;
    height: 30px;
    z-index:5;
   
  }
}
.videoSlider, html.lesson-editor-layout .videoSlider{
  float:left;
  width: 65%;
  margin-top:10px;
  background-color: #2d2e2d;
  .sliderDisabler {
    position: absolute;
    top: 20px;
    left:20px;
    background-color: #000;
    opacity:0;
    width: 341px;
    height: 30px;
    
    z-index:5;
    border:1px solid red;
  }
}

.videoSlider .ui-slider-handle {
  background-color: #43a848;
  top:-.2em;
  -webkit-border-radius: 50%;
  border-radius: 50%;
  border:3px solid #fff;
  width: 0.9em;
  height: 0.9em;
  cursor:pointer;
}
.videoSlider .ui-slider-range-min {
  background-color: #43a848;
  
}
.play {
  @include buttonPlayer;
  background-position: 0 (-$button-size*2);
  opacity:0.3;
  float: left;
  &:hover {
    background-position: 0 0;
    opacity:1;
  }
}
.fullScreen {
  @include buttonPlayer;
  float: right;
  background-position:  (-$button-size*3) (-$button-size*2);
  opacity:0.3;
  margin-right:3px;
  &:hover {
    background-position: (-$button-size*3) 0;
    opacity:1;
  }
}
.pause {
 @include buttonPlayer;
  float: left;
  display: none;
  background-position: (-$button-size*2) 0 ;
  opacity:1;
  &:hover {
    background-position: (-$button-size*2) (-$button-size*2);
    opacity:0.3;
  }
}

.audio_title{
  display:none;
}

html.lesson-editor-layout .audio_title{
  display:block;
  position: absolute;
  top: 50px;
  left: 120px;
  width: 660px;
  text-align: center;
  height: 20px;
}