<%
  my_duration = (media_element.sti_type == 'Image' || extension == 'jpeg') ? '' : media_element.min_duration
  my_url = case extension
    when 'mp4'
      media_element.mp4_url
    when 'webm'
      media_element.webm_url
    when 'm4a'
      media_element.m4a_url
    when 'ogg'
      media_element.ogg_url
    when 'jpeg'
      media_element.url
  end
%>

<!-- TODO schorm metti anche altre possibili estensioni in my_url in caso Ã¨ immagine -->
<metadata>
  <lom>
    <general>
      <identifier>
        <catalog>URI</catalog>
        <entry><%= my_url %></entry> <!--  TODO schorm sistemare i metodi url con replace -->
      </identifier>
    </general>
    <technical>
      <format><%= media_element.sti_type.downcase %>/<%= extension %></format>
      <size><%= '123456' %></size> <!--  TODO schorm metodo size -->
      <location><%= my_url %></location> <!--  TODO schorm sistemare i metodi url con replace -->
      <%= my_duration %> <!-- TODO schorm riempi la duration con modello pagina 103, wrappalo dentro una tag apposita -->
    </technical>
  </lom>
</metadata>
