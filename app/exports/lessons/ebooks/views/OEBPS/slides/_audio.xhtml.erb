<%= 
  render_slide slide, 
               { loaded:             true                                                                       ,
                 url_type:           UrlTypes::EXPORT                                                           ,
                 show_documents:     false                                                                      ,
                 media_viewer_type:  MediaElement::ViewerTypes::SIMPLE                                          ,
                 slide_text_options: { math_images_path_relative_from_folder: math_images_archive_folder_name } }
-%>

<% if false %>

<% if audio = slide.media_elements_at -%>
  <audio controls="controls">
    <source src="<%= media_element_path(audio, :m4a) %>" type="audio/m4a"/>
    <source src="<%= media_element_path(audio, :ogg) %>" type="audio/ogg"/>
    <p><%= audio.title %></p>
    <p><%= audio.description %></p>
  </audio>
<% end -%>
<%= slide_content(slide) %>

<%= render partial: 'OEBPS/slides/documents.xhtml', locals: { documents: slide.documents } %>

<% end %>